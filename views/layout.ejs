<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= title ? `${title} | Phakisi Global` : 'Phakisi Global' %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" href="/favicon.ico" />

  <!-- ðŸŒ— Theme CSS -->
  <link rel="stylesheet" href="<%= themeCss || '/css/light.css' %>" />

  <!-- ðŸ§© Extra page-specific styles -->
  <%- typeof styles !== 'undefined' ? styles : '' %>
</head>

<body class="<%= themeCss.includes('dark') ? 'dark-theme' : 'light-theme' %>">

  <!-- âœ… Modern Responsive Navbar -->
  <%- include('partials/navbar', { 
    user: typeof user !== 'undefined' ? user : null,
    business: typeof business !== 'undefined' ? business : null,
    active: typeof active !== 'undefined' ? active : '',
    themeCss: typeof themeCss !== 'undefined' ? themeCss : '',
    nonce: typeof nonce !== 'undefined' ? nonce : ''
  }) %>

  <!-- âœ… Global Flash Messages -->
  <%- include('partials/massage', { 
    success: success || [], 
    error: error || [], 
    info: info || [], 
    warning: warning || [], 
    errors: errors || [] 
  }) %>

  <!-- âœ… Main Page Content -->
  <main class="page-content">
    <%- body %>
  </main>

  <!-- âœ… Footer -->
  <%- include('partials/footer') %>

  <!-- ðŸ§© Page-specific scripts -->
  <%- typeof scripts !== 'undefined' ? scripts : '' %>

  <!-- ðŸ›¡ï¸ CSP-safe inline setup -->
  <script nonce="<%= nonce %>">
    document.addEventListener("DOMContentLoaded", () => {
      console.log("âœ… Layout & Navbar loaded securely with CSP nonce");
    });
  </script>

  <!-- ðŸŽ¨ Layout Styles -->
  <style>
    body {
      font-family: system-ui, -apple-system, "Segoe UI", Roboto, sans-serif;
      margin: 0;
      background: var(--bg, #fff);
      color: #111;
      transition: background 0.3s, color 0.3s;
    }
    .dark-theme {
      background: #0f172a;
      color: #e2e8f0;
    }
    .page-content {
      max-width: 1100px;
      margin: 1.5rem auto;
      padding: 0 1rem;
      min-height: calc(100vh - 160px);
    }
    footer {
      text-align: center;
      padding: 1rem;
      font-size: 0.9rem;
      color: #6b7280;
      border-top: 1px solid rgba(0,0,0,0.08);
    }
    .dark-theme footer {
      border-top: 1px solid rgba(255,255,255,0.1);
      color: #9ca3af;
    }
  </style>
</body>
</html>
