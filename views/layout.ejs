<!--layout.ejs-->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= title ? `${title} | MyApp` : 'MyApp' %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/favicon.ico" />

  <!-- Theme CSS -->
  <link rel="stylesheet" href="<%= themeCss || '/css/main.css' %>">

  <!-- Extra page-specific styles -->
  <%- typeof styles !== 'undefined' ? styles : '' %>
</head>

<body>
  <!-- Navbar -->
  <%- include('partials/navbar', { user: user, active: active }) %>

  <!-- Flash messages -->
  <%- include('partials/massage', { success: success, error: error, info: info, warning: warning, errors: errors }) %>

  <!-- Page content -->
  <main style="max-width:1100px; margin:1.25rem auto; padding:0 1rem;">
    <%- body %>
  </main>

  <!-- Footer -->
  <%- include('partials/footer') %>

  <!-- Main JS -->
  <script src="/js/main.js" defer></script>

  <!-- Extra page-specific scripts -->
  <%- typeof scripts !== 'undefined' ? scripts : '' %>
</body>
</html>
