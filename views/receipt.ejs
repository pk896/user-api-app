    --text: var(--black);
    --muted: #64748B;
    --card: #FFFFFF;
    --border: #D1FAE5;
    --radius: 12px;
    --shadow: 0 2px 8px rgba(34, 197, 94, 0.08);
    --space-xs: 8px;
    --space-sm: 12px;
    --space-md: 16px;
    --space-lg: 20px;
    
    /* Typography */
    --font-xs: 12px;
    --font-sm: 13px;
    --font-base: 14px;
    --font-md: 15px;
    --font-lg: 16px;
  }

