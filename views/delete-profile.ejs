  .step-content-header h3 {
    font-size: 1.125rem;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
  }

  .step-content-header p {
    color: var(--text-secondary);
    font-size: 0.875rem;
    line-height: 1.5;
  }

