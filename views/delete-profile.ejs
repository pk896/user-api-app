const pageScripts = `
  document.addEventListener('DOMContentLoaded', function() {
    // State
    let currentStep = 1;
    let passwordVerified = false;
    
    // Elements
    const step1Checkbox = document.getElementById('understandCheckbox');
    const step1NextBtn = document.getElementById('step1Next');
    
    const step2Password = document.getElementById('password');
    const step2ConfirmText = document.getElementById('confirmText');
    const step2PasswordError = document.getElementById('passwordError');
    const step2ConfirmError = document.getElementById('confirmError');
    const step2BackBtn = document.getElementById('step2Back');
    const step2NextBtn = document.getElementById('step2Next');
    
    const step3FinalCheckbox = document.getElementById('finalCheckbox');
    const step3BackBtn = document.getElementById('step3Back');
    const deleteBtn = document.getElementById('deleteAccountBtn');
    
    const deleteForm = document.getElementById('deleteForm');
    const finalPassword = document.getElementById('finalPassword');
    
    // Step indicators
    const step1Indicator = document.getElementById('step1-indicator');
    const step2Indicator = document.getElementById('step2-indicator');
    const step3Indicator = document.getElementById('step3-indicator');
    
    // Initialize
    updateStepDisplay();
    
    // Step 1: Initial Confirmation
    if (step1Checkbox) {
      step1Checkbox.addEventListener('change', function() {
        step1NextBtn.disabled = !this.checked;
      });
    }
    
    if (step1NextBtn) {
      step1NextBtn.addEventListener('click', function() {
        if (!step1Checkbox.checked) return;
        currentStep = 2;
        updateStepDisplay();
      });
    }
    
    // Step 2: Verification
    if (step2Password && step2ConfirmText) {
      step2Password.addEventListener('input', validateStep2);
      step2ConfirmText.addEventListener('input', validateStep2);
    }
    
    if (step2BackBtn) {
      step2BackBtn.addEventListener('click', function() {
        currentStep = 1;
        updateStepDisplay();
      });
    }
    
    if (step2NextBtn) {
      step2NextBtn.addEventListener('click', function() {
        if (!validateStep2()) return;
        
        // Simple validation (replace with actual API call)
        if (step2Password.value.length < 6) {
          showError(step2PasswordError, 'Password must be at least 6 characters');
          step2Password.classList.add('error');
          return;
        }
        
        if (step2ConfirmText.value !== 'DELETE MY ACCOUNT') {
          showError(step2ConfirmError, 'Please type exactly: DELETE MY ACCOUNT');
          step2ConfirmText.classList.add('error');
          return;
        }
        
        // Store password for final submission
        if (finalPassword) {
          finalPassword.value = step2Password.value;
        }
        
        passwordVerified = true;
        currentStep = 3;
        updateStepDisplay();
      });
    }
    
    // Step 3: Final Confirmation
    if (step3FinalCheckbox) {
      step3FinalCheckbox.addEventListener('change', function() {
        deleteBtn.disabled = !this.checked;
      });
    }
    
    if (step3BackBtn) {
      step3BackBtn.addEventListener('click', function() {
        currentStep = 2;
        updateStepDisplay();
      });
    }
    
    if (deleteBtn) {
      deleteBtn.addEventListener('click', function() {
        if (!step3FinalCheckbox.checked) return;
        
        // Final confirmation
        if (confirm('⚠️ FINAL WARNING: This action is permanent and cannot be undone. Are you absolutely sure?')) {
          // Show loading state
          deleteBtn.disabled = true;
          deleteBtn.innerHTML = 'Deleting...';
          
          // Submit form after short delay
          setTimeout(() => {
            if (deleteForm) {
              deleteForm.submit();
            }
          }, 1000);
        }
      });
    }
    
    // Helper Functions
    function updateStepDisplay() {
      // Update step indicators
      [step1Indicator, step2Indicator, step3Indicator].forEach((el, index) => {
        if (el) {
          el.className = 'step-item';
          if (index + 1 === currentStep) {
            el.classList.add('active');
          } else if (index + 1 < currentStep) {
            el.classList.add('completed');
          }
        }
      });
      
      // Show active step content
      for (let i = 1; i <= 3; i++) {
        const content = document.getElementById('step' + i + '-content');
        if (content) {
          if (i === currentStep) {
            content.classList.add('active');
          } else {
            content.classList.remove('active');
          }
        }
      }
      
      // Scroll to top
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }
    
    function validateStep2() {
      const hasPassword = step2Password.value.trim().length > 0;
      const hasConfirmText = step2ConfirmText.value.trim().length > 0;
      
      // Clear errors
      hideError(step2PasswordError);
      hideError(step2ConfirmError);
      step2Password.classList.remove('error');
      step2ConfirmText.classList.remove('error');
      
      // Enable/disable button
      step2NextBtn.disabled = !(hasPassword && hasConfirmText);
      
      return hasPassword && hasConfirmText;
    }
    
    function showError(element, message) {
      if (element) {
        element.textContent = message;
        element.classList.add('show');
      }
    }
    
    function hideError(element) {
      if (element) {
        element.classList.remove('show');
      }
    }
    
    // Prevent accidental navigation
    window.addEventListener('beforeunload', function(e) {
      if (currentStep > 1) {
        e.preventDefault();
        e.returnValue = 'You have unsaved changes. Are you sure you want to leave?';
      }
    });
  });
`;
