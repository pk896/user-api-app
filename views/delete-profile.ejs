<!-- ✅ Main Content -->
<div class="delete-container">
  <div class="delete-card">
    <!-- Header -->
    <div class="delete-header">
      <div class="warning-icon">⚠️</div>
      <h1 class="delete-title">Delete Business Account</h1>
      <p class="delete-subtitle">Account: <span class="business-name"><%= business.name %></span></p>
    </div>

    <!-- Steps Progress -->
    <div class="steps-container">
      <div class="step-item active" id="step1-indicator">
        <div class="step-number">1</div>
        <div class="step-content">
          <div class="step-title">Initial Confirmation</div>
          <div class="step-description">Acknowledge permanent deletion</div>
        </div>
      </div>
      
      <div class="step-item" id="step2-indicator">
        <div class="step-number">2</div>
        <div class="step-content">
          <div class="step-title">Identity Verification</div>
          <div class="step-description">Verify your password</div>
        </div>
      </div>
      
      <div class="step-item" id="step3-indicator">
        <div class="step-number">3</div>
        <div class="step-content">
          <div class="step-title">Final Confirmation</div>
          <div class="step-description">Confirm deletion</div>
        </div>
      </div>
    </div>

    <!-- Step 1 Content -->
    <div class="step-content-area active" id="step1-content">
      <div class="step-content-header">
        <h3>Are you absolutely sure?</h3>
        <p>This will permanently delete your business account <strong class="business-name"><%= business.name %></strong> and all associated data.</p>
      </div>

      <div class="checkbox-group">
        <input type="checkbox" id="understandCheckbox" class="confirmation-checkbox">
        <label for="understandCheckbox">
          I understand that this action is irreversible and will delete all my business data permanently.
        </label>
      </div>

      <div class="buttons-row">
        <a href="/business/profile" class="btn btn-outline">Cancel</a>
        <button type="button" class="btn btn-primary" id="step1Next" disabled>Continue to Verification</button>
      </div>
    </div>

    <!-- Step 2 Content -->
    <div class="step-content-area" id="step2-content">
      <div class="step-content-header">
        <h3>Verify Your Identity</h3>
        <p>For security purposes, please verify your identity to continue with account deletion.</p>
      </div>

      <div class="form-group">
        <label for="password" class="form-label">Current Password</label>
        <input type="password" id="password" class="form-input" placeholder="Enter your account password" required>
        <div class="error-message" id="passwordError"></div>
      </div>

      <div class="form-group">
        <label for="confirmText" class="form-label">Confirmation Text</label>
        <input type="text" id="confirmText" class="form-input" placeholder="Type: DELETE MY ACCOUNT" required>
        <div class="error-message" id="confirmError"></div>
      </div>

      <div class="buttons-row">
        <button type="button" class="btn btn-outline" id="step2Back">Back</button>
        <button type="button" class="btn btn-primary" id="step2Next" disabled>Continue to Final Step</button>
      </div>
    </div>

    <!-- Step 3 Content -->
    <div class="step-content-area" id="step3-content">
      <div class="step-content-header">
        <h3>Final Confirmation</h3>
        <p>This is your last chance to cancel. Once confirmed, deletion cannot be reversed.</p>
      </div>

      <div class="warning-list">
        <h4>⚠️ What will be deleted:</h4>
        <ul>
          <li>Business profile and all settings</li>
          <li>Customer data and records</li>
          <li>Transaction history</li>
          <li>All uploaded documents</li>
          <li>API keys and integrations</li>
        </ul>
      </div>

      <div class="form-group">
        <label for="finalEmail" class="form-label">Email Confirmation</label>
        <input type="email" id="finalEmail" class="form-input" value="<%= business.email %>" readonly>
      </div>

      <div class="checkbox-group">
        <input type="checkbox" id="finalCheckbox" class="confirmation-checkbox">
        <label for="finalCheckbox">
          I confirm that I want to permanently delete my account and understand this action cannot be undone.
        </label>
      </div>

      <div class="buttons-row">
        <button type="button" class="btn btn-outline" id="step3Back">Back</button>
        <button type="button" class="btn btn-danger" id="deleteAccountBtn" disabled>Permanently Delete Account</button>
      </div>
    </div>

    <!-- Footer -->
    <div class="delete-footer">
      <p>Need help? <a href="/support">Contact Support</a> • © <%= new Date().getFullYear() %> Unicoporate.com</p>
    </div>
  </div>
</div>

<!-- Hidden Form for Final Submission -->
<form id="deleteForm" action="/business/profile/delete" method="POST" style="display: none;">
  <input type="hidden" name="password" id="finalPassword">
  <input type="hidden" name="verificationToken" value="<%= verificationToken || '' %>">
</form>

