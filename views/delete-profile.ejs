<!-- views/delete-profile.ejs -->
<h1 class="page-title">‚ö†Ô∏è Delete Business Account</h1>

<!-- Flash Messages -->
<% if (success && success.length > 0) { %>
  <div class="flash flash-success"><%= success %></div>
<% } %>
<% if (error && error.length > 0) { %>
  <div class="flash flash-error"><%= error %></div>
<% } %>

<div class="delete-wrapper <%= themeCss.includes('dark') ? 'dark-theme' : 'light-theme' %>">
  <div class="delete-card">
    <div class="warning-icon">üóëÔ∏è</div>
    <h2>Delete Account for <%= business.name %>?</h2>
    <p>
      This action <strong>cannot be undone</strong>.  
      To confirm, please type <strong>DELETE</strong> below.
    </p>

    <form id="deleteForm" action="/business/profile/delete" method="POST" class="delete-form">
      <input 
        type="text" 
        id="confirmInput" 
        placeholder="Type DELETE to confirm" 
        class="confirm-input"
        required
      />

      <button type="submit" id="deleteBtn" class="btn danger" disabled>
        üö® Yes, Delete My Account
      </button>
      <a href="/business/profile" class="btn cancel">‚¨Ö Cancel</a>
    </form>
  </div>
</div>

<!-- ‚úÖ Styles -->
<style>
  :root {
    --danger: #dc2626;
    --danger-dark: #b91c1c;
    --gray: #6b7280;
    --light-bg: #f9fafb;
  }

  body {
    font-family: "Inter", system-ui, sans-serif;
    margin: 0;
    padding: 0;
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(145deg, #fff1f2, #ffe4e6, #fff);
    background-size: 300% 300%;
    animation: waveMove 8s ease-in-out infinite;
  }

  @keyframes waveMove {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .dark-theme body {
    background: linear-gradient(145deg, #0f172a, #1e293b, #111827);
    animation: none;
  }

  .page-title {
    display: none;
  }

  .delete-wrapper {
    width: 100%;
    padding: 1rem;
  }

  .delete-card {
    max-width: 480px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
    border-radius: 1rem;
    background: rgba(255,255,255,0.9);
    box-shadow: 0 4px 25px rgba(220, 38, 38, 0.15);
    text-align: center;
    backdrop-filter: blur(10px);
  }

  .dark-theme .delete-card {
    background: rgba(31,41,55,0.85);
    color: #f9fafb;
  }

  .warning-icon {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    animation: pulseGlow 2s infinite;
  }

  @keyframes pulseGlow {
    0%, 100% { text-shadow: 0 0 5px rgba(220,38,38,0.5); }
    50% { text-shadow: 0 0 20px rgba(220,38,38,0.8); }
  }

  h2 {
    font-size: 1.3rem;
    margin-bottom: 0.75rem;
  }

  p {
    font-size: 0.95rem;
    color: #374151;
    margin-bottom: 1.5rem;
  }

  .dark-theme p {
    color: #d1d5db;
  }

  .delete-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .confirm-input {
    padding: 0.7rem;
    border-radius: 8px;
    border: 2px solid #ccc;
    font-size: 1rem;
    text-align: center;
    transition: border 0.2s ease, box-shadow 0.3s ease;
  }

  .confirm-input:focus {
    outline: none;
    border-color: var(--danger);
    box-shadow: 0 0 8px rgba(220,38,38,0.4);
  }

  .btn {
    padding: 0.7rem 1.2rem;
    border-radius: 8px;
    font-weight: 600;
    border: none;
    cursor: pointer;
    transition: transform 0.2s ease, background 0.3s ease;
    text-decoration: none;
    text-align: center;
  }

  .btn.danger {
    background: var(--danger);
    color: #fff;
    opacity: 0.6;
    cursor: not-allowed;
  }
  .btn.danger.active {
    opacity: 1;
    cursor: pointer;
  }
  .btn.danger:hover.active {
    background: var(--danger-dark);
    transform: scale(1.05);
  }

  .btn.cancel {
    background: #f3f4f6;
    color: #111;
  }
  .btn.cancel:hover {
    background: #e5e7eb;
    transform: scale(1.05);
  }

  .flash {
    max-width: 480px;
    margin: 1rem auto;
    padding: 0.6rem;
    border-radius: 8px;
    text-align: center;
    font-weight: 600;
  }
  .flash-success {
    background: #dcfce7;
    color: #166534;
  }
  .flash-error {
    background: #fee2e2;
    color: #991b1b;
  }

  /* ‚úÖ Mobile */
  @media (max-width: 600px) {
    .delete-card {
      padding: 1.2rem;
      font-size: 0.9rem;
    }
    .btn {
      width: 100%;
      text-align: center;
      padding: 0.8rem;
    }
  }
</style>

<!-- ‚úÖ Script -->
<script nonce="<%= nonce %>">
document.addEventListener("DOMContentLoaded", () => {
  const input = document.getElementById("confirmInput");
  const deleteBtn = document.getElementById("deleteBtn");

  if (!input || !deleteBtn) return;

  input.addEventListener("input", () => {
    if (input.value.trim().toUpperCase() === "DELETE") {
      deleteBtn.disabled = false;
      deleteBtn.classList.add("active");
    } else {
      deleteBtn.disabled = true;
      deleteBtn.classList.remove("active");
    }
  });
});
</script>
