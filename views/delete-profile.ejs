const pageStyles = `
  /* ✅ Brand Colors with Green as Primary */
  :root {
    --brand-blue: #2563EB;
    --brand-purple: #7C3AED;
    --brand-green: #22C55E;
    --brand-black: #0F172A;
    
    --danger: #dc2626;
    --danger-dark: #b91c1c;
    --danger-light: #fef2f2;
    
    --gray-50: #f8fafc;
    --gray-100: #f1f5f9;
    --gray-200: #e2e8f0;
    --gray-500: #64748b;
    --gray-700: #334155;
    --gray-800: #1e293b;
    
