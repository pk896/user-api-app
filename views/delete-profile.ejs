  }

  /* ✅ Checkboxes */
  .checkbox-group {
    display: flex;
    align-items: flex-start;
    gap: 0.625rem;
    padding: 0.75rem;
    background: var(--danger-light);
    border-radius: var(--radius-md);
    border: 1px solid rgba(220, 38, 38, 0.2);
    margin-bottom: 1rem;
