<!-- views/admin/messages.ejs -->
<section class="messages-dashboard">
  <h1 class="page-title">üì® Contact Messages (Last 24 Hours)</h1>

  <!-- ‚úÖ Flash Messages -->
  <% if (success && success.length > 0) { %>
    <div class="flash flash-success">‚úÖ <%= success %></div>
  <% } %>
  <% if (error && error.length > 0) { %>
    <div class="flash flash-error">‚ùå <%= error %></div>
  <% } %>

  <% if (!messages || messages.length === 0) { %>
    <p class="no-messages">No messages received yet.</p>
  <% } else { %>
    <table class="message-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Message</th>
          <th>Received At</th>
        </tr>
      </thead>
      <tbody>
        <% messages.forEach(m => { %>
          <tr>
            <td><%= m.name %></td>
            <td><a href="mailto:<%= m.email %>"><%= m.email %></a></td>
            <td class="message-text"><%= m.message %></td>
            <td><%= new Date(m.createdAt).toLocaleString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</section>

<style>
  .messages-dashboard {
    padding: 1.5rem;
  }
  .page-title {
    font-size: 1.8rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .flash {
    margin-bottom: 1rem;
    padding: .8rem 1rem;
    border-radius: .5rem;
    font-weight: 500;
    animation: fadeIn .3s ease;
  }
  .flash-success {
    background: #dcfce7;
    color: #166534;
    border: 1px solid #bbf7d0;
  }
  .flash-error {
    background: #fee2e2;
    color: #991b1b;
    border: 1px solid #fecaca;
  }
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-5px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .message-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 1rem;
    box-shadow: 0 2px 6px rgba(0,0,0,0.05);
  }
  .message-table th, .message-table td {
    border: 1px solid #e5e7eb;
    padding: .75rem;
    text-align: left;
    vertical-align: top;
  }
  .message-table th {
    background: #f3f4f6;
  }
  .message-table td.message-text {
    max-width: 400px;
    white-space: pre-wrap;
  }
  .dark-theme .message-table th {
    background: #1f2937;
    color: #f9fafb;
  }
  .dark-theme .message-table td {
    border-color: #374151;
    color: #e5e7eb;
  }
  .no-messages {
    font-style: italic;
    color: #6b7280;
    margin-top: 1rem;
  }
</style>

<script nonce="<%= nonce %>">
  document.addEventListener("DOMContentLoaded", () => {
    console.log("üì® Admin messages page loaded with CSP nonce ‚úÖ");
  });
</script>
