  .action-buttons {
    margin-bottom: 2rem;
  }

  .resend-form {
    margin-bottom: 1rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 1.5rem;
    font-size: 0.9375rem;
    font-weight: 600;
    border: none;
