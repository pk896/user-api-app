<section class="auth-page mini">
  <h1 class="page-title">üîê Forgot business password</h1>
  <p class="page-subtitle">
    Enter the email you used for your business account. We‚Äôll send a reset link.
  </p>

  <% (success || []).forEach(msg => { %>
    <div class="flash flash-success">‚úÖ <%= msg %></div>
  <% }) %>
  <% (error || []).forEach(msg => { %>
    <div class="flash flash-error">‚ùå <%= msg %></div>
  <% }) %>

  <form action="/business/password/forgot" method="post" class="auth-form card">
    <label>Email address
      <input
        type="email"
        name="email"
        required
        autocomplete="email"
        placeholder="you@company.com"
        inputmode="email"
      />
    </label>

    <button type="submit" class="btn xs primary wfull">Send reset link</button>
  </form>

  <p class="auth-switch">
    <a href="/business/login">Back to login</a>
  </p>
</section>

