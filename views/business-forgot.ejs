<div class="password-reset-page">
  <!-- Background Decoration -->
  <div class="background-decoration">
    <div class="decoration-circle circle-1"></div>
    <div class="decoration-circle circle-2"></div>
    <div class="decoration-circle circle-3"></div>
  </div>

  <!-- Main Content -->
  <div class="reset-container">
    <!-- Left Side - Information -->
    <div class="reset-info">
      <div class="info-content">
        <div class="brand-header">
          <div class="brand-logo">
            <svg viewBox="0 0 24 24" width="32" height="32">
              <path fill="currentColor" d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
            </svg>
          </div>
          <h1 class="brand-name">Unicoporate</h1>
        </div>
        
        <div class="info-welcome">
          <h2>Reset Your Password</h2>
          <p>We'll help you regain access to your business account securely.</p>
        </div>

        <div class="reset-steps">
          <div class="step">
            <div class="step-number">1</div>
            <div class="step-content">
              <h4>Enter Email</h4>
              <p>Provide your business email address</p>
            </div>
          </div>
          
          <div class="step">
            <div class="step-number">2</div>
            <div class="step-content">
              <h4>Check Inbox</h4>
              <p>Look for our password reset email</p>
            </div>
          </div>
          
          <div class="step">
            <div class="step-number">3</div>
            <div class="step-content">
              <h4>Set New Password</h4>
              <p>Create a strong new password</p>
            </div>
          </div>
        </div>

        <div class="security-tips">
          <h3>Security Tips</h3>
          <ul class="tips-list">
            <li>
              <svg viewBox="0 0 24 24" width="16" height="16">
                <path fill="currentColor" d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
              </svg>
              <span>Check your spam/junk folder</span>
            </li>
            <li>
              <svg viewBox="0 0 24 24" width="16" height="16">
                <path fill="currentColor" d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
              </svg>
              <span>Reset link expires in 1 hour</span>
            </li>
            <li>
              <svg viewBox="0 0 24 24" width="16" height="16">
                <path fill="currentColor" d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
              </svg>
              <span>Use a unique, strong password</span>
            </li>
          </ul>
        </div>

        <div class="info-footer">
          <p>Remember your password?</p>
          <a href="/business/login" class="btn-login">
            <svg viewBox="0 0 24 24" width="18" height="18">
              <path fill="currentColor" d="M10 17v-3H3v-4h7V7l5 5-5 5z"/>
            </svg>
            Back to Login
          </a>
        </div>
      </div>
    </div>

    <!-- Right Side - Reset Form -->
    <div class="reset-form-container <%= themeCss && themeCss.includes('dark') ? 'dark-theme' : 'light-theme' %>">
      <div class="form-header">
        <h2>Reset Password</h2>
        <p class="form-subtitle">Enter your business email to receive a reset link</p>
      </div>

      <!-- Flash Messages -->
      <div class="flash-container">
        <% (success || []).forEach(msg => { %>
          <div class="flash flash-success">
            <svg class="flash-icon" viewBox="0 0 24 24" width="20" height="20">
              <path fill="currentColor" d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
            </svg>
            <div class="flash-content">
              <strong>Success!</strong>
              <p><%= msg %></p>
            </div>
          </div>
        <% }) %>
        <% (error || []).forEach(msg => { %>
          <div class="flash flash-error">
            <svg class="flash-icon" viewBox="0 0 24 24" width="20" height="20">
              <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
            </svg>
            <div class="flash-content">
              <strong>Error!</strong>
              <p><%= msg %></p>
            </div>
          </div>
        <% }) %>
      </div>

      <form 
        action="/business/password/forgot" 
        method="post" 
        class="reset-form"
        id="resetForm"
        autocomplete="on"
        novalidate
      >
        <!-- Email Field -->
        <div class="form-group">
          <label for="email" class="form-label">
            Business Email
            <span class="required">*</span>
          </label>
          <div class="input-with-icon">
            <svg class="input-icon" viewBox="0 0 24 24" width="20" height="20">
              <path fill="currentColor" d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 14H4V8l8 5 8-5v10zm-8-7L4 6h16l-8 5z"/>
            </svg>
            <input
              id="email"
              type="email"
              name="email"
              required
              autocomplete="email"
              placeholder="admin@company.com"
              inputmode="email"
              class="form-input"
            />
          </div>
          <div class="form-hint">Enter the email associated with your business account</div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary" id="submitBtn">
          <svg viewBox="0 0 24 24" width="20" height="20">
            <path fill="currentColor" d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/>
          </svg>
          Send Reset Link
        </button>

        <!-- Additional Options -->
        <div class="form-options">
          <div class="option-item">
            <svg viewBox="0 0 24 24" width="18" height="18">
              <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
            </svg>
            <p>Having trouble? <a href="/business/support">Contact Support</a></p>
          </div>
          
          <div class="option-item">
            <svg viewBox="0 0 24 24" width="18" height="18">
              <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
            <p>Check your spam folder if you don't see the email</p>
          </div>
        </div>
      </form>

      <!-- Success State (hidden by default) -->
      <div class="success-state" id="successState" style="display: none;">
        <div class="success-icon">
          <svg viewBox="0 0 24 24" width="64" height="64">
            <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
          </svg>
        </div>
        <h3>Check Your Email!</h3>
        <p class="success-message">
          We've sent a password reset link to <strong id="sentEmail"></strong>.
          Please check your inbox and follow the instructions.
        </p>
        <div class="success-actions">
          <button type="button" class="btn btn-secondary" id="sendAgain">
            <svg viewBox="0 0 24 24" width="18" height="18">
              <path fill="currentColor" d="M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z"/>
            </svg>
            Send Again
          </button>
          <a href="https://gmail.com" target="_blank" class="btn btn-primary">
            <svg viewBox="0 0 24 24" width="18" height="18">
              <path fill="currentColor" d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 14H4V8l8 5 8-5v10zm-8-7L4 6h16l-8 5z"/>
            </svg>
            Open Gmail
          </a>
        </div>
        <div class="success-note">
          <svg viewBox="0 0 24 24" width="16" height="16">
            <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
          </svg>
          <p>Didn't receive the email? Check spam folder or <a href="/business/support">contact support</a></p>
        </div>
      </div>
    </div>
  </div>
</div>

