      `;
      document.head.appendChild(style);
      
      const flashContainer = document.querySelector('.flash-container');
      if (flashContainer) {
        flashContainer.insertBefore(infoDiv, flashContainer.firstChild);
        
        // Remove after 3 seconds
        setTimeout(() => {
          infoDiv.remove();
        }, 3000);
      }
    }
    
    // Auto-focus email input
    if (emailInput) {
      emailInput.focus();
      
      // Check if there's a previously attempted email in localStorage
      const savedEmail = localStorage.getItem('resetEmailAttempt');
      if (savedEmail) {
        emailInput.value = savedEmail;
      }
      
      // Save email on input for better UX
      emailInput.addEventListener('blur', function() {
        if (this.value) {
          localStorage.setItem('resetEmailAttempt', this.value);
        }
      });
    }

