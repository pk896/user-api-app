<script nonce="<%= nonce %>">
  document.addEventListener("DOMContentLoaded", () => {
    console.log("✅ Password reset page loaded with CSP nonce");

    const form = document.getElementById('resetForm');
    const submitBtn = document.getElementById('submitBtn');
    const successState = document.getElementById('successState');
    const sentEmail = document.getElementById('sentEmail');
    const sendAgainBtn = document.getElementById('sendAgain');
    const emailInput = document.getElementById('email');

    if (form && submitBtn) {
    form.addEventListener('submit', function (e) {
      const email = emailInput.value.trim();

      // --- Validate email on the client ---
      if (!email) {
        e.preventDefault();
        showError('Email is required');
        emailInput.style.borderColor = '#EF4444';
        emailInput.style.animation = 'shake 0.5s ease';
        setTimeout(() => (emailInput.style.animation = ''), 500);
        return;
      }

      if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
        e.preventDefault();
        showError('Please enter a valid email address');
        emailInput.style.borderColor = '#EF4444';
        emailInput.style.animation = 'shake 0.5s ease';
        setTimeout(() => (emailInput.style.animation = ''), 500);
        return;
      }

      // ✅ Email is valid – let the request go to the server
      // (either normal submit or manual submit with loading state)

      // Optional: show loading state but STILL submit to backend
      const originalText = submitBtn.innerHTML;
      submitBtn.innerHTML = `
        <svg class="animate-spin" viewBox="0 0 24 24" width="20" height="20" style="animation: spin 1s linear infinite;">
          <path fill="currentColor" d="M12 4V1L8 5l4 4V6c3.31 0 6 2.69 6 6 0 1.01-.25 1.97-.7 2.8l1.46 1.46C19.54 15.03 20 13.57 20 12c0-4.42-3.58-8-8-8zm0 14c-3.31 0-6-2.69-6-6 0-1.01.25-1.97.7-2.8L5.24 7.74C4.46 8.97 4 10.43 4 12c0 4.42 3.58 8 8 8v3l4-4-4-4v3z"/>
