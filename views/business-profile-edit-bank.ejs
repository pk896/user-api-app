<% const NONCE = typeof nonce !== 'undefined' ? nonce : '' %>
<% const b = business || {} %>
<% const bank = (b.bankDetails || {}) %>

<section class="bank-edit-page">
  <div class="container">
    
    <!-- Page Header -->
    <div class="page-header" style="background: linear-gradient(135deg, #7C3AED, #8B5CF6);">
      <div class="header-content">
        <div class="header-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="white">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
          </svg>
        </div>
        <div class="header-text">
          <h1 class="page-title">Update Business Bank Details</h1>
          <p class="page-subtitle">Configure your payout information securely</p>
        </div>
      </div>
      <a href="/business/profile" class="back-btn" style="border-color: rgba(255,255,255,0.3); color: white;">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Profile
      </a>
    </div>

    <!-- Main Form Card -->
    <div class="form-container">
      <form class="bank-form" action="/business/profile/update-bank" method="POST" autocomplete="on">
        <!-- Form Header -->
        <div class="form-header" style="border-bottom-color: #7C3AED;">
          <div class="form-title">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#7C3AED">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            <h2>Bank Information</h2>
          </div>
          <span class="security-note" style="background: rgba(34, 197, 94, 0.1); color: #166534;">
            <svg width="14" height="14" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
            </svg>
            Encrypted & Secure
          </span>
        </div>

        <!-- Account Information Section -->
        <div class="form-section" style="border-color: rgba(37, 99, 235, 0.2);">
          <div class="section-header" style="color: #2563EB;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <h3>Account Holder Information</h3>
          </div>
          
          <div class="form-grid">
            <div class="form-group">
              <label for="accountHolderName" style="color: #2563EB;">
                <span class="label-icon">üë§</span>
                Account Holder Name
              </label>
              <input 
                type="text" 
                id="accountHolderName" 
                name="bankDetails.accountHolderName" 
                value="<%= bank.accountHolderName || '' %>"
                placeholder="Enter full name as on bank account"
                required
                style="border-color: rgba(37, 99, 235, 0.3);"
              >
              <div class="field-hint" style="color: #2563EB;">Must match your bank records exactly</div>
            </div>
          </div>
        </div>

        <!-- Bank Details Section -->
        <div class="form-section" style="border-color: rgba(124, 58, 237, 0.2);">
          <div class="section-header" style="color: #7C3AED;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
            </svg>
            <h3>Bank Account Details</h3>
          </div>
          
          <div class="form-grid">
            <div class="form-group">
              <label for="bankName" style="color: #7C3AED;">
                <span class="label-icon">üè¶</span>
                Bank Name
              </label>
              <select 
                id="bankName" 
                name="bankDetails.bankName" 
                style="border-color: rgba(124, 58, 237, 0.3); background: rgba(124, 58, 237, 0.05);"
              >
                <option value="">Select your bank</option>
                <option value="First National Bank" <%= bank.bankName === 'First National Bank' ? 'selected' : '' %>>First National Bank</option>
                <option value="Standard Bank" <%= bank.bankName === 'Standard Bank' ? 'selected' : '' %>>Standard Bank</option>
                <option value="Nedbank" <%= bank.bankName === 'Nedbank' ? 'selected' : '' %>>Nedbank</option>
                <option value="Absa Bank" <%= bank.bankName === 'Absa Bank' ? 'selected' : '' %>>Absa Bank</option>
                <option value="Capitec Bank" <%= bank.bankName === 'Capitec Bank' ? 'selected' : '' %>>Capitec Bank</option>
                <option value="Investec" <%= bank.bankName === 'Investec' ? 'selected' : '' %>>Investec</option>
                <option value="Other">Other Bank</option>
              </select>
            </div>

            <div class="form-group">
              <label for="accountNumber" style="color: #7C3AED;">
                <span class="label-icon">üî¢</span>
                Account Number
              </label>
              <input 
                type="text" 
                id="accountNumber" 
                name="bankDetails.accountNumber" 
                value="<%= bank.accountNumber || '' %>"
                placeholder="Enter your account number (e.g., 123456789)"
                pattern="[0-9]{8,12}"
                required
                style="border-color: rgba(124, 58, 237, 0.3);"
              >
              <div class="field-hint" style="color: #7C3AED;">8-12 digits only, no spaces</div>
            </div>

            <div class="form-group">
              <label for="branchCode" style="color: #7C3AED;">
                <span class="label-icon">üè¢</span>
                Branch Code
              </label>
              <input 
                type="text" 
                id="branchCode" 
                name="bankDetails.branchCode" 
                value="<%= bank.branchCode || '' %>"
                placeholder="Enter 6-digit branch code"
                pattern="[0-9]{6}"
                style="border-color: rgba(124, 58, 237, 0.3);"
              >
              <div class="field-hint" style="color: #7C3AED;">Usually 6 digits (e.g., 250655)</div>
            </div>

            <div class="form-group">
              <label for="accountType" style="color: #7C3AED;">
                <span class="label-icon">üí≥</span>
                Account Type
              </label>
              <select 
                id="accountType" 
                name="bankDetails.accountType" 
                style="border-color: rgba(124, 58, 237, 0.3); background: rgba(124, 58, 237, 0.05);"
              >
                <option value="">Select account type</option>
                <option value="savings" <%= bank.accountType === 'savings' ? 'selected' : '' %>>Savings Account</option>
                <option value="checking" <%= bank.accountType === 'checking' ? 'selected' : '' %>>Checking/Current Account</option>
                <option value="business" <%= bank.accountType === 'business' ? 'selected' : '' %>>Business Account</option>
                <option value="student" <%= bank.accountType === 'student' ? 'selected' : '' %>>Student Account</option>
              </select>
            </div>
          </div>
        </div>

        <!-- International Section -->
        <div class="form-section" style="border-color: rgba(34, 197, 94, 0.2);">
          <div class="section-header" style="color: #22C55E;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h3>International Banking Details (Optional)</h3>
          </div>
          
          <div class="form-grid">
            <div class="form-group">
              <label for="currency" style="color: #22C55E;">
                <span class="label-icon">üí∞</span>
                Currency
              </label>
              <select 
                id="currency" 
                name="bankDetails.currency" 
                style="border-color: rgba(34, 197, 94, 0.3); background: rgba(34, 197, 94, 0.05);"
              >
                <option value="">Select currency</option>
                <option value="ZAR" <%= bank.currency === 'ZAR' ? 'selected' : '' %>>ZAR - South African Rand</option>
                <option value="USD" <%= bank.currency === 'USD' ? 'selected' : '' %>>USD - US Dollar</option>
                <option value="EUR" <%= bank.currency === 'EUR' ? 'selected' : '' %>>EUR - Euro</option>
                <option value="GBP" <%= bank.currency === 'GBP' ? 'selected' : '' %>>GBP - British Pound</option>
                <option value="AUD" <%= bank.currency === 'AUD' ? 'selected' : '' %>>AUD - Australian Dollar</option>
              </select>
            </div>

            <div class="form-group">
              <label for="swiftCode" style="color: #22C55E;">
                <span class="label-icon">üåê</span>
                SWIFT/BIC Code
              </label>
              <input 
                type="text" 
                id="swiftCode" 
                name="bankDetails.swiftCode" 
                value="<%= bank.swiftCode || '' %>"
                placeholder="e.g., FIRNZAJJXXX"
                pattern="[A-Z]{6}[A-Z0-9]{2}([A-Z0-9]{3})?"
                style="border-color: rgba(34, 197, 94, 0.3);"
              >
              <div class="field-hint" style="color: #22C55E;">8 or 11 characters, no spaces</div>
            </div>

            <div class="form-group">
              <label for="iban" style="color: #22C55E;">
                <span class="label-icon">üèõÔ∏è</span>
                IBAN Number
              </label>
              <input 
                type="text" 
                id="iban" 
                name="bankDetails.iban" 
                value="<%= bank.iban || '' %>"
                placeholder="e.g., ZA1234567890123456789012"
                style="border-color: rgba(34, 197, 94, 0.3);"
              >
              <div class="field-hint" style="color: #22C55E;">International Bank Account Number</div>
            </div>
          </div>
        </div>

        <!-- Payout Method Section -->
        <div class="form-section" style="border-color: rgba(15, 23, 42, 0.2);">
          <div class="section-header" style="color: #0F172A;">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            <h3>Payout Preferences</h3>
          </div>
          
          <div class="form-group full-width">
            <label for="payoutMethod" style="color: #0F172A;">
              <span class="label-icon">üöÄ</span>
              Payout Method
            </label>
            <select 
              id="payoutMethod" 
              name="bankDetails.payoutMethod" 
              style="border-color: rgba(15, 23, 42, 0.3); background: rgba(15, 23, 42, 0.05);"
            >
              <option value="bank" <%= (bank.payoutMethod || 'bank') === 'bank' ? 'selected' : '' %>>Bank Transfer (Recommended)</option>
              <option value="paypal" <%= bank.payoutMethod === 'paypal' ? 'selected' : '' %>>PayPal</option>
              <option value="payoneer" <%= bank.payoutMethod === 'payoneer' ? 'selected' : '' %>>Payoneer</option>
              <option value="wise" <%= bank.payoutMethod === 'wise' ? 'selected' : '' %>>Wise</option>
              <option value="other" <%= bank.payoutMethod === 'other' ? 'selected' : '' %>>Other Payment Method</option>
            </select>
            <div class="field-hint" style="color: #0F172A;">Select your preferred payout method</div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="form-actions">
          <button type="submit" class="btn btn-primary" style="background: linear-gradient(135deg, #7C3AED, #8B5CF6);">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Save Bank Details
          </button>
          <a href="/business/profile" class="btn btn-outline" style="border-color: #7C3AED; color: #7C3AED;">
            Cancel
          </a>
        </div>

        <!-- Security Notice -->
        <div class="security-notice" style="background: rgba(15, 23, 42, 0.05); border-color: rgba(15, 23, 42, 0.1);">
          <svg width="18" height="18" viewBox="0 0 20 20" fill="currentColor" style="color: #7C3AED;">
            <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          <div>
            <strong>Your information is secure</strong>
            <p>All bank details are encrypted and stored securely. We never share your financial information with third parties.</p>
          </div>
        </div>
      </form>
    </div>

    <!-- Quick Links -->
    <div class="quick-links">
      <h3 class="links-title">Quick Actions</h3>
      <div class="links-grid">
        <a href="/business/profile/edit-details" class="link-card" style="background: linear-gradient(135deg, #2563EB, #3B82F6);">
          <div class="link-icon">üè¢</div>
          <div class="link-content">
            <h4>Edit Business Details</h4>
            <p>Update company information</p>
          </div>
          <div class="link-arrow">‚Üí</div>
        </a>
        
        <a href="/business/change-password" class="link-card" style="background: linear-gradient(135deg, #7C3AED, #8B5CF6);">
          <div class="link-icon">üîí</div>
          <div class="link-content">
            <h4>Change Password</h4>
            <p>Update security credentials</p>
          </div>
          <div class="link-arrow">‚Üí</div>
        </a>
        
        <a href="/business/profile/edit" class="link-card" style="background: linear-gradient(135deg, #22C55E, #10B981);">
          <div class="link-icon">‚öôÔ∏è</div>
          <div class="link-content">
            <h4>Advanced Settings</h4>
            <p>Full profile editor</p>
          </div>
          <div class="link-arrow">‚Üí</div>
        </a>
      </div>
    </div>

  </div>
</section>

