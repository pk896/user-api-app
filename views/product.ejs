<h1>Business Products Dashboard</h1>

<% if (success) { %>
  <div class="flash flash-success"><%= success %></div>
<% } %>
<% if (error) { %>
  <div class="flash flash-error"><%= error %></div>
<% } %>

<div class="products-container <%= themeCss.includes('dark') ? 'dark-theme' : 'light-theme' %>">
  <% if (!products || products.length === 0) { %>
    <p>No products found. Start by adding a new product!</p>
  <% } else { %>
    <% products.forEach(product => { %>
      <%- include('partials/product-card', { product }) %>
    <% }) %>
  <% } %>
</div>

