    max-width: 1000px;
    margin: 20px auto 0;
    text-align: center;
  }

  .ft-legal-links {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 12px;
  }

