  .ft-link:focus,
  .ft-brand-link:focus,
  .ft-legal-link:focus {
    outline: 2px solid var(--blue);
    outline-offset: 2px;
  }
</style>

<script nonce="<%= typeof nonce !== 'undefined' ? nonce : '' %>" defer>
document.addEventListener("DOMContentLoaded", () => {
  // Add current year to copyright if needed
  const copyrightElements = document.querySelectorAll('.ft-copyright');
  copyrightElements.forEach(el => {
    el.textContent = el.textContent.replace('YEAR', new Date().getFullYear());
  });

  // Add subtle animation to social icons on hover
  const socialLinks = document.querySelectorAll('.ft-social-link');
  socialLinks.forEach(link => {
    link.addEventListener('mouseenter', () => {
      const svg = link.querySelector('svg');
      if (svg) {
        svg.style.transform = 'scale(1.2)';
        svg.style.transition = 'transform 0.2s ease';
      }
    });
    
    link.addEventListener('mouseleave', () => {
      const svg = link.querySelector('svg');
      if (svg) {
        svg.style.transform = 'scale(1)';
      }
    });
  });

  // Track social link clicks for analytics (optional)
  socialLinks.forEach(link => {
    link.addEventListener('click', function(e) {
      const platform = this.getAttribute('aria-label');
      console.log(`Social link clicked: ${platform}`);
      
      // You can add analytics tracking here
      // Example: gtag('event', 'social_click', { platform: platform });
    });
  });

  // Add intersection observer for animation when footer comes into view
  const footer = document.querySelector('.ft');
  if (footer) {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.opacity = '1';
          entry.target.style.transform = 'translateY(0)';
        }
      });
    }, {
      threshold: 0.1
    });

    // Set initial state
    footer.style.opacity = '0';
    footer.style.transform = 'translateY(20px)';
    footer.style.transition = 'opacity 0.4s ease, transform 0.4s ease';

    observer.observe(footer);
  }

  // Theme switcher support (if your app has theme switching)
  const themeToggle = document.querySelector('[data-theme-toggle]');
  if (themeToggle) {
    themeToggle.addEventListener('click', () => {
      // Reapply theme classes after theme change
      setTimeout(() => {
        const ft = document.querySelector('.ft');
        if (document.body.classList.contains('dark-theme')) {
          ft.classList.add('dark-theme');
        } else {
          ft.classList.remove('dark-theme');
        }
      }, 100);
    });
  }
});
</script>