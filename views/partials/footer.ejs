<!-- üíÖ Styles -->
<style>
.site-footer {
  background: var(--footer-bg, #ffffff);
  border-top: 1px solid rgba(0,0,0,0.08);
  padding: 1.2rem 1rem 2.5rem;
  color: var(--footer-text, #374151);
  transition: background 0.3s, color 0.3s;
  position: relative;
}
.dark-theme .site-footer {
  --footer-bg: #111827;
  --footer-text: #d1d5db;
  border-color: rgba(255,255,255,0.1);
}
.footer-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  max-width: 1100px;
  margin: 0 auto;
  gap: 1rem;
}
.footer-left {
  display: flex;
  flex-direction: column;
  gap: 0.3rem;
}
.footer-brand {
  font-weight: 700;
  text-decoration: none;
  color: var(--footer-text);
  font-size: 1.1rem;
}
.footer-copy {
  margin: 0;
  font-size: 0.9rem;
  opacity: 0.9;
}
.footer-links {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}
.footer-links a {
  color: var(--footer-text);
  text-decoration: none;
  font-weight: 500;
  transition: opacity 0.2s, color 0.2s;
}
.footer-links a:hover {
  opacity: 0.8;
  color: #2563eb;
}
.dark-theme .footer-links a:hover {
  color: #60a5fa;
}

/* üåê Social Icons */
.footer-social {
  display: flex;
  gap: 0.6rem;
}
.social-icon {
  font-size: 1.2rem;
  text-decoration: none;
  color: var(--footer-text);
  transition: transform 0.2s, color 0.3s;
}
.social-icon:hover {
  transform: scale(1.2);
  color: #2563eb;
}
.dark-theme .social-icon:hover {
  color: #60a5fa;
}

/* üì± Mobile View */
@media (max-width: 700px) {
  .footer-container {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }
  .footer-links {
    flex-direction: column;
    gap: 0.4rem;
  }
  .footer-social {
    margin-top: 0.5rem;
  }
}

/* ‚¨ÜÔ∏è Back to Top Button */
#backToTop {
  position: fixed;
  bottom: 25px;
  right: 25px;
  background: #2563eb;
  color: #fff;
  border: none;
  border-radius: 50%;
  width: 42px;
  height: 42px;
  cursor: pointer;
  font-size: 1.2rem;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s, transform 0.3s, background 0.3s;
  z-index: 999;
}
#backToTop:hover {
  background: #1d4ed8;
  transform: translateY(-4px);
}
.dark-theme #backToTop {
  background: #3b82f6;
}
.dark-theme #backToTop:hover {
  background: #60a5fa;
}
#backToTop.show {
  opacity: 1;
  visibility: visible;
}
</style>

<!-- ‚öôÔ∏è CSP-safe Script -->
<script nonce="<%= typeof nonce !== 'undefined' ? nonce : '' %>">
document.addEventListener("DOMContentLoaded", () => {
  console.log("‚úÖ Footer with social icons and BackToTop loaded securely");

  const backToTop = document.getElementById("backToTop");

  // Show/hide button on scroll
  window.addEventListener("scroll", () => {
    if (window.scrollY > 200) backToTop.classList.add("show");
    else backToTop.classList.remove("show");
  });

  // Smooth scroll to top
  backToTop.addEventListener("click", () => {
    window.scrollTo({ top: 0, behavior: "smooth" });
  });
});
</script>











