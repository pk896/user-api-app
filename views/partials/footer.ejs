<style nonce="<%= typeof nonce !== 'undefined' ? nonce : '' %>">
  /* ===== COMPANY COLORS & VARIABLES ===== */
  .ft {
    --blue: #2563EB;
    --purple: #7C3AED;
    --green: #22C55E;
    --black: #0F172A;
    --radius: 8px;
    --transition: all 0.2s ease;
  }

  /* ===== FOOTER CONTAINER ===== */
  .ft {
    background: linear-gradient(135deg, #F0FDF4 0%, #FFFFFF 100%);
    border-top: 1px solid #D1FAE5;
    padding: 24px 16px 16px;
    color: var(--black);
    font-size: 14px;
    line-height: 1.4;
  }

  .dark-theme.ft {
    background: linear-gradient(135deg, #0A1F0A 0%, #132813 100%);
    border-top-color: #2D5A2D;
    color: #E2E8F0;
  }

  /* ===== MAIN FOOTER CONTENT ===== */
  .ft-main {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
    max-width: 1000px;
    margin: 0 auto;
    padding-bottom: 20px;
    border-bottom: 1px solid #D1FAE5;
  }

  .dark-theme .ft-main {
    border-bottom-color: #2D5A2D;
  }

  @media (min-width: 640px) {
    .ft-main {
      grid-template-columns: 1fr auto auto;
      align-items: center;
    }
  }

  /* ===== BRAND SECTION ===== */
  .ft-brand {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ft-brand-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-weight: 700;
    font-size: 16px;
    color: var(--black);
    text-decoration: none;
    transition: var(--transition);
  }

  .ft-brand-link:hover {
    color: var(--blue);
  }

  .ft-brand-link svg {
    color: var(--green);
  }

  .dark-theme .ft-brand-link {
    color: #F1F5F9;
  }

  .ft-copyright {
    margin: 0;
    font-size: 12px;
    color: #64748B;
  }

  .dark-theme .ft-copyright {
    color: #94A3B8;
  }

  /* ===== QUICK LINKS ===== */
  .ft-links {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
  }

  @media (min-width: 640px) {
    .ft-links {
      flex-direction: column;
      gap: 8px;
    }
  }

  .ft-link {
    color: #64748B;
    text-decoration: none;
    font-weight: 500;
    font-size: 14px;
    transition: var(--transition);
  }

  .ft-link:hover {
    color: var(--blue);
  }

  .dark-theme .ft-link {
    color: #94A3B8;
  }

  .dark-theme .ft-link:hover {
    color: #60A5FA;
  }

  /* ===== SOCIAL LINKS ===== */
  .ft-social {
    display: flex;
    gap: 12px;
  }

  .ft-social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: #FFFFFF;
    border: 1px solid #D1FAE5;
    border-radius: 50%;
    color: #64748B;
    text-decoration: none;
    transition: var(--transition);
  }

  .ft-social-link:hover {
    background: var(--blue);
    border-color: var(--blue);
    color: white;
    transform: translateY(-2px);
  }

  .dark-theme .ft-social-link {
    background: #1A341A;
    border-color: #2D5A2D;
    color: #94A3B8;
  }

  .dark-theme .ft-social-link:hover {
    background: var(--blue);
    border-color: var(--blue);
    color: white;
  }

  /* ===== LEGAL SECTION ===== */
