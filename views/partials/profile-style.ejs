<style>
  body {
    font-family: system-ui, sans-serif;
    background: linear-gradient(135deg, #3b82f6 0%, #9333ea 50%, #f43f5e 100%);
    background-size: 300% 300%;
    animation: wave 8s ease-in-out infinite;
    margin: 0;
  }
  @keyframes wave {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .page-title {
    text-align: center;
    color: #fff;
    font-size: 1.8rem;
    margin-top: 1.5rem;
  }

  .profile-card {
    background: rgba(255, 255, 255, 0.96);
    backdrop-filter: blur(8px);
    max-width: 850px;
    margin: 1.8rem auto;
    padding: 1.5rem;
    border-radius: 14px;
    box-shadow: 0 8px 24px rgba(0,0,0,0.15);
  }

  .form-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1rem 1.5rem;
  }

  label {
    font-weight: 600;
    display: block;
    margin-top: 0.5rem;
  }

  input {
    width: 100%;
    padding: 0.6rem;
    border: 1px solid #d1d5db;
    border-radius: 8px;
    margin-top: 0.25rem;
  }

  .form-actions {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .btn {
    padding: 0.7rem 1.4rem;
    border-radius: 10px;
    font-weight: 600;
    font-size: 0.9rem;
    border: none;
    cursor: pointer;
    transition: transform 0.2s ease, background 0.3s ease;
    text-decoration: none;
  }

  .btn.primary { background: #2563eb; color: #fff; }
  .btn.primary:hover { background: #1d4ed8; transform: scale(1.03); }

  .btn.secondary { background: #f3f4f6; border: 1px solid #d1d5db; color: #111; }
  .btn.secondary:hover { background: #e5e7eb; }

  .btn.danger { background: #dc2626; color: #fff; }
  .btn.danger:hover { background: #b91c1c; transform: scale(1.03); }

  .modal.hidden { display: none; }
  .modal {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
  }
  .modal-content {
    background: #fff;
    border-radius: 12px;
    padding: 1.5rem;
    width: 90%;
    max-width: 400px;
    text-align: center;
    animation: slideUp 0.3s ease;
  }
  @keyframes slideUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .modal-actions { margin-top: 1rem; display: flex; justify-content: center; gap: 1rem; }

  .flash {
    max-width: 700px;
    margin: 1rem auto;
    padding: 0.75rem;
    border-radius: 10px;
    text-align: center;
    font-weight: 600;
  }
  .flash-success { background: #d1fae5; color: #065f46; }
  .flash-error { background: #fee2e2; color: #991b1b; }

  @media (max-width: 600px) {
    .page-title { font-size: 1.4rem; }
    .profile-card { padding: 1rem; margin: 1rem; }
    .btn { width: 100%; text-align: center; }
  }
</style>

<script nonce="<%= nonce %>">
document.addEventListener("DOMContentLoaded", () => {
  const deleteBtn = document.getElementById("deleteBtn");
  const modal = document.getElementById("deleteModal");
  const cancel = document.getElementById("cancelDelete");

  if (deleteBtn) deleteBtn.addEventListener("click", () => modal.classList.remove("hidden"));
  if (cancel) cancel.addEventListener("click", () => modal.classList.add("hidden"));
});
</script>
