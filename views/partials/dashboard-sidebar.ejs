<aside class="sidebar">
  <div class="brand">
    <h2>💼 <%= business ? business.name : "Guest" %></h2>
    <p class="role"><%= business ? business.role.toUpperCase() : "" %></p>
  </div>

  <nav class="nav-menu">
    <% if (role === "seller") { %>
      <a href="/business/dashboards/seller-dashboard" class="<%= active === 'dashboard' ? 'active' : '' %>">📊 Dashboard</a>
      <a href="/products/add" class="<%= active === 'add' ? 'active' : '' %>">➕ Add Product</a>
      <a href="/products/all" class="<%= active === 'products' ? 'active' : '' %>">🛍️ All Products</a>
    <% } else if (role === "supplier") { %>
      <a href="/business/dashboards/supplier-dashboard" class="<%= active === 'dashboard' ? 'active' : '' %>">🚚 Dashboard</a>
      <a href="/shipments" class="<%= active === 'shipments' ? 'active' : '' %>">📦 Shipments</a>
    <% } else if (role === "buyer") { %>
      <a href="/business/dashboards/buyer-dashboard" class="<%= active === 'dashboard' ? 'active' : '' %>">🛒 Dashboard</a>
      <a href="/products/all" class="<%= active === 'browse' ? 'active' : '' %>">🛍️ Browse Products</a>
      <a href="/orders" class="<%= active === 'orders' ? 'active' : '' %>">🧾 Orders</a>
    <% } else { %>
      <a href="/users/dashboards/users-dashboard" class="<%= active === 'dashboard' ? 'active' : '' %>">👤 User Dashboard</a>
    <% } %>

    <hr />

    <a href="/business/profile" class="<%= active === 'profile' ? 'active' : '' %>">👤 Profile</a>
    <a href="/business/logout" class="logout">🚪 Logout</a>
  </nav>
</aside>

<style>
  .sidebar {
    width: 240px;
    background: var(--sidebar-bg, #1f2937);
    color: #fff;
    min-height: 100vh;
    padding: 1rem;
  }
  .sidebar .brand h2 {
    margin: 0;
  }
  .nav-menu a {
    display: block;
    color: #fff;
    padding: .6rem;
    text-decoration: none;
    border-radius: .5rem;
  }
  .nav-menu a.active {
    background: #2563eb;
  }
  .nav-menu a:hover {
    background: #374151;
  }
</style>




















