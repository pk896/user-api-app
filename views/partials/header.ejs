<!--header-->
<header class="site-header" style="border-bottom:1px solid #eee; background:#fff;">
  <div style="max-width:1100px; margin:0 auto; padding:0.75rem 1rem; display:flex; align-items:center; justify-content:space-between;">
    <a href="/" style="text-decoration:none; color:#111; font-weight:700; font-size:1.25rem;">
      MyApp
    </a>

    <div style="display:flex; gap:0.75rem; align-items:center;">
      <% if (user) { %>
        <span style="font-size:0.95rem; color:#333;">Hi, <strong><%= user.name %></strong></span>
        <a href="/users/logout" style="font-size:0.9rem;">Sign out</a>
      <% } else { %>
        <a href="/auth/login" style="font-size:0.9rem;">Sign in</a>
      <% } %>
    </div>
  </div>
</header>