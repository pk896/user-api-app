/* Shiny streak that sweeps across on hover */
.pg-chip-shop::after {
  content: "";
  position: absolute;
  inset: 3px;
  border-radius: inherit;
  background: linear-gradient(
    120deg,
    transparent 0%,
    rgba(255,255,255,0.9) 25%,
    transparent 50%
  );
  transform: translateX(-170%);
  opacity: 0;
  pointer-events: none;
  transition:
    transform .55s ease-out,
    opacity .25s ease-out;
}

/* Hover / focus: warm gradient, glow, tiny lift */
.pg-chip-shop:hover,
.pg-chip-shop:focus-visible {
  background: linear-gradient(135deg, #f97316, #facc15);
  color: #111827;
  transform: translateY(-1px) scale(1.03);
  box-shadow:
    0 0 0 1px rgba(251,191,36,0.65),
    0 12px 26px rgba(15,23,42,0.45);
}

/* Trigger the shine sweep */
.pg-chip-shop:hover::after,
.pg-chip-shop:focus-visible::after {
  transform: translateX(170%);
  opacity: 1;
}

/* Keep a soft glow when Shop is the active page */
