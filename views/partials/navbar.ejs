<script nonce="<%= nonce %>">
  document.addEventListener('DOMContentLoaded', function () {
    const toggle  = document.getElementById('pgNavToggle');
    const drawer  = document.getElementById('pgNavDrawer');
    const overlay = document.getElementById('pgNavOverlay');

    if (!toggle || !drawer || !overlay) return;

    const openDrawer = () => {
      drawer.classList.add('pg-open');
      overlay.classList.add('pg-show');
      document.body.style.overflow = 'hidden';
      drawer.setAttribute('aria-hidden', 'false');
    };

    const closeDrawer = () => {
      drawer.classList.remove('pg-open');
      overlay.classList.remove('pg-show');
      document.body.style.overflow = '';
      drawer.setAttribute('aria-hidden', 'true');
    };

    toggle.addEventListener('click', () => {
      if (drawer.classList.contains('pg-open')) {
        closeDrawer();
      } else {
        openDrawer();
      }
    });

    overlay.addEventListener('click', closeDrawer);

    drawer.addEventListener('click', (ev) => {
      const target = ev.target.closest('a');
      if (target) closeDrawer();
    });

    window.addEventListener('resize', () => {
      if (window.innerWidth > 1024 && drawer.classList.contains('pg-open')) {
        closeDrawer();
      }
    });

    /* üî• Auto-pulse the Shop chip every 5 seconds */
    const shopChip = document.querySelector('.pg-chip-shop');
    if (shopChip) {
      const runPulse = () => {
        if (shopChip.classList.contains('pg-chip-pulse')) return;
        shopChip.classList.add('pg-chip-pulse');
        // remove after animation ends
        setTimeout(() => {
          shopChip.classList.remove('pg-chip-pulse');
        }, 900);
      };

      // first pulse shortly after load
      setTimeout(runPulse, 1500);
      // then every 5 seconds
      setInterval(runPulse, 5000);
    }
  });
</script>
