<!-- navbar.ejs -->
<nav class="site-nav">
  <div class="nav-container">
    <ul class="nav-list">
      <li>
        <a href="/users/home" 
           class="<%= active === 'home' ? 'active-link' : '' %>"
           aria-current="<%= active === 'home' ? 'page' : '' %>">
          Home
        </a>
      </li>
      <li>
        <a href="/users/about" 
           class="<%= active === 'about' ? 'active-link' : '' %>"
           aria-current="<%= active === 'about' ? 'page' : '' %>">
          About
        </a>
      </li>
      <li>
        <a href="/users/dashboard" 
           class="<%= active === 'dashboard' ? 'active-link' : '' %>"
           aria-current="<%= active === 'dashboard' ? 'page' : '' %>">
          Dashboard
        </a>
      </li>
      <li>
        <a href="/users/contact" 
           class="<%= active === 'contact' ? 'active-link' : '' %>"
           aria-current="<%= active === 'contact' ? 'page' : '' %>">
          Contact
        </a>
      </li>

      <% if (user) { %>
        <li class="right">
          <span>Hi, <%= user.name || 'User' %></span>
          <a href="/users/logout">Logout</a>
        </li>
      <% } else { %>
        <li class="right">
          <a href="/users/render-log-in">Login</a>
          <a href="/users/render-sign-up">Sign Up</a>
        </li>
      <% } %>
    </ul>
  </div>
</nav>






