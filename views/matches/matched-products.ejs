          <%= matches ? matches.filter(m => (m.status || 'pending').toLowerCase() === 'pending').length : 0 %>
        </div>
        <div class="stat-label">Pending</div>
      </div>
      <div class="stat-card">
        <div class="stat-value">
          <%= matches ? matches.filter(m => (m.status || '').toLowerCase() === 'accepted').length : 0 %>
        </div>
        <div class="stat-label">Accepted</div>
      </div>
      <div class="stat-card">
        <div class="stat-value">
          <%= matches ? matches.filter(m => (m.status || '').toLowerCase() === 'rejected').length : 0 %>
        </div>
        <div class="stat-label">Rejected</div>
      </div>
    </div>

    <!-- Filters Section -->
    <div class="filters-section">
      <div class="filters-row">
        <select id="statusFilter" class="filter-select">
          <option value="">All Statuses</option>
          <option value="pending">Pending</option>
          <option value="accepted">Accepted</option>
          <option value="rejected">Rejected</option>
        </select>
        
        <select id="scoreFilter" class="filter-select">
          <option value="">All Scores</option>
          <option value="high">High (75+)</option>
          <option value="medium">Medium (50-74)</option>
          <option value="low">Low (&lt;50)</option>
        </select>
        
        <select id="sortSelect" class="filter-select">
          <option value="">Sort By</option>
          <option value="score">Match Score</option>
          <option value="price">Price</option>
          <option value="date">Date</option>
        </select>
        
        <button id="clearFilters" class="btn btn-outline">Clear Filters</button>
        
        <div style="margin-left: auto; display: flex; gap: 0.5rem;">
          <button id="exportMatches" class="btn btn-secondary">
            <span>üì•</span>
            Export
          </button>
        </div>
      </div>
    </div>

    <!-- Empty State -->
    <% if (!matches || matches.length === 0) { %>
      <div class="empty-state">
        <div class="empty-icon">üîç</div>
        <h2 class="empty-title">No Matches Yet</h2>
        <p class="empty-description">
          Run matching from your Demands page to find products that match your requirements.
          When matches are found, they'll appear here.
        </p>
        <div class="no-data-actions">
          <a href="/demands/mine" class="btn btn-primary">
            <span>üìã</span>
            View My Demands
          </a>
          <a href="/demands/add" class="btn btn-primary" style="margin-left: 0.5rem;">
            <span>‚ûï</span>
            Create New Demand
          </a>
        </div>
      </div>
    <% } %>

    <!-- Matched Products Grid -->
    <div class="match-grid">
      <% if (matches && matches.length > 0) { %>
        <% matches.forEach(m => { 
          const p = m.productId || {};
          const d = m.demandId || {};
          const supplier = m.supplierId || {};
          
          const productName = p.name || m.snapshot?.productName || 'Product';
          const productType = p.type || m.snapshot?.productType || '-';
          const productPrice = (p.price ?? m.snapshot?.productPrice) ?? '-';
          const productLocation = p.location || m.snapshot?.productLocation || '-';
          
          const demandTitle = d.title || m.snapshot?.demandTitle || '-';
          const demandQuantity = (d.quantity ?? m.snapshot?.demandQuantity) ?? '-';
          const demandLocation = d.location || m.snapshot?.demandLocation || '-';
          
          const status = (m.status || "pending").toLowerCase();
          const score = m.score || 0;
        %>
          <article class="match-card"
                  data-match-id="<%= m._id %>"
                  data-status="<%= status %>"
                  data-score="<%= score %>"
                  data-date="<%= m.createdAt %>"
                  data-supplier="<%= supplier.name || supplier.businessName || '' %>">
            
            <!-- Match Header -->
            <div class="match-header">
              <div class="match-score">
                <span>‚≠ê</span>
                <span>Score: <%= score %></span>
              </div>
              <span class="match-status status-<%= status %>">
                <%= status.charAt(0).toUpperCase() + status.slice(1) %>
              </span>
            </div>
            
            <!-- Product Info -->
            <h3 class="product-name"><%= productName %></h3>
            
            <div class="info-section">
              <div class="info-title">
                <span>üì¶</span>
                <span>Product Details</span>
              </div>
              
              <div class="info-row">
                <span class="info-label">Type</span>
                <span class="info-value"><%= productType %></span>
              </div>
              
              <div class="info-row">
                <span class="info-label">Price</span>
                <span class="info-value price-value">
                  <% if (typeof productPrice === "number") { %>
                    R<%= productPrice.toFixed(2) %>
                  <% } else { %>
                    <%= productPrice %>
                  <% } %>
                </span>
              </div>
              
              <div class="info-row">
                <span class="info-label">Location</span>
                <span class="info-value location-value"><%= productLocation %></span>
              </div>
            </div>
            
            <!-- Divider -->
            <div class="divider"></div>
            
            <!-- Demand Info -->
            <div class="info-section">
              <div class="info-title">
                <span>üìù</span>
                <span>Your Demand</span>
              </div>
              
              <div class="info-row">
                <span class="info-label">Demand</span>
                <span class="info-value"><%= demandTitle %></span>
              </div>
              
              <div class="info-row">
                <span class="info-label">Quantity</span>
                <span class="info-value"><%= demandQuantity %></span>
              </div>
              
              <div class="info-row">
                <span class="info-label">Your Location</span>
                <span class="info-value"><%= demandLocation %></span>
              </div>
            </div>
            
            <!-- Card Actions -->
            <div class="card-actions">
              <a href="/products/<%= p._id %>" 
                 class="btn btn-primary btn-view-product" 
                 data-product-id="<%= p._id %>">
                <span>üëÅÔ∏è</span>
                View Product
              </a>
              
              <% if (supplier._id) { %>
                <button class="btn btn-secondary btn-contact-supplier"
                        data-supplier-id="<%= supplier._id %>"
                        data-product-id="<%= p._id %>">
                  <span>üí¨</span>
                  Contact Supplier
                </button>
              <% } %>
            </div>
          </article>
        <% }) %>
      <% } %>
    </div>
  </div>
</div>

<!-- ‚úÖ Inject Scripts -->
<script nonce="<%= nonce %>">
  <%= pageScripts %>
</script>