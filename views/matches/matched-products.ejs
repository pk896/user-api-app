const pageScripts = `
  document.addEventListener('DOMContentLoaded', function() {
    // Filter functionality
    const statusFilter = document.getElementById('statusFilter');
    const scoreFilter = document.getElementById('scoreFilter');
    const matchCards = Array.from(document.querySelectorAll('.match-card'));
    
    function calculateStats() {
      const totalMatches = matchCards.length;
      const pendingMatches = matchCards.filter(card => 
        card.querySelector('.match-status').classList.contains('status-pending')
      ).length;
      const acceptedMatches = matchCards.filter(card => 
        card.querySelector('.match-status').classList.contains('status-accepted')
      ).length;
      const rejectedMatches = matchCards.filter(card => 
        card.querySelector('.match-status').classList.contains('status-rejected')
      ).length;
      
      // Update stat cards if they exist
      const totalStat = document.querySelector('.stat-card:nth-child(1) .stat-value');
      const pendingStat = document.querySelector('.stat-card:nth-child(2) .stat-value');
      const acceptedStat = document.querySelector('.stat-card:nth-child(3) .stat-value');
      const rejectedStat = document.querySelector('.stat-card:nth-child(4) .stat-value');
      
      if (totalStat) totalStat.textContent = totalMatches;
      if (pendingStat) pendingStat.textContent = pendingMatches;
      if (acceptedStat) acceptedStat.textContent = acceptedMatches;
      if (rejectedStat) rejectedStat.textContent = rejectedMatches;
    }
    
    function applyFilters() {
      const statusValue = statusFilter?.value || '';
      const scoreValue = scoreFilter?.value || '';
      
      matchCards.forEach(card => {
        const status = card.dataset.status || '';
        const score = parseInt(card.dataset.score) || 0;
        
        const matchesStatus = !statusValue || status === statusValue;
        let matchesScore = true;
        
        if (scoreValue) {
          if (scoreValue === 'high' && score < 75) matchesScore = false;
          if (scoreValue === 'medium' && (score < 50 || score >= 75)) matchesScore = false;
          if (scoreValue === 'low' && score >= 50) matchesScore = false;
        }
        
        const shouldShow = matchesStatus && matchesScore;
        card.style.display = shouldShow ? 'block' : 'none';
      });
      
      // Show/hide empty state
      const visibleCards = matchCards.filter(card => card.style.display !== 'none');
      const emptyState = document.querySelector('.empty-state');
      const matchGrid = document.querySelector('.match-grid');
      
      if (visibleCards.length === 0 && matchCards.length > 0) {
        if (emptyState) emptyState.style.display = 'block';
        if (matchGrid) matchGrid.style.display = 'none';
        
        // Update empty state message
        const emptyTitle = document.querySelector('.empty-title');
        const emptyDescription = document.querySelector('.empty-description');
        if (emptyTitle) emptyTitle.textContent = 'No matching products';
        if (emptyDescription) {
          emptyDescription.textContent = 'Try adjusting your filters to see more matches.';
        }
      } else {
        if (emptyState) emptyState.style.display = 'none';
        if (matchGrid) matchGrid.style.display = 'grid';
      }
    }
    
    // Event listeners for filters
    if (statusFilter) {
      statusFilter.addEventListener('change', applyFilters);
    }
    
    if (scoreFilter) {
      scoreFilter.addEventListener('change', applyFilters);
    }
    
    // Clear filters button
    const clearFilters = document.getElementById('clearFilters');
    if (clearFilters) {
      clearFilters.addEventListener('click', function() {
        if (statusFilter) statusFilter.value = '';
        if (scoreFilter) scoreFilter.value = '';
        applyFilters();
      });
    }
    
    // Quick actions for cards
    matchCards.forEach(card => {
      const viewProductBtn = card.querySelector('.btn-view-product');
      const contactSupplierBtn = card.querySelector('.btn-contact-supplier');
      
      if (viewProductBtn) {
        viewProductBtn.addEventListener('click', function(e) {
          e.preventDefault();
          const productId = this.dataset.productId;
          // Add loading state
          const originalText = this.innerHTML;
          this.innerHTML = '<span>‚è≥</span> Loading...';
          this.disabled = true;
          
          setTimeout(() => {
            window.location.href = this.href;
          }, 500);
        });
      }
      
      if (contactSupplierBtn) {
        contactSupplierBtn.addEventListener('click', function(e) {
          e.preventDefault();
          const supplierId = this.dataset.supplierId;
          const productId = this.dataset.productId;
          
          // Show contact modal or redirect to chat
          console.log('Contact supplier:', supplierId, 'for product:', productId);
          alert('Contact feature would open a chat with the supplier.');
        });
      }
    });
    
    // Export functionality
    const exportBtn = document.getElementById('exportMatches');
    if (exportBtn) {
      exportBtn.addEventListener('click', function() {
        const button = this;
        const originalText = button.innerHTML;
        
        button.innerHTML = '<span>‚è≥</span> Exporting...';
        button.disabled = true;
        
        // Simulate export
        setTimeout(() => {
          alert('Your matched products have been exported successfully!');
          button.innerHTML = originalText;
          button.disabled = false;
        }, 1500);
      });
    }
    
    // Sort functionality (optional)
    const sortSelect = document.getElementById('sortSelect');
    if (sortSelect) {
      sortSelect.addEventListener('change', function() {
        const sortBy = this.value;
        const container = document.querySelector('.match-grid');
        const cards = Array.from(container.querySelectorAll('.match-card'));
        
        cards.sort((a, b) => {
          if (sortBy === 'score') {
            const scoreA = parseInt(a.dataset.score) || 0;
            const scoreB = parseInt(b.dataset.score) || 0;
            return scoreB - scoreA; // Descending
          } else if (sortBy === 'price') {
            const priceA = parseFloat(a.querySelector('.price-value')?.textContent?.replace(/[^0-9.]/g, '') || 0);
            const priceB = parseFloat(b.querySelector('.price-value')?.textContent?.replace(/[^0-9.]/g, '') || 0);
            return priceA - priceB; // Ascending
          } else if (sortBy === 'date') {
            const dateA = new Date(a.dataset.date || 0);
            const dateB = new Date(b.dataset.date || 0);
            return dateB - dateA; // Newest first
          }
          return 0;
        });
        
        // Reorder cards
        cards.forEach(card => container.appendChild(card));
      });
    }
    
    // Initialize
    calculateStats();
    applyFilters();
    
    // Add score-based styling
    matchCards.forEach(card => {
      const score = parseInt(card.dataset.score) || 0;
      if (score >= 90) {
        card.classList.add('high-match');
      } else if (score >= 70) {
        card.classList.add('good-match');
      } else if (score >= 50) {
        card.classList.add('average-match');
      } else {
        card.classList.add('low-match');
      }
    });
    
    // Auto-refresh toggle (optional feature)
    const autoRefreshToggle = document.getElementById('autoRefreshToggle');
    let refreshInterval;
    
    if (autoRefreshToggle) {
      autoRefreshToggle.addEventListener('change', function() {
        if (this.checked) {
          refreshInterval = setInterval(() => {
            console.log('Auto-refreshing matches...');
            // In a real implementation, this would fetch fresh data
            calculateStats();
          }, 300000); // 5 minutes
        } else {
          clearInterval(refreshInterval);
        }
      });
    }
    
    // Quick view functionality
    matchCards.forEach(card => {
      card.addEventListener('click', function(e) {
        // Don't trigger on button clicks
        if (e.target.tagName === 'BUTTON' || 
            e.target.tagName === 'A' || 
            e.target.closest('.card-actions')) {
          return;
        }
        
        // Toggle expanded view
        this.classList.toggle('expanded');
        
        if (this.classList.contains('expanded')) {
          const details = document.createElement('div');
          details.className = 'expanded-details';
          details.innerHTML = \`
            <div class="details-content">
              <h4>Additional Details</h4>
              <p><strong>Supplier:</strong> \${this.dataset.supplier || 'Not available'}</p>
              <p><strong>Match Date:</strong> \${new Date(this.dataset.date).toLocaleDateString()}</p>
              <p><strong>Last Updated:</strong> \${new Date().toLocaleDateString()}</p>
              <button class="btn btn-outline btn-close-details">Close Details</button>
            </div>
          \`;
          
          // Check if details already exist
          const existingDetails = this.querySelector('.expanded-details');
          if (existingDetails) {
            existingDetails.remove();
          } else {
            this.appendChild(details);
            
            // Add close button functionality
            details.querySelector('.btn-close-details').addEventListener('click', function(e) {
              e.stopPropagation();
              card.classList.remove('expanded');
              details.remove();
            });
          }
        } else {
          const details = this.querySelector('.expanded-details');
          if (details) details.remove();
        }
      });
    });
  });
`;
