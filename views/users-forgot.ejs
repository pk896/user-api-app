<!-- views/users-forgot.ejs -->
<section class="forgot-page">
  <div class="forgot-container">
    <!-- Visual header with gradient -->
    <div class="forgot-header">
      <div class="forgot-gradient-circle">
        <svg class="forgot-lock-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
          <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
        </svg>
      </div>
      <h1 class="forgot-main-title">Reset Password</h1>
      <p class="forgot-subtitle">
        Enter your email and we'll send a secure reset link
      </p>
    </div>

    <!-- Flash messages -->
    <% if (messages && messages.error) { %>
      <div class="forgot-alert forgot-alert-error">
        <svg class="forgot-alert-icon" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
        <div class="forgot-alert-content">
          <strong>Error:</strong> <%= messages.error[0] %>
        </div>
      </div>
    <% } %>

    <% if (messages && messages.success) { %>
      <div class="forgot-alert forgot-alert-success">
        <svg class="forgot-alert-icon" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <div class="forgot-alert-content">
          <strong>Success!</strong> <%= messages.success[0] %>
        </div>
      </div>
    <% } %>

    <!-- Main card -->
    <div class="forgot-card">
      <!-- Progress indicator -->
      <div class="forgot-progress">
        <div class="forgot-progress-step forgot-step-active">
          <div class="forgot-step-number">1</div>
          <div class="forgot-step-label">Request Reset</div>
        </div>
        <div class="forgot-progress-connector"></div>
        <div class="forgot-progress-step">
          <div class="forgot-step-number">2</div>
          <div class="forgot-step-label">Reset Password</div>
        </div>
      </div>

      <!-- Form -->
      <form action="/users/password/forgot" method="POST" class="forgot-form">
        <div class="forgot-form-group">
          <label for="forgot-email" class="forgot-label">
            <svg class="forgot-label-icon" viewBox="0 0 20 20" fill="currentColor">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
            </svg>
            Email Address
          </label>
          <div class="forgot-input-wrapper">
            <input
              type="email"
              id="forgot-email"
              name="email"
              class="forgot-input"
              placeholder="you@example.com"
              required
              autocomplete="email"
              inputmode="email"
              value="<%= typeof email !== 'undefined' ? email : '' %>"
            />
            <div class="forgot-input-focus"></div>
          </div>
          <p class="forgot-hint">
            Enter the email associated with your account
          </p>
        </div>

        <!-- Security info -->
        <div class="forgot-security-info">
          <svg class="forgot-security-icon" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <div class="forgot-security-content">
            <strong>Secure & Private</strong>
            <p>Your email is only used to send the reset link and will not be shared</p>
          </div>
        </div>

        <!-- Submit button -->
        <button type="submit" class="forgot-submit-btn">
          <span class="forgot-btn-text">Send Reset Link</span>
          <svg class="forgot-btn-icon" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
          </svg>
        </button>
      </form>

      <!-- Process info -->
      <div class="forgot-process-info">
        <h3 class="forgot-process-title">
          <svg class="forgot-process-icon" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
          What to Expect
        </h3>
        
        <div class="forgot-process-steps">
          <div class="forgot-process-step">
            <div class="forgot-process-number">01</div>
            <div class="forgot-process-details">
              <h4>Check Your Inbox</h4>
              <p>If the email exists in our system, we'll send a secure link</p>
            </div>
          </div>
          
          <div class="forgot-process-step">
            <div class="forgot-process-number">02</div>
            <div class="forgot-process-details">
              <h4>Open the Link</h4>
              <p>The link expires in <strong>60 minutes</strong> for security</p>
            </div>
          </div>
          
          <div class="forgot-process-step">
            <div class="forgot-process-number">03</div>
            <div class="forgot-process-details">
              <h4>Create New Password</h4>
              <p>Choose a strong password with 8+ characters</p>
            </div>
          </div>
        </div>
        
        <div class="forgot-process-tip">
          <svg class="forgot-tip-icon" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
          <p>Also check your spam or promotions folder if you don't see the email</p>
        </div>
      </div>
    </div>

    <!-- Navigation links -->
    <div class="forgot-navigation">
      <a href="/users/login" class="forgot-nav-link">
        <svg class="forgot-nav-icon" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
        </svg>
        Back to Sign In
      </a>
      <span class="forgot-nav-separator">Â·</span>
