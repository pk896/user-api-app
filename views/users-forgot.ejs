<section class="auth-page mini">
  <!-- Brand Header -->
  <div class="brand-header">
    <div class="logo-preview">
      <div class="logo-color blue"></div>
      <div class="logo-color purple"></div>
      <div class="logo-color green"></div>
      <div class="logo-color black"></div>
    </div>
    <h1 class="page-title">ðŸ”’ Reset Your Password</h1>
    <p class="page-subtitle">
      Enter your email and we'll send you a link to reset your password
    </p>
  </div>

  <!-- Flash Messages from Server -->
  <% if (messages && messages.error) { %>
    <div class="flash flash-error">
      <svg class="flash-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="10"></circle>
        <line x1="15" y1="9" x2="9" y2="15"></line>
        <line x1="9" y1="9" x2="15" y2="15"></line>
      </svg>
      <div class="flash-content">
        <strong>Error:</strong> <%= messages.error[0] %>
      </div>
    </div>
  <% } %>

  <% if (messages && messages.success) { %>
    <div class="flash flash-success">
      <svg class="flash-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="20 6 9 17 4 12"></polyline>
      </svg>
      <div class="flash-content">
        <strong>Success!</strong> <%= messages.success[0] %>
      </div>
    </div>
  <% } %>

  <!-- Recovery Status -->
  <div class="recovery-status">
    <svg class="status-icon" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
      <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
    </svg>
    <div class="status-info">
      <h3>Password Recovery</h3>
      <p>We'll send a secure reset link to your email address</p>
    </div>
  </div>

  <!-- SIMPLE HTML FORM - NO JAVASCRIPT INTERFERENCE -->
  <form action="/users/password/forgot" method="POST" class="auth-form card" novalidate>
    <div class="form-section">
      <!-- Email Input -->
      <div class="input-group">
        <label class="floating-label">
          <input
            id="email"
            name="email"
            type="email"
            required
            placeholder=" "
            class="input"
            autocomplete="email"
            inputmode="email"
            value="<%= typeof email !== 'undefined' ? email : '' %>"
          />
          <span class="label-text">Email Address</span>
          <div class="input-icon">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </div>
        </label>
      </div>
    </div>

    <!-- Instructions -->
    <div class="instructions">
      <h4>
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="16" x2="12" y2="12"></line>
          <line x1="12" y1="8" x2="12.01" y2="8"></line>
        </svg>
        What happens next?
      </h4>
      
      <ol class="steps-list">
        <li class="step-item">
          <span class="step-number">1</span>
          <div class="step-details">
            <strong>Check your inbox</strong>
            <p>We'll send a password reset link to your email</p>
          </div>
        </li>
        
        <li class="step-item">
          <span class="step-number">2</span>
          <div class="step-details">
            <strong>Click the link</strong>
            <p>The link expires in 1 hour for security</p>
          </div>
        </li>
        
        <li class="step-item">
          <span class="step-number">3</span>
          <div class="step-details">
            <strong>Set new password</strong>
            <p>Create a strong, secure password</p>
          </div>
        </li>
        
        <li class="step-item">
          <span class="step-number">4</span>
          <div class="step-details">
            <strong>Sign in</strong>
            <p>Use your new password to access your account</p>
          </div>
        </li>
      </ol>
    </div>

    <!-- SIMPLE SUBMIT BUTTON - NO JAVASCRIPT -->
    <button type="submit" class="btn primary wfull">
      Send Reset Link
    </button>
  </form>

  <!-- Navigation Links -->
  <div class="navigation-links">
    <a href="/users/login" class="nav-link back-link">
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
      Back to Sign In
    </a>
    
    <span class="link-divider">â€¢</span>
    
    <a href="/users/signup" class="nav-link signup-link">
      Create New Account
      <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
    </a>
  </div>
</section>

