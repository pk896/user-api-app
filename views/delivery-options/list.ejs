<script>
  function confirmDelete() {
    return confirm('Are you sure you want to delete this delivery option? This action cannot be undone.');
  }

  // Add search functionality
  document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.querySelector('input[name="q"]');
    const tableRows = document.querySelectorAll('.delivery-table tbody tr');
    
    if (searchInput && tableRows.length > 0) {
      searchInput.addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        
        tableRows.forEach(row => {
          const name = row.querySelector('.delivery-name').textContent.toLowerCase();
          if (name.includes(searchTerm)) {
            row.style.display = '';
          } else {
            row.style.display = 'none';
          }
        });
      });
    }

    // Add keyboard shortcuts
    document.addEventListener('keydown', function(e) {
      // Ctrl/Cmd + N for new option
      if ((e.ctrlKey || e.metaKey) && e.key === 'n') {
        e.preventDefault();
        window.location.href = '/admin/delivery-options/new';
      }
      
      // Escape key to clear search
      if (e.key === 'Escape' && searchInput && searchInput.value) {
        searchInput.value = '';
        searchInput.dispatchEvent(new Event('input'));
      }
    });

    // Add row click functionality on mobile
    if (window.innerWidth < 768) {
      document.querySelectorAll('.delivery-table tbody tr').forEach(row => {
        row.addEventListener('click', function(e) {
          if (!e.target.closest('.action-btn') && !e.target.closest('form')) {
            const editBtn = this.querySelector('.btn-edit');
            if (editBtn) {
              window.location.href = editBtn.href;
            }
          }
        });
        
        row.style.cursor = 'pointer';
      });
    }
  });
</script>