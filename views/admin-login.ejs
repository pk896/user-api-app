<h1 class="page-title">üîê Admin Login</h1>

<!-- ‚úÖ Flash Messages -->
<% if (success && success.length > 0) { %>
  <div class="flash flash-success"><%= success %></div>
<% } %>
<% if (error && error.length > 0) { %>
  <div class="flash flash-error"><%= error %></div>
<% } %>

<!-- üß≠ Admin Login Form -->
<form 
  action="/admin/login"
  method="POST"
  class="login-form <%= themeCss.includes('dark') ? 'dark-theme' : 'light-theme' %>"
>
  <div class="form-group">
    <label for="username">üë§ Username</label>
    <input 
      type="text" 
      name="username" 
      id="username" 
      placeholder="Enter admin username" 
      required 
      autofocus 
    />
  </div>

  <div class="form-group">
    <label for="password">üîí Password</label>
    <div class="password-wrapper">
      <input 
        type="password" 
        name="password" 
        id="password" 
        placeholder="Enter admin password" 
        required 
      />
      <button type="button" id="togglePassword" class="toggle-pass" aria-label="Show/Hide password">üëÅÔ∏è</button>
    </div>
  </div>

  <button type="submit" class="btn login-btn">Login</button>
</form>

<!-- üé® Styles -->
<style>
  .page-title {
    text-align: center;
    margin: 1.5rem 0;
    font-size: 1.8rem;
    font-weight: 700;
  }

  .login-form {
    max-width: 420px;
    margin: 0 auto;
    background: #ffffff;
    border-radius: 12px;
    padding: 1.5rem 1.8rem;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .dark-theme.login-form {
    background: #1f2937;
    color: #f9fafb;
    box-shadow: 0 2px 10px rgba(255, 255, 255, 0.05);
  }

  label {
    font-weight: 600;
    margin-bottom: 0.2rem;
    display: block;
  }

  input {
    width: 100%;
    padding: 0.7rem;
    border-radius: 6px;
    border: 1px solid #ccc;
    font-size: 1rem;
  }

  .dark-theme input {
    background: #374151;
    border: 1px solid #4b5563;
    color: #f9fafb;
  }

  .password-wrapper {
    display: flex;
    align-items: center;
    position: relative;
  }

  .toggle-pass {
    position: absolute;
    right: 0.5rem;
    background: none;
    border: none;
    cursor: pointer;
    font-size: 1.1rem;
  }

  .btn.login-btn {
    background: #2563eb;
    color: #fff;
    padding: 0.7rem;
    border-radius: 6px;
    border: none;
    cursor: pointer;
    font-weight: 600;
    transition: background 0.2s ease;
  }

  .btn.login-btn:hover {
    background: #1d4ed8;
  }

  .flash {
    max-width: 420px;
    margin: 0.5rem auto;
    padding: 0.8rem 1rem;
    border-radius: 6px;
    text-align: center;
    font-weight: 500;
  }

  .flash-success { background: #dcfce7; color: #166534; }
  .flash-error { background: #fee2e2; color: #991b1b; }

  .dark-theme .flash-success { background: #064e3b; color: #bbf7d0; }
  .dark-theme .flash-error { background: #7f1d1d; color: #fecaca; }

  @media (max-width: 500px) {
    .login-form {
      margin: 0 1rem;
      padding: 1.2rem;
    }
  }
</style>

<!-- ‚öôÔ∏è Script -->
<script nonce="<%= nonce %>">
document.addEventListener("DOMContentLoaded", () => {
  const toggleBtn = document.getElementById("togglePassword");
  const passwordInput = document.getElementById("password");

  if (toggleBtn && passwordInput) {
    toggleBtn.addEventListener("click", () => {
      const isHidden = passwordInput.type === "password";
      passwordInput.type = isHidden ? "text" : "password";
      toggleBtn.textContent = isHidden ? "üôà" : "üëÅÔ∏è";
    });
  }
});
</script>
