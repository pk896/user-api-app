const pageScripts = `
document.addEventListener('DOMContentLoaded', function() {
  // Smooth scroll for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function(e) {
      e.preventDefault();
      const targetId = this.getAttribute('href');
      if (targetId === '#') return;

      const targetElement = document.querySelector(targetId);
      if (targetElement) {
        targetElement.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    });
  });

  // Hover effect to founder photos
  document.querySelectorAll('.founder-card').forEach(card => {
    card.addEventListener('mouseenter', () => {
      const photo = card.querySelector('.founder-photo');
      if (photo) {
        photo.style.transform = 'scale(1.05)';
        photo.style.transition = 'transform 0.3s ease';
      }
    });
    card.addEventListener('mouseleave', () => {
      const photo = card.querySelector('.founder-photo');
      if (photo) photo.style.transform = 'scale(1)';
    });
  });

  // Add section IDs for navigation (keeps your feature)
  const headers = document.querySelectorAll('.section h2');
  headers.forEach((h2, index) => {
    // keep existing ids if already present
    if (!h2.id) h2.id = 'section-' + (index + 1);

    // avoid duplicates
    if (!h2.querySelector('.section-anchor')) {
      const anchor = document.createElement('a');
      anchor.href = '#' + h2.id;
      anchor.className = 'section-anchor';
      anchor.textContent = 'ğŸ”—';
      anchor.style.marginLeft = '0.5rem';
      anchor.style.fontSize = '0.75rem';
      anchor.style.opacity = '0.55';
      anchor.style.textDecoration = 'none';
      anchor.style.transition = 'opacity 0.2s ease';
      anchor.addEventListener('mouseenter', () => (anchor.style.opacity = '1'));
      anchor.addEventListener('mouseleave', () => (anchor.style.opacity = '0.55'));
      h2.appendChild(anchor);
    }
  });

  // Intersection highlight
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.style.boxShadow = '0 0 0 2px rgba(124,58,237,0.28)';
        setTimeout(() => { entry.target.style.boxShadow = ''; }, 1200);
      }
    });
  }, { threshold: 0.2 });

  document.querySelectorAll('.section').forEach(section => observer.observe(section));

  // Mobile TOC (only once)
  function ensureMobileTOC(){
    const hero = document.querySelector('.about-hero');
    if (!hero) return;

    const isMobile = window.innerWidth <= 480;
    const existing = hero.querySelector('.mobile-toc');

    if (!isMobile && existing) {
      existing.remove();
      return;
    }

    if (isMobile && !existing) {
      const toc = document.createElement('div');
      toc.className = 'mobile-toc';

      toc.innerHTML = \`
        <label class="sr-only" style="position:absolute;left:-9999px;">Quick navigation</label>
        <select class="toc-select" aria-label="Quick navigation">
          <option value="">Quick navigation...</option>
          \${Array.from(document.querySelectorAll('.section h2')).map(h2 => {
            const label = (h2.textContent || '').replace('ğŸ”—','').trim();
            return \`<option value="\${h2.id}">\${label}</option>\`;
          }).join('')}
        </select>
      \`;

      hero.appendChild(toc);

      const select = toc.querySelector('.toc-select');
      select.addEventListener('change', function() {
        if (!this.value) return;
        const target = document.getElementById(this.value);
        if (target) target.scrollIntoView({ behavior: 'smooth', block: 'start' });
        this.value = '';
      });
    }
  }

  ensureMobileTOC();
  window.addEventListener('resize', ensureMobileTOC);
});
`;
