<!--dashboard.ejs-->
<h1>Welcome to Phakisi Global E-comerce services, <%= user.name %>! <br>
  <h2>we offer some discount every Month on some items that maybe your choice</h2> </h1>
<p>Email: <%= user.email %></p>
<p>Age: <%= user.age || '-' %></p>
<p>Thank you for being a valued member of our community.</p>

<h2>Your Stats</h2>
<div class="stats">

  <div class="stat-card">
    <h3>Projects</h3>
    <p><%= stats.projects %></p>
  </div>

  <div class="stat-card">
    <h3>Tasks Completed</h3>
    <p><%= stats.tasksCompleted %></p>
  </div>

  <div class="stat-card">
    <h3>Messages</h3>
    <p><%= stats.messages %></p>
  </div>

  <div class="stat-card">
    <h3>Notifications</h3>
    <p><%= stats.notifications %></p>
  </div>

  <div class="stat-card">
    <h3>Followers</h3>
    <p><%= stats.followers %></p>
  </div>

  <div class="stat-card">
    <h3>Following</h3>
    <p><%= stats.following %></p>
  </div>

  <div class="stat-card">
    <h3>Last Login</h3>
    <p><%= stats.lastLogin %></p>
  </div>

  <div class="stat-card">
    <h3>Reputation</h3>
    <p><%= stats.reputation %></p>
  </div>

</div>










