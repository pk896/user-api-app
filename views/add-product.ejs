<!-- views/add-product.ejs -->
<h1>Add New Product</h1>

<form action="/products/add" method="POST" enctype="multipart/form-data">
  <!-- Required Fields -->
  <input type="text" name="id" placeholder="Product ID" required>
  <input type="text" name="name" placeholder="Product Name" required>
  <input type="number" name="price" placeholder="Price" step="0.01" required>

  <!-- Optional Fields -->
  <textarea name="description" placeholder="Description"></textarea>

  <!-- Image Upload (file will later be stored as URL/path in DB) -->
  <input type="file" name="imageFile" accept="image/*" required class="file-input">

  <input type="number" name="stock" placeholder="Stock Quantity" value="0" min="0">

  <input type="text" name="category" placeholder="Category">
  <input type="text" name="color" placeholder="Color">
  <input type="text" name="size" placeholder="Size">
  <input type="text" name="quality" placeholder="Quality">
  <input type="text" name="made" placeholder="Made (e.g., Country)">
  <input type="text" name="manufacturer" placeholder="Manufacturer">
  <input type="text" name="type" placeholder="Type">

  <button type="submit">Add Product</button>
</form>

<!-- Flash Messages -->
<% if (success_msg && success_msg.length > 0) { %>
  <p class="success"><%= success_msg %></p>
<% } %>

<% if (error_msg && error_msg.length > 0) { %>
  <p class="error"><%= error_msg %></p>
<% } %>














