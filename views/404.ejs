    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    border: 2px dashed var(--border);
  }

  .illustration-page {
    width: 100px;
    height: 70px;
    background: var(--bg-primary);
    border-radius: var(--radius-md);
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%) rotate(15deg);
