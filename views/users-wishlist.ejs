<%
  const NONCE = (typeof nonce !== 'undefined') ? nonce : '';
  const THEME = (themeCss && themeCss.includes('dark')) ? 'dark-theme' : 'light-theme';
  const list = Array.isArray(items) ? items : [];
  const wishlistCount = list.length;
  const totalValue = list.reduce((sum, row) => {
    const p = row.product || {};
    return sum + Number(p?.price || 0);
  }, 0);
  
  function money(n, cur){
    const C = (cur || 'USD').toUpperCase();
    const sym = { USD:'$', ZAR:'R', EUR:'€', GBP:'£' }[C] || (C + ' ');
    return sym + Number(n || 0).toFixed(2);
  }
  
  function formatDate(dateString) {
    if (!dateString) return 'Recently added';
    const date = new Date(dateString);
    const now = new Date();
    const diff = now - date;
    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
    
    if (days === 0) return 'Today';
    if (days === 1) return 'Yesterday';
    if (days < 7) return `${days} days ago`;
    if (days < 30) return `${Math.floor(days / 7)} weeks ago`;
    return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
  }
%>

