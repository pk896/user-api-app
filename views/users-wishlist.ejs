<script nonce="<%= NONCE %>">
  (function () {
    'use strict';

    // Navigation Helper
    const initNavigation = () => {
      document.querySelectorAll('a[data-nav="true"]').forEach(link => {
        link.addEventListener('click', (e) => {
          e.preventDefault();
          window.location.href = link.href;
        });
      });
    };

    // Filtering Functionality
    const initFilters = () => {
      const filterButtons = document.querySelectorAll('.filter-btn');
      const wishlistItems = document.querySelectorAll('.wishlist-item');
      
      if (!filterButtons.length || !wishlistItems.length) return;

      const filterItems = (filter) => {
        wishlistItems.forEach(item => {
          const isAvailable = item.getAttribute('data-available') === 'true';
          
          switch (filter) {
            case 'all':
              item.style.display = 'flex';
              break;
            case 'available':
              item.style.display = isAvailable ? 'flex' : 'none';
              break;
            case 'sale':
              const hasDiscount = item.querySelector('.discount-badge');
              item.style.display = hasDiscount ? 'flex' : 'none';
              break;
            default:
              item.style.display = 'flex';
          }
        });
      };

      filterButtons.forEach(button => {
        button.addEventListener('click', () => {
          // Update active state
          filterButtons.forEach(btn => btn.classList.remove('active'));
          button.classList.add('active');
          
          // Apply filter
          const filter = button.getAttribute('data-filter');
          filterItems(filter);
        });
      });
    };

    // Sorting Functionality
    const initSorting = () => {
      const sortSelect = document.getElementById('sortSelect');
      const wishlistContainer = document.querySelector('.wishlist-grid');
      
      if (!sortSelect || !wishlistContainer) return;

      const sortItems = (sortBy) => {
        const items = Array.from(document.querySelectorAll('.wishlist-item'));
        
        items.sort((a, b) => {
          switch (sortBy) {
            case 'price-low':
              const priceA = parseFloat(a.getAttribute('data-price'));
              const priceB = parseFloat(b.getAttribute('data-price'));
              return priceA - priceB;
              
            case 'price-high':
              const priceC = parseFloat(a.getAttribute('data-price'));
              const priceD = parseFloat(b.getAttribute('data-price'));
              return priceD - priceC;
              
            case 'name':
              const nameA = a.getAttribute('data-name').toLowerCase();
              const nameB = b.getAttribute('data-name').toLowerCase();
              return nameA.localeCompare(nameB);
              
            case 'recent':
            default:
              const dateA = new Date(a.getAttribute('data-added'));
              const dateB = new Date(b.getAttribute('data-added'));
              return dateB - dateA;
          }
        });
        
        // Reorder items in DOM
        items.forEach(item => {
          wishlistContainer.appendChild(item);
        });
      };

      sortSelect.addEventListener('change', (e) => {
        sortItems(e.target.value);
      });
    };

    // Quick Actions
    const initQuickActions = () => {
      // Remove item buttons
      document.querySelectorAll('.remove-btn, .remove-item').forEach(button => {
        button.addEventListener('click', async (e) => {
          e.preventDefault();
          const pid = button.getAttribute('data-pid');
          if (!pid) return;
          
          const item = button.closest('.wishlist-item');
          if (!item) return;
          
          // Show confirmation for remove buttons without form
          if (!button.closest('form')) {
            if (!confirm('Remove this item from your wishlist?')) {
              return;
            }
          }
          
          // Visual feedback
          item.style.opacity = '0.5';
          item.style.pointerEvents = 'none';
          
          // If it's a form, submit it
          if (button.closest('form')) {
            button.closest('form').submit();
            return;
          }
          
          // Otherwise handle with fetch
          try {
            const response = await fetch(`/users/wishlist/remove/${pid}`, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
            });
            
            if (response.ok) {
              // Slide out animation
              item.style.transition = 'all 0.3s ease';
              item.style.transform = 'translateX(-100%)';
              item.style.opacity = '0';
              
              setTimeout(() => {
                item.remove();
                
                // Update item count
                const itemCount = document.querySelectorAll('.wishlist-item').length;
                const allFilter = document.querySelector('.filter-btn[data-filter="all"]');
                if (allFilter) {
                  allFilter.textContent = `All Items (${itemCount})`;
                }
                
                // Show success message
                showFlashMessage('Item removed from wishlist', 'success');
              }, 300);
            } else {
              throw new Error('Failed to remove item');
            }
          } catch (error) {
            console.error('Error:', error);
            showFlashMessage('Failed to remove item', 'error');
            
            // Reset item state
            item.style.opacity = '1';
            item.style.pointerEvents = 'auto';
          }
        });
      });
      
      // Compare button
      document.querySelectorAll('.compare-btn').forEach(button => {
        button.addEventListener('click', () => {
          // Add compare functionality here
          showFlashMessage('Compare feature coming soon!', 'success');
        });
      });
    };

    // Add All to Cart
    const initAddAllToCart = () => {
      const addAllBtn = document.getElementById('addAllToCart');
      if (!addAllBtn) return;
      
      addAllBtn.addEventListener('click', async () => {
        const items = document.querySelectorAll('.wishlist-item[data-available="true"]');
        if (items.length === 0) {
          showFlashMessage('No available items to add to cart', 'error');
          return;
        }
        
        if (!confirm(`Add ${items.length} available items to cart?`)) {
          return;
        }
        
        // Show loading state
        addAllBtn.disabled = true;
        const originalText = addAllBtn.innerHTML;
        addAllBtn.innerHTML = '<span>Adding items...</span>';
        
        try {
          // Get all available product IDs
          const productIds = Array.from(items).map(item => 
            item.getAttribute('data-id')
          ).filter(id => id);
          
          // Add each product to cart
          for (const pid of productIds) {
            const formData = new FormData();
            formData.append('pid', pid);
            formData.append('quantity', '1');
            
            await fetch('/api/cart/add', {
              method: 'POST',
              body: formData,
            });
          }
          
          showFlashMessage(`Successfully added ${productIds.length} items to cart!`, 'success');
          
        } catch (error) {
          console.error('Error:', error);
          showFlashMessage('Failed to add some items to cart', 'error');
        } finally {
          // Reset button
          addAllBtn.disabled = false;
          addAllBtn.innerHTML = originalText;
        }
      });
    };

    // Share Wishlist
    const initShareWishlist = () => {
      const shareBtn = document.getElementById('shareWishlist');
      const shareModal = document.getElementById('shareModal');
      const closeBtn = shareModal?.querySelector('.modal-close');
      const copyBtn = document.getElementById('copyShareLink');
      const shareLinkInput = document.getElementById('shareLink');
      const shareOptions = document.querySelectorAll('.share-option');
      
      if (!shareBtn || !shareModal) return;
      
      // Open modal
      shareBtn.addEventListener('click', () => {
        shareModal.classList.add('active');
        document.body.style.overflow = 'hidden';
      });
      
      // Close modal
      const closeModal = () => {
        shareModal.classList.remove('active');
        document.body.style.overflow = 'auto';
      };
      
      if (closeBtn) {
        closeBtn.addEventListener('click', closeModal);
      }
      
      // Close on outside click
      shareModal.addEventListener('click', (e) => {
        if (e.target === shareModal) {
          closeModal();
        }
      });
      
      // Close on Escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && shareModal.classList.contains('active')) {
          closeModal();
        }
      });
      
      // Copy link
      if (copyBtn && shareLinkInput) {
        copyBtn.addEventListener('click', async () => {
          try {
            await navigator.clipboard.writeText(shareLinkInput.value);
            
            // Show success feedback
            const originalText = copyBtn.innerHTML;
            copyBtn.innerHTML = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M20 6L9 17l-5-5"></path></svg> Copied!';
            copyBtn.style.background = '#22C55E';
            
            setTimeout(() => {
              copyBtn.innerHTML = originalText;
              copyBtn.style.background = '';
            }, 2000);
          } catch (err) {
            console.error('Failed to copy:', err);
            showFlashMessage('Failed to copy link', 'error');
          }
        });
      }
      
      // Share options
      shareOptions.forEach(option => {
        option.addEventListener('click', () => {
          const platform = option.getAttribute('data-platform');
          const url = window.location.href;
          const title = 'My Wishlist';
          
          if (platform === 'link') {
            shareLinkInput.select();
            shareLinkInput.focus();
          } else if (platform === 'email') {
            const subject = encodeURIComponent('Check out my wishlist!');
            const body = encodeURIComponent(`I wanted to share my wishlist with you:\n\n${url}`);
            window.open(`mailto:?subject=${subject}&body=${body}`, '_blank');
          }
        });
      });
    };

    // Flash Message Helper
    const showFlashMessage = (message, type = 'success') => {
      const flash = document.createElement('div');
      flash.className = `flash flash-${type}`;
      flash.innerHTML = `
        <svg class="flash-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          ${type === 'success' ? 
            '<polyline points="20 6 9 17 4 12"></polyline>' :
            '<circle cx="12" cy="12" r="10"></circle><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line>'
          }
        </svg>
        <div class="flash-content">
          <strong>${type === 'success' ? 'Success!' : 'Error:'}</strong> ${message}
        </div>
      `;
      
      // Insert after brand header
      const brandHeader = document.querySelector('.brand-header');
      if (brandHeader) {
        brandHeader.parentNode.insertBefore(flash, brandHeader.nextSibling);
      } else {
        document.body.insertBefore(flash, document.body.firstChild);
      }
      
      // Remove after 5 seconds
      setTimeout(() => {
        if (flash.parentNode) {
          flash.style.opacity = '0';
          flash.style.transform = 'translateY(-10px)';
          flash.style.transition = 'all 0.3s ease';
          
          setTimeout(() => {
            if (flash.parentNode) {
              flash.parentNode.removeChild(flash);
            }
          }, 300);
        }
      }, 5000);
    };

    // Form Submission Enhancement
    const initFormEnhancements = () => {
      document.querySelectorAll('.cart-form').forEach(form => {
        form.addEventListener('submit', async (e) => {
          e.preventDefault();
          
          const button = form.querySelector('.add-to-cart');
          if (!button) return;
          
          // Show loading state
          const originalText = button.innerHTML;
          button.innerHTML = '<span>Adding...</span>';
          button.disabled = true;
          
          try {
            const formData = new FormData(form);
            const response = await fetch(form.action, {
              method: 'POST',
              body: formData,
            });
            
            if (response.ok) {
              showFlashMessage('Item added to cart!', 'success');
              
              // Optional: Update cart count in header
              const cartCount = document.querySelector('[data-cart-count]');
              if (cartCount) {
                const currentCount = parseInt(cartCount.textContent) || 0;
                cartCount.textContent = currentCount + 1;
              }
            } else {
              throw new Error('Failed to add to cart');
            }
          } catch (error) {
            console.error('Error:', error);
            showFlashMessage('Failed to add item to cart', 'error');
          } finally {
            // Reset button
            button.innerHTML = originalText;
            button.disabled = false;
          }
        });
      });
    };

    // Initialize everything when DOM is loaded
    document.addEventListener('DOMContentLoaded', () => {
      initNavigation();
      initFilters();
      initSorting();
      initQuickActions();
      initAddAllToCart();
      initShareWishlist();
      initFormEnhancements();
      
      // Add entrance animation to items
      const items = document.querySelectorAll('.wishlist-item');
      items.forEach((item, index) => {
        item.style.opacity = '0';
        item.style.transform = 'translateY(20px)';
        
        setTimeout(() => {
          item.style.transition = 'opacity 0.4s ease, transform 0.4s ease';
          item.style.opacity = '1';
          item.style.transform = 'translateY(0)';
        }, index * 50);
      });
    });

  })();
</script>