<!-- views/orders-admin-login.ejs -->
<% const NONCE = typeof nonce !== 'undefined' ? nonce : '' %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Orders Admin Login</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <% if (typeof themeCss !== 'undefined') { %>
    <link rel="stylesheet" href="<%= themeCss %>">
  <% } %>
  <style nonce="<%= NONCE %>">
    :root{--border:#e5e7eb;--muted:#6b7280}
    .wrap{max-width:420px;margin:4rem auto;padding:1rem}
    .card{border:1px solid var(--border);border-radius:12px;padding:1rem;background:#fff;box-shadow:0 6px 18px rgba(0,0,0,.06)}
    h1{margin:0 0 .5rem}
    .muted{color:var(--muted)}
    .group{margin:.8rem 0}
    label{display:block;font-weight:700;margin-bottom:.3rem}
    input[type="password"]{width:100%;padding:.65rem .7rem;border:1px solid var(--border);border-radius:10px}
    .actions{margin-top:1rem;display:flex;gap:.5rem}
    .btn{border:1px solid var(--border);border-radius:10px;padding:.6rem .9rem;background:#111827;color:#fff;text-decoration:none;display:inline-block}
    .flash{margin:.8rem 0;padding:.7rem .9rem;border-radius:10px}
    .flash.ok{background:#ecfdf5;color:#065f46;border:1px solid #34d399}
    .flash.err{background:#fef2f2;color:#991b1b;border:1px solid #fca5a5}
  </style>
</head>
<body>
  <main class="wrap">
    <div class="card">
      <h1>Orders Admin</h1>
      <p class="muted">Enter the admin pass to manage orders & delivery options.</p>

      <% if (success && success.length) { %>
        <div class="flash ok"><%= success %></div>
      <% } %>
      <% if (error && error.length) { %>
        <div class="flash err"><%= error %></div>
      <% } %>

      <form method="POST" action="/admin/orders/login" novalidate>
        <div class="group">
          <label for="pass">Admin Pass</label>
          <input id="pass" name="pass" type="password" required autocomplete="current-password" />
        </div>
        <div class="actions">
          <button class="btn" type="submit">Login</button>
          <a class="btn" href="/sales" style="background:#fff;color:#111827">Cancel</a>
        </div>
      </form>
    </div>
  </main>
</body>
</html>
