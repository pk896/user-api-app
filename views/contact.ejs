.hero-content {
  position: relative;
  z-index: 1;
  max-width: 800px;
  margin: 0 auto;
}

.page-title {
  font-size: 3rem;
  font-weight: 800;
  color: white;
  margin-bottom: 1rem;
  line-height: 1.2;
}

.hero-subtitle {
  font-size: 1.25rem;
  color: rgba(255, 255, 255, 0.9);
  max-width: 600px;
  margin: 0 auto 1.5rem;
}

.hero-decoration {
  display: flex;
  justify-content: center;
  gap: 0.75rem;
  margin-top: 2rem;
}

.decoration-dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  animation: float 3s ease-in-out infinite;
}

.decoration-dot.blue {
  background: var(--blue-light);
  animation-delay: 0s;
}

.decoration-dot.purple {
  background: var(--purple-light);
  animation-delay: 0.2s;
}

.decoration-dot.green {
  background: var(--green-light);
  animation-delay: 0.4s;
}

/* üì¨ Main Container */
.contact-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem 1rem;
}

.flash-container {
  max-width: 800px;
  margin: 0 auto 2rem;
}

.flash {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 1rem 1.25rem;
  border-radius: var(--radius-lg);
  margin-bottom: 1rem;
  animation: slideIn 0.3s ease;
  opacity: 1;
  transition: opacity 0.3s ease;
}

.flash.hiding {
  opacity: 0;
  transform: translateX(20px);
}

.flash-success {
  background: var(--green-light);
  color: var(--green-dark);
  border: 1px solid var(--green);
}

.flash-error {
  background: #fee2e2;
  color: #991b1b;
  border: 1px solid #fca5a5;
}

.flash-icon {
  flex-shrink: 0;
}

/* üì± Contact Layout */
.contact-layout {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 3rem;
  margin-bottom: 4rem;
}

