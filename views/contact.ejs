  .contact-layout {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
}

/* üìù Contact Form Section */
.contact-form-section,
.contact-info-section {
  background: white;
  border-radius: var(--radius-xl);
  padding: 2rem;
  box-shadow: var(--shadow-lg);
  border: 1px solid var(--gray-200);
}

.section-header,
.info-header {
  margin-bottom: 2rem;
}

.section-title {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--black);
  margin-bottom: 0.5rem;
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.section-icon {
  color: var(--purple);
  flex-shrink: 0;
}

.section-subtitle {
  color: var(--gray-500);
  font-size: 0.95rem;
}

/* üìù Form Elements */
.hp-field {
  position: absolute;
  left: -9999px;
}

.form-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1.5rem;
  margin-bottom: 1.5rem;
}

