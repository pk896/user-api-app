<!--signup-->
<section class="auth-form">
  <h1>Sign Up</h1>

  <!-- Display flash messages and validation errors -->
  <%- include('partials/massage', { success, error, info, warning, errors }) %>

  <form action="/users/submit-form" method="post">
    <div>
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" 
             value="<%= oldInput.name || '' %>" required>
    </div>

    <div>
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" 
             value="<%= oldInput.email || '' %>" required>
    </div>

    <div>
      <label for="age">Age:</label>
      <input type="number" id="age" name="age" 
             value="<%= oldInput.age || '' %>">
    </div>

    <div>
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required>
    </div>

    <button type="submit">Sign Up</button>
  </form>

  <p>
    Already have an account? 
    <a href="/users/render-log-in">Log In here</a>
  </p>

  <p>
    Or sign up with Google:
    <a href="/auth/google">Google OAuth</a>
  </p>
</section>
  