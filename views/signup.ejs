<!--signup-->
  <div class="container">
    <h2>Register with Phakisi Global E-comerce</h2>
    <br> <h3>and notified about our new products and specials</h3>
    
    <h1><%=title%></h1>

    <form action="/users/submit-form" method="POST" id="myForm">
      <div class="form-group">
        <input type="text" name="name" placeholder="Enter your name" 
               value="<%= oldInput ? oldInput.name : '' %>" required>
      </div>

      <div class="form-group">
        <input type="email" name="email" placeholder="Enter your email" 
               value="<%= oldInput ? oldInput.email : '' %>" required>
      </div>

      <div class="form-group">
        <input type="number" name="age" placeholder="Enter your age" 
               value="<%= oldInput ? oldInput.age : '' %>">
      </div>

      <div class="form-group">
        <input type="password" name="password" placeholder="Enter password" required>
      </div>

      <div class="form-group">
        <input type="password" name="confirmPassword" placeholder="Confirm password" required>
      </div>

      <button type="submit">Sign Up</button>
    </form>

    <p class="google-link">
      <a href="/auth/google">Sign up / Login with Google</a>
    </p>
    <p>Already have an account? <a href="/users/render-login">Login</a></p>
  </div>
