<script nonce="<%= NONCE %>">
  // Close notifications
  function setupNotifications() {
    document.querySelectorAll('.notification .close').forEach(button => {
      button.addEventListener('click', (e) => {
        const notification = e.target.closest('.notification');
        if (!notification) return;
        notification.style.opacity = '0';
        notification.style.transform = 'translateY(-10px)';
        setTimeout(() => notification.remove(), 250);
      });
    });

    // Auto-hide success notifications after 5 seconds
    setTimeout(() => {
      document.querySelectorAll('.notification.success').forEach(notification => {
        notification.style.opacity = '0';
        notification.style.transform = 'translateY(-10px)';
        setTimeout(() => notification.remove(), 250);
      });
    }, 5000);
  }

  function fmtCurrency(amount) {
    return 'R ' + Number(amount || 0).toFixed(2);
  }

  // Fetch chart data from API
  async function fetchChartData() {
    try {
      const response = await fetch('/business/analytics/chart-data');
      if (!response.ok) {
        throw new Error('Failed to fetch chart data');
      }
      
      const data = await response.json();
      if (!data.success) {
        throw new Error(data.message || 'Failed to load chart data');
      }
      
      return data;
    } catch (error) {
      console.error('Error fetching chart data:', error);
      return null;
    }
  }

  // Create Simple Bar Chart with API data
  async function createSimpleChart() {
    const chartData = await fetchChartData();
    
    if (!chartData || !chartData.chartData) {
      // Show error state
      console.error('No chart data available');
      return;
    }

    const { daily, monthly, yearly } = chartData.chartData;
    const metrics = chartData.metrics || {};

    let currentData = daily;
    let currentPeriod = 'daily';

    function updateChart(data, period) {
      const chartContainer = document.getElementById('simple-chart');
      const labelsContainer = document.getElementById('chart-labels');
      chartContainer.innerHTML = '';
      labelsContainer.innerHTML = '';

      if (!data || data.length === 0) {
        // Show empty state
        chartContainer.innerHTML = '<div style="display: flex; align-items: center; justify-content: center; height: 100%; color: #64748B;">No data available</div>';
        labelsContainer.innerHTML = '';
        return;
      }

      // Calculate statistics
      const salesValues = data.map(item => item.sales || 0);
      const totalSales = salesValues.reduce((sum, val) => sum + val, 0);
      const averageSales = salesValues.length > 0 ? totalSales / salesValues.length : 0;
      const maxSales = Math.max(...salesValues, 1); // Ensure at least 1 to prevent division by zero
      const minSales = Math.min(...salesValues.filter(val => val > 0)) || 0;

      // Update stats display
      document.getElementById('current-sales').textContent = fmtCurrency(salesValues[salesValues.length - 1] || 0);
      document.getElementById('avg-sales').textContent = fmtCurrency(averageSales);
      document.getElementById('total-sales').textContent = fmtCurrency(totalSales);
      document.getElementById('peak-sales').textContent = fmtCurrency(maxSales);
      document.getElementById('lowest-sales').textContent = fmtCurrency(minSales);

      // Calculate growth from first to last
      const firstValue = salesValues[0] || 0;
      const lastValue = salesValues[salesValues.length - 1] || 0;
      let growth = 0;
      if (firstValue > 0) {
        growth = ((lastValue - firstValue) / firstValue) * 100;
      }

      const growthElement = document.getElementById('growth-trend');
      const projectionElement = document.getElementById('projection');
      
      growthElement.textContent = growth.toFixed(1) + '%';
      growthElement.className = growth >= 0 ? 'positive' : 'negative';
      
      projectionElement.textContent = (growth >= 0 ? '+' : '') + growth.toFixed(1) + '%';
      projectionElement.className = growth >= 0 ? 'positive' : 'negative';

      // Draw chart bars
      const chartHeight = 150;
      data.forEach((item, index) => {
        const value = item.sales || 0;
        const barHeight = (value / maxSales) * chartHeight;

        const bar = document.createElement('div');
        bar.style.cssText = `
          height: ${barHeight}px;
          background-color: ${period === 'daily' ? '#7C3AED' : period === 'monthly' ? '#2563EB' : '#22C55E'};
          border-radius: 2px 2px 0 0;
          flex: 1;
          position: relative;
          transition: height 0.3s ease;
          cursor: pointer;
          animation: barGrow 0.5s ease-out;
        `;

        // Tooltip
        bar.innerHTML = `
          <div style="
            position: absolute;
            bottom: 100%;
            left: 50%;
            transform: translateX(-50%);
            background: #0F172A;
            color: white;
            padding: 6px 10px;
            border-radius: 6px;
            font-size: 12px;
            white-space: nowrap;
            opacity: 0;
            transition: opacity 0.2s;
            pointer-events: none;
            z-index: 10;
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
          ">
            ${period === 'daily' ? item.date : period === 'monthly' ? item.date : item.month}: ${fmtCurrency(value)}
            ${item.orders ? `<br><small style="opacity: 0.8;">${item.orders} orders</small>` : ''}
          </div>
        `;

        bar.addEventListener('mouseenter', (e) => {
          const tooltip = e.target.querySelector('div');
          if (tooltip) tooltip.style.opacity = '1';
        });

        bar.addEventListener('mouseleave', (e) => {
          const tooltip = e.target.querySelector('div');
          if (tooltip) tooltip.style.opacity = '0';
        });

        chartContainer.appendChild(bar);

        // Labels
        const label = document.createElement('div');
        label.style.cssText = `
          text-align: center;
          flex: 1;
          font-size: 10px;
          color: #64748B;
          overflow: hidden;
          text-overflow: ellipsis;
        `;

        let labelText = '';
        if (period === 'daily') {
          labelText = item.date;
        } else if (period === 'monthly') {
          labelText = item.date;
        } else {
          labelText = item.month;
        }

        // Show only some labels for readability
        const showEvery = Math.ceil(data.length / 8);
        const showLabel = index % showEvery === 0 || index === data.length - 1;
        label.textContent = showLabel ? labelText : '';

        labelsContainer.appendChild(label);
      });
    }

    // Period toggle functionality
    const dailyBtn = document.getElementById('daily-btn');
    const monthlyBtn = document.getElementById('monthly-btn');
    const yearlyBtn = document.getElementById('yearly-btn');

    function setActiveButton(button) {
      [dailyBtn, monthlyBtn, yearlyBtn].forEach(btn => {
        btn.style.backgroundColor = '#E2E8F0';
        btn.style.color = '#64748B';
      });
      button.style.backgroundColor = '#7C3AED';
      button.style.color = 'white';
    }

    dailyBtn?.addEventListener('click', () => {
      currentData = daily;
      currentPeriod = 'daily';
      setActiveButton(dailyBtn);
      updateChart(currentData, currentPeriod);
    });

    monthlyBtn?.addEventListener('click', () => {
      currentData = monthly;
      currentPeriod = 'monthly';
      setActiveButton(monthlyBtn);
      updateChart(currentData, currentPeriod);
    });

    yearlyBtn?.addEventListener('click', () => {
      currentData = yearly;
      currentPeriod = 'yearly';
      setActiveButton(yearlyBtn);
      updateChart(currentData, currentPeriod);
    });

    // Initial chart
    updateChart(currentData, currentPeriod);
  }

  // Auto-refresh chart data every 60 seconds
  function startChartAutoRefresh() {
    setInterval(async () => {
      console.log('üîÑ Refreshing chart data...');
      await createSimpleChart();
    }, 60000); // 60 seconds
  }

  // Initialize on DOM ready
  document.addEventListener('DOMContentLoaded', () => {
    setupNotifications();
    createSimpleChart();
    startChartAutoRefresh();
    
    // Add loading indicators for async data
    const statCards = document.querySelectorAll('.stat-card');
    statCards.forEach(card => {
      card.addEventListener('click', function() {
        this.classList.add('loading');
        setTimeout(() => this.classList.remove('loading'), 1000);
      });
    });
  });
</script>