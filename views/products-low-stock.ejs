<!-- views/products-low-stock.ejs -->
<section class="low-stock-page">
  <h1 class="page-title">‚ö†Ô∏è Low Stock Products</h1>
  <p class="subtitle">
    These products are below your low stock threshold
    (<strong><%= typeof lowStockThreshold === 'number' ? lowStockThreshold : 15 %> units</strong>).
    Update the stock quantity below to top them up.
  </p>

  <!-- Flash messages -->
  <% (success || []).forEach(msg => { %>
    <div class="flash flash-success">‚úÖ <%= msg %></div>
  <% }) %>
  <% (error || []).forEach(msg => { %>
    <div class="flash flash-error">‚ùå <%= msg %></div>
  <% }) %>

  <%
    const items = Array.isArray(products) ? products : [];
    const threshold = (typeof lowStockThreshold === 'number' ? lowStockThreshold : 15);
  %>

  <% if (!items.length) { %>
    <div class="empty-state">
      <div class="empty-icon">üéâ</div>
      <p>Great news! You have no low stock products (‚â§ <%= threshold %> units).</p>
      <small>All good for now. Keep an eye on your inventory.</small>
      <a href="/products/mine" class="btn btn-primary">‚Üê Back to My Products</a>
    </div>
  <% } else { %>
    <div class="low-stock-summary">
      <div class="summary-card">
        <strong><%= items.length %></strong>
        <span>products with low stock</span>
      </div>
      <a href="/products/mine" class="btn-outline">‚Üê Back to My Products</a>
    </div>

    <div class="low-stock-grid">
      <% items.forEach(function (p) { 
           const stock = Number(p.stock) || 0;
           const price = (p.price != null ? Number(p.price) : 0);
           const idVal = p.customId || (p._id && p._id.toString());
      %>
        <article class="product-card">
          <div class="product-main">
            <div class="product-image">
              <% if (p.imageUrl && p.imageUrl.trim() !== '') { %>
                <img src="<%= p.imageUrl %>" alt="<%= p.name %>" />
              <% } else { %>
                <div class="image-placeholder">üì¶</div>
              <% } %>
            </div>

            <div class="product-info">
              <h2 class="product-name"><%= p.name || 'Unnamed product' %></h2>
              <div class="product-meta">
                <div class="meta-line">
                  <span class="meta-label">Product ID:</span>
                  <span class="meta-value"><%= idVal || '‚Äî' %></span>
                </div>
                <div class="meta-line">
                  <span class="meta-label">Category:</span>
                  <span class="meta-value"><%= p.category || '‚Äî' %></span>
                </div>
                <div class="meta-line">
                  <span class="meta-label">Price:</span>
                  <span class="meta-value">
                    <%= price.toFixed(2) %> ZAR
                  </span>
                </div>
                <div class="meta-line">
                  <span class="meta-label">Current stock:</span>
                  <span class="meta-value stock-low">
                    <%= stock %> unit<%= stock === 1 ? '' : 's' %>
                  </span>
                </div>
                <div class="meta-line">
                  <span class="meta-label">Status:</span>
                  <span class="meta-value">
                    <% if (stock <= 0) { %>
                      <span class="pill pill-out">Out of stock</span>
                    <% } else if (stock <= threshold) { %>
                      <span class="pill pill-low">Low stock</span>
                    <% } else { %>
                      <span class="pill pill-ok">OK</span>
                    <% } %>
                  </span>
                </div>
              </div>
            </div>
          </div>

          <!-- Inline stock update form (like out-of-stock page) -->
          <% if (idVal) { %>
            <form
              class="stock-form"
              method="post"
              action="/products/edit/<%= idVal %>"
            >
              <div class="stock-input-group">
                <label for="stock-<%= idVal %>">New stock</label>
                <input
                  id="stock-<%= idVal %>"
                  type="number"
                  name="stock"
                  min="0"
                  step="1"
                  required
                  placeholder="e.g. 20"
                  value="<%= stock || 10 %>"
                />
              </div>

              <button type="submit" class="btn btn-primary">
                üíæ Save Stock
              </button>

              <!-- Optional: hidden field so you know from which page update came -->
              <input type="hidden" name="source" value="low-stock-page" />
            </form>
          <% } else { %>
            <div class="no-id-warning">
              <small>‚ö†Ô∏è Cannot update stock: no product ID found.</small>
            </div>
          <% } %>
        </article>
      <% }) %>
    </div>
  <% } %>
</section>

