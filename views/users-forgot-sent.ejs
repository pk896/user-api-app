<script nonce="<%= typeof nonce !== 'undefined' ? nonce : '' %>">
(function() {
  'use strict';
  
  const page = document.querySelector('.forgot-sent-page');
  if (!page) return;
  
  // Initialize countdown timer
  function initCountdown() {
    const countdownEl = page.querySelector('#fsp-timer-countdown');
    const cancelBtn = page.querySelector('#fsp-cancel-redirect');
    
    if (!countdownEl) return;
    
    let seconds = 30;
    let timer = null;
    
    function updateCountdown() {
      countdownEl.textContent = seconds;
      seconds--;
      
      if (seconds < 0) {
        clearInterval(timer);
        window.location.href = '/users/login';
      }
    }
    
    timer = setInterval(updateCountdown, 1000);
    updateCountdown();
    
    if (cancelBtn) {
      cancelBtn.addEventListener('click', function() {
        clearInterval(timer);
        countdownEl.parentElement.textContent = 'Auto-redirect cancelled';
        cancelBtn.style.display = 'none';
      });
    }
  }
  
  // Track email provider clicks
  function trackEmailProviders() {
    const providerBtns = page.querySelectorAll('.fsp-provider-btn');
    
    providerBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        const provider = this.querySelector('span').textContent;
        
        // Store preference in localStorage
        try {
          localStorage.setItem('preferredEmailClient', provider);
        } catch (e) {
          console.log('Could not store email preference');
        }
        
        // Add a small delay for better UX
        setTimeout(() => {
          window.open(this.href, '_blank');
        }, 100);
      });
    });
  }
  
  // Smooth navigation
  function initSmoothNavigation() {
    const navLinks = page.querySelectorAll('.fsp-btn[href]');
    
    navLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        if (this.target === '_blank' || this.hasAttribute('data-external')) {
          return;
        }
        
        e.preventDefault();
        
        // Add loading state
        this.classList.add('fsp-loading');
        this.innerHTML = `
          <svg class="fsp-spinner" width="16" height="16" viewBox="0 0 24 24" fill="none">
            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" opacity="0.2"/>
            <path d="M12 2a10 10 0 0 1 10 10" stroke="currentColor" stroke-width="4" stroke-linecap="round"/>
          </svg>
          Loading...
        `;
        
        setTimeout(() => {
          window.location.href = this.href;
        }, 300);
      });
    });
  }
  
  // Initialize everything when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
      initCountdown();
      trackEmailProviders();
      initSmoothNavigation();
    });
  } else {
    initCountdown();
    trackEmailProviders();
    initSmoothNavigation();
  }
})();
</script>