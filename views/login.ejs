<!--login.ejs-->
<section class="auth-form">
  <h1>Log In</h1>

  <!-- Display flash messages and validation errors -->
  <%- include('partials/massage', { success, error, info, warning, errors }) %>

  <form action="/users/login" method="post">
    <div>
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" 
             value="<%= oldInput.email || '' %>" required>
    </div>

    <div>
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" required>
    </div>

    <button type="submit">Log In</button>
  </form>

  <p>
    Don't have an account? 
    <a href="/users/render-sign-up">Sign Up here</a>
  </p>

  <p>
    Or log in with Google:
    <a href="/auth/google">Google OAuth</a>
  </p>
</section>
