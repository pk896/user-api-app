<!--login.ejs-->
<h2>Register with Phakisi Global E-comerce</h2>
    <br> <h3>you can notified about our new products and specials</h3>
    
  <div class="container">
    <h1><%=title%></h1>

    <!-- Login form -->
    <form action="/users/log-in" method="POST">
      <div class="form-group">
        <label for="email">Email</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          value="<%= oldInput.email || '' %>" 
          required
        >
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input 
          type="password" 
          id="password" 
          name="password" 
          required
        >
      </div><br>

      <button type="submit">Log in</button>
    </form>

    <p class="google-link">
      <a href="/auth/google">Sign up / Login with Google</a>
    </p>

    <p>Don't have an account? <a href="/users/render-sign-up">Sign Up</a></p>
  </div>






