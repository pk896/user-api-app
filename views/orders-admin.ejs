<!-- views/orders-admin.ejs -->
<% const NONCE = typeof nonce !== 'undefined' ? nonce : '' %>

<main class="admin-page">
  <!-- Header -->
  <header class="page-header">
    <div>
      <h1><i class="icon-orders"></i> Orders <span class="badge admin">Admin</span></h1>
      <p class="subtitle">Manage customer orders and process refunds</p>
    </div>
    <a href="/admin/dashboard" class="btn-back">‚Üê Back to Dashboard</a>
  </header>

  <!-- Stats -->
  <div class="stats-grid">
    <div class="stat-card">
      <span class="stat-label">Total</span>
      <span class="stat-value" id="totalOrders">--</span>
    </div>
    <div class="stat-card">
      <span class="stat-label">Completed</span>
      <span class="stat-value success" id="completedOrders">--</span>
    </div>
    <div class="stat-card">
      <span class="stat-label">Pending</span>
      <span class="stat-value warning" id="pendingOrders">--</span>
    </div>
    <div class="stat-card">
      <span class="stat-label">Refunded</span>
      <span class="stat-value danger" id="refundedOrders">--</span>
    </div>
  </div>

  <!-- Main Content -->
  <div class="content-card">
    <!-- Filters -->
    <div class="filter-section">
      <div class="search-box">
        <input type="search" id="searchInput" placeholder="Search orders..." class="search-input">
        <button id="clearSearch" class="btn-clear">√ó</button>
      </div>
      <div class="filter-actions">
        <select id="statusFilter" class="select-filter">
          <option value="">All Status</option>
          <option value="completed">Completed</option>
          <option value="pending">Pending</option>
        </select>
        <button id="refreshBtn" class="btn-primary">
          <span class="btn-icon">‚Üª</span> Refresh
        </button>
      </div>
    </div>

    <!-- Desktop Table -->
    <div class="table-responsive">
      <table class="orders-table" id="desktopTable">
        <thead>
          <tr>
            <th>Date</th>
            <th>Order ID</th>
            <th>Status</th>
            <th>Customer</th>
            <th>Amount</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="tableBody">
          <tr><td colspan="6" class="text-muted">Loading orders...</td></tr>
        </tbody>
      </table>
    </div>

    <!-- Mobile Cards -->
    <div class="mobile-cards" id="mobileCards">
      <div class="text-muted">Loading orders...</div>
    </div>

    <!-- Empty State -->
    <div class="empty-state" id="emptyState" hidden>
      <div class="empty-icon">üìã</div>
      <h3>No orders found</h3>
      <p>Try adjusting your search or filter</p>
    </div>

    <!-- Messages -->
    <div class="alert" id="alert" role="alert" hidden></div>
  </div>

  <!-- Modal -->
  <div class="modal-overlay" id="modal" style="display: none;">
    <div class="modal-dialog">
      <div class="modal-header">
        <h3 id="modalTitle">Confirm</h3>
        <button class="modal-close" id="modalClose">√ó</button>
      </div>
      <div class="modal-body">
        <p id="modalMessage">Are you sure?</p>
        <div id="modalContent"></div>
      </div>
      <div class="modal-footer">
        <button class="btn-secondary" id="modalCancel">Cancel</button>
        <button class="btn-danger" id="modalConfirm">Confirm</button>
      </div>
    </div>
  </div>
</main>

<style nonce="<%= NONCE %>">
/* ===== BRAND COLOR VARIABLES ===== */
:root {
  /* Your Company Colors */
  --blue: #2563EB;          /* Trust & Reliability */
  --purple: #7C3AED;        /* Innovation & Creativity */
  --green: #22C55E;         /* Growth & Success */
  --black: #0F172A;         /* Sophistication & Premium */
  
  /* Derived Colors */
  --blue-light: rgba(37, 99, 235, 0.1);
  --blue-hover: #1D4ED8;
  --purple-light: rgba(124, 58, 237, 0.1);
  --purple-hover: #6D28D9;
  --green-light: rgba(34, 197, 94, 0.1);
  --green-hover: #16A34A;
  --black-light: rgba(15, 23, 42, 0.08);
  --black-hover: #1E293B;
  
  /* System Colors */
  --light: #F8FAFC;
  --border: #E2E8F0;
  --text: #475569;
  --text-light: #64748B;
  
  /* Status Colors */
  --warning: #F59E0B;
  --danger: #EF4444;
}

/* Base Styles */
.admin-page {
  padding: 16px;
  max-width: 1200px;
  margin: 0 auto;
  background: var(--light);
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20px;
  flex-wrap: wrap;
  gap: 16px;
}

.page-header h1 {
  font-size: 24px;
  color: var(--black);
  margin: 0;
  display: flex;
  align-items: center;
  gap: 8px;
}

.icon-orders {
  color: var(--blue);
  font-size: 24px;
}

.badge.admin {
  background: var(--purple);
  color: white;
  padding: 2px 8px;
  border-radius: 12px;
  font-size: 12px;
  font-weight: 600;
  border: 1px solid var(--purple);
}

.subtitle {
  color: var(--text-light);
  margin: 4px 0 0;
  font-size: 14px;
}

.btn-back {
  background: white;
  border: 1px solid var(--border);
  border-radius: 8px;
  padding: 8px 16px;
  color: var(--text);
  text-decoration: none;
  font-size: 14px;
  font-weight: 500;
  transition: all 0.2s;
}

.btn-back:hover {
  background: var(--light);
  border-color: var(--blue);
  color: var(--blue);
}

/* Stats */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 12px;
  margin-bottom: 24px;
}

.stat-card {
  background: white;
  border: 1px solid var(--border);
  border-radius: 12px;
  padding: 16px;
  transition: transform 0.2s;
  border-top: 3px solid var(--black);
}

.stat-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(15, 23, 42, 0.05);
}

.stat-label {
  display: block;
  color: var(--text-light);
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  margin-bottom: 4px;
}

.stat-value {
  font-size: 24px;
  font-weight: 700;
  color: var(--black);
}

.stat-value.success { 
  color: var(--green); 
}

.stat-value.warning { 
  color: var(--warning); 
}

.stat-value.danger { 
  color: var(--danger); 
}

/* Content Card */
.content-card {
  background: white;
  border: 1px solid var(--border);
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 1px 3px rgba(15, 23, 42, 0.04);
  border-top: 4px solid var(--blue);
}

/* Filters */
.filter-section {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 20px;
}

.search-box {
  position: relative;
}

.search-input {
  width: 100%;
  padding: 10px 40px 10px 16px;
  border: 1px solid var(--border);
  border-radius: 8px;
  font-size: 14px;
  background: white;
  transition: all 0.2s;
}

.search-input:focus {
  outline: none;
  border-color: var(--blue);
  box-shadow: 0 0 0 3px var(--blue-light);
}

.btn-clear {
  position: absolute;
  right: 10px;
  top: 50%;
  transform: translateY(-50%);
  background: none;
  border: none;
  color: var(--text-light);
  cursor: pointer;
  font-size: 18px;
  padding: 4px;
}

.btn-clear:hover {
  color: var(--black);
}

.filter-actions {
  display: flex;
  gap: 8px;
}

.select-filter {
  flex: 1;
  padding: 10px;
  border: 1px solid var(--border);
  border-radius: 8px;
  font-size: 14px;
  background: white;
  color: var(--black);
}

.select-filter:focus {
  outline: none;
  border-color: var(--blue);
}

.btn-primary {
  background: var(--blue);
  color: white;
  border: none;
  border-radius: 8px;
  padding: 10px 16px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  display: flex;
  align-items: center;
  gap: 6px;
  transition: background 0.2s;
}

.btn-primary:hover {
  background: var(--blue-hover);
}

/* Table */
.table-responsive {
  overflow-x: auto;
  border-radius: 8px;
  border: 1px solid var(--border);
}

.orders-table {
  width: 100%;
  border-collapse: collapse;
  min-width: 800px;
}

.orders-table th {
  background: var(--light);
  padding: 12px;
  text-align: left;
  font-size: 12px;
  font-weight: 600;
  color: var(--text);
  text-transform: uppercase;
  border-bottom: 1px solid var(--border);
}

.orders-table td {
  padding: 12px;
  border-bottom: 1px solid var(--light);
  font-size: 14px;
  color: var(--black);
}

.orders-table tr:hover {
  background: var(--blue-light);
}

/* Status Badges */
.status-badge {
  display: inline-block;
  padding: 4px 10px;
  border-radius: 12px;
  font-size: 12px;
  font-weight: 600;
  border: 1px solid;
}

.status-completed {
  background: var(--green-light);
  color: var(--green);
  border-color: rgba(34, 197, 94, 0.2);
}

.status-pending {
  background: rgba(245, 158, 11, 0.1);
  color: var(--warning);
  border-color: rgba(245, 158, 11, 0.2);
}

/* Action Buttons */
.action-buttons {
  display: flex;
  gap: 6px;
  flex-wrap: wrap;
}

.btn-action {
  padding: 6px 12px;
  border: none;
  border-radius: 6px;
  font-size: 12px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s;
  white-space: nowrap;
}

.btn-refund {
  background: var(--purple-light);
  color: var(--purple);
  border: 1px solid var(--purple-light);
}

.btn-refund:hover {
  background: var(--purple);
  color: white;
  border-color: var(--purple);
}

.btn-cancel {
  background: rgba(245, 158, 11, 0.1);
  color: var(--warning);
  border: 1px solid rgba(245, 158, 11, 0.1);
}

.btn-cancel:hover {
  background: var(--warning);
  color: white;
  border-color: var(--warning);
}

.btn-delete {
  background: rgba(239, 68, 68, 0.1);
  color: var(--danger);
  border: 1px solid rgba(239, 68, 68, 0.1);
}

.btn-delete:hover {
  background: var(--danger);
  color: white;
  border-color: var(--danger);
}

/* Mobile Cards */
.mobile-cards {
  display: none;
}

.mobile-card {
  background: white;
  border: 1px solid var(--border);
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 12px;
  transition: all 0.2s;
  border-left: 3px solid var(--blue);
}

.mobile-card:hover {
  box-shadow: 0 4px 12px rgba(37, 99, 235, 0.1);
  border-color: var(--blue-light);
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 40px 20px;
  color: var(--text-light);
}

.empty-icon {
  font-size: 48px;
  margin-bottom: 16px;
  opacity: 0.5;
  color: var(--black);
}

.empty-state h3 {
  margin: 0 0 8px;
  color: var(--black);
  font-size: 18px;
}

.empty-state p {
  margin: 0;
  font-size: 14px;
  color: var(--text-light);
}

/* Alert */
.alert {
  padding: 12px 16px;
  border-radius: 8px;
  margin-top: 16px;
  font-size: 14px;
  font-weight: 500;
  display: none;
  border: 1px solid;
}

.alert-success {
  background: var(--green-light);
  color: var(--green);
  border-color: rgba(34, 197, 94, 0.2);
}

.alert-error {
  background: rgba(239, 68, 68, 0.1);
  color: var(--danger);
  border-color: rgba(239, 68, 68, 0.2);
}

/* Modal */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(15, 23, 42, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(4px);
}

.modal-dialog {
  background: white;
  border-radius: 16px;
  width: 90%;
  max-width: 400px;
  box-shadow: 0 20px 40px rgba(15, 23, 42, 0.2);
  animation: modalSlideIn 0.3s ease;
  border-top: 4px solid var(--purple);
}

@keyframes modalSlideIn {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px 20px 16px;
  border-bottom: 1px solid var(--border);
}

.modal-header h3 {
  margin: 0;
  color: var(--black);
  font-size: 18px;
}

.modal-close {
  background: none;
  border: none;
  font-size: 24px;
  cursor: pointer;
  color: var(--text-light);
  padding: 0;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 4px;
}

.modal-close:hover {
  background: var(--light);
  color: var(--black);
}

.modal-body {
  padding: 20px;
}

.modal-body p {
  margin: 0 0 16px;
  color: var(--black);
  font-size: 14px;
  line-height: 1.5;
}

.modal-footer {
  display: flex;
  gap: 12px;
  padding: 16px 20px 20px;
  border-top: 1px solid var(--border);
}

.btn-secondary {
  background: white;
  border: 1px solid var(--border);
  color: var(--text);
  padding: 10px 20px;
  border-radius: 8px;
  flex: 1;
  cursor: pointer;
  font-size: 14px;
  font-weight: 500;
  transition: all 0.2s;
}

.btn-secondary:hover {
  background: var(--light);
  border-color: var(--blue);
  color: var(--blue);
}

.btn-danger {
  background: var(--danger);
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 8px;
  flex: 1;
  cursor: pointer;
  font-size: 14px;
  font-weight: 500;
  transition: background 0.2s;
}

.btn-danger:hover {
  background: #DC2626;
}

/* Responsive */
@media (max-width: 768px) {
  .admin-page {
    padding: 12px;
  }
  
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .table-responsive {
    display: none;
  }
  
  .mobile-cards {
    display: block;
  }
  
  .filter-actions {
    flex-direction: column;
  }
  
  .modal-dialog {
    margin: 0 16px;
  }
}

@media (max-width: 360px) {
  .page-header {
    flex-direction: column;
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
  }
  
  .stat-card {
    padding: 12px;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .btn-action {
    width: 100%;
  }
  
  .modal-footer {
    flex-direction: column;
  }
}

/* Utility Classes */
.text-muted {
  color: var(--text-light) !important;
  opacity: 0.7;
  font-style: italic;
}
</style>

<script nonce="<%= NONCE %>">
document.addEventListener('DOMContentLoaded', function() {
  const PP_ACTIVITY_BASE = "<%= ppActivityBase %>";
  
  // DOM Elements
  const elements = {
    tableBody: document.getElementById('tableBody'),
    mobileCards: document.getElementById('mobileCards'),
    searchInput: document.getElementById('searchInput'),
    clearSearch: document.getElementById('clearSearch'),
    refreshBtn: document.getElementById('refreshBtn'),
    statusFilter: document.getElementById('statusFilter'),
    alert: document.getElementById('alert'),
    emptyState: document.getElementById('emptyState'),
    modal: document.getElementById('modal'),
    modalTitle: document.getElementById('modalTitle'),
    modalMessage: document.getElementById('modalMessage'),
    modalContent: document.getElementById('modalContent'),
    modalConfirm: document.getElementById('modalConfirm'),
    modalCancel: document.getElementById('modalCancel'),
    modalClose: document.getElementById('modalClose')
  };
  
  let orders = [];
  let currentOrder = null;
  let modalCallback = null;
  
  // Initialize
  loadOrders();
  setupEventListeners();
  
  // Functions
  function showAlert(type, message) {
    elements.alert.className = `alert alert-${type}`;
    elements.alert.textContent = message;
    elements.alert.style.display = 'block';
    setTimeout(() => {
      elements.alert.style.display = 'none';
    }, 5000);
  }
  
  function showModal(title, message, content, callback) {
    elements.modalTitle.textContent = title;
    elements.modalMessage.textContent = message;
    elements.modalContent.innerHTML = content;
    modalCallback = callback;
    elements.modal.style.display = 'flex';
  }
  
  function hideModal() {
    elements.modal.style.display = 'none';
    modalCallback = null;
  }
  
  async function loadOrders() {
    try {
      elements.tableBody.innerHTML = '<tr><td colspan="6" class="text-muted">Loading orders...</td></tr>';
      elements.mobileCards.innerHTML = '<div class="text-muted">Loading orders...</div>';
      
      const response = await fetch('/api/admin/orders?limit=50');
      const data = await response.json();
      
      if (data.ok) {
        orders = data.orders || [];
        renderOrders();
        updateStats();
      } else {
        throw new Error(data.message || 'Failed to load orders');
      }
    } catch (error) {
      showAlert('error', error.message);
      elements.tableBody.innerHTML = `<tr><td colspan="6" class="text-muted">Error loading orders: ${error.message}</td></tr>`;
      elements.mobileCards.innerHTML = `<div class="text-muted">Error loading orders: ${error.message}</div>`;
    }
  }
  
  function updateStats() {
    const total = orders.length;
    const completed = orders.filter(o => 
      ['completed', 'captured', 'approved'].includes(o.status?.toLowerCase())
    ).length;
    const pending = orders.filter(o => 
      o.status?.toLowerCase() === 'pending'
    ).length;
    const refunded = orders.filter(o => 
      o.status?.toLowerCase() === 'refunded'
    ).length;
    
    document.getElementById('totalOrders').textContent = total;
    document.getElementById('completedOrders').textContent = completed;
    document.getElementById('pendingOrders').textContent = pending;
    document.getElementById('refundedOrders').textContent = refunded;
  }
  
  function renderOrders() {
    const searchTerm = elements.searchInput.value.toLowerCase();
    const statusFilter = elements.statusFilter.value;
    
    const filteredOrders = orders.filter(order => {
      // Search filter
      if (searchTerm) {
        const searchFields = [
          order.orderId,
          order.captureId,
          order.payerEmail,
          order.payerName?.given_name,
          order.payerName?.surname
        ].filter(Boolean).map(f => f.toLowerCase());
        
        if (!searchFields.some(f => f.includes(searchTerm))) {
          return false;
        }
      }
      
      // Status filter
      if (statusFilter && order.status?.toLowerCase() !== statusFilter) {
        return false;
      }
      
      return true;
    });
    
    // Show/hide empty state
    if (filteredOrders.length === 0) {
      elements.emptyState.hidden = false;
      if (orders.length === 0) {
        elements.emptyState.innerHTML = `
          <div class="empty-icon">üìã</div>
          <h3>No orders yet</h3>
          <p>Orders will appear here once they are placed</p>
        `;
      } else {
        elements.emptyState.innerHTML = `
          <div class="empty-icon">üîç</div>
          <h3>No orders found</h3>
          <p>Try adjusting your search or filter</p>
        `;
      }
    } else {
      elements.emptyState.hidden = true;
    }
    
    // Render desktop table
    renderDesktopTable(filteredOrders);
    
    // Render mobile cards
    renderMobileCards(filteredOrders);
  }
  
  function renderDesktopTable(filteredOrders) {
    if (filteredOrders.length === 0) {
      elements.tableBody.innerHTML = `
        <tr>
          <td colspan="6" class="text-muted" style="text-align: center; padding: 40px;">
            No orders found
          </td>
        </tr>
      `;
      return;
    }
    
    elements.tableBody.innerHTML = filteredOrders.map(order => {
      const status = order.status?.toLowerCase() || 'pending';
      const statusClass = status === 'completed' || status === 'captured' || status === 'approved' 
        ? 'status-completed' 
        : 'status-pending';
      
      return `
        <tr>
          <td><small>${new Date(order.createdAt).toLocaleDateString()}</small></td>
          <td><code>${order.orderId}</code></td>
          <td><span class="status-badge ${statusClass}">${order.status}</span></td>
          <td>
            ${order.payerName ? `${order.payerName.given_name || ''} ${order.payerName.surname || ''}`.trim() : 'N/A'}<br>
            <small class="text-muted">${order.payerEmail || ''}</small>
          </td>
          <td><strong>${order.currency} ${parseFloat(order.amount).toFixed(2)}</strong></td>
          <td>
            <div class="action-buttons">
              ${order.captureId ? `
                <button class="btn-action btn-refund" data-id="${order.orderId}" data-capture="${order.captureId}">
                  Refund
                </button>
              ` : ''}
              <button class="btn-action btn-cancel" data-id="${order.orderId}">Cancel</button>
              <button class="btn-action btn-delete" data-id="${order.orderId}">Delete</button>
            </div>
          </td>
        </tr>
      `;
    }).join('');
  }
  
  function renderMobileCards(filteredOrders) {
    if (filteredOrders.length === 0) {
      elements.mobileCards.innerHTML = '<div class="text-muted" style="text-align: center; padding: 40px 20px;">No orders found</div>';
      return;
    }
    
    elements.mobileCards.innerHTML = filteredOrders.map(order => {
      const status = order.status?.toLowerCase() || 'pending';
      const statusClass = status === 'completed' || status === 'captured' || status === 'approved' 
        ? 'status-completed' 
        : 'status-pending';
      
      return `
        <div class="mobile-card">
          <div style="display: flex; justify-content: space-between; margin-bottom: 12px;">
            <div>
              <div style="font-weight: 600; color: #2563EB;">${order.orderId}</div>
              <div class="text-muted" style="font-size: 12px;">
                ${new Date(order.createdAt).toLocaleString()}
              </div>
            </div>
            <span class="status-badge ${statusClass}">${order.status}</span>
          </div>
          
          <div style="margin-bottom: 12px;">
            <div style="font-weight: 600; margin-bottom: 4px;">
              ${order.payerName ? `${order.payerName.given_name || ''} ${order.payerName.surname || ''}`.trim() : 'Customer'}
            </div>
            <div class="text-muted" style="font-size: 12px;">${order.payerEmail || ''}</div>
          </div>
          
          <div style="display: flex; justify-content: space-between; margin-bottom: 16px;">
            <div>
              <div style="font-size: 12px; color: #475569;">Amount</div>
              <div style="font-weight: 700; font-size: 18px;">${order.currency} ${parseFloat(order.amount).toFixed(2)}</div>
            </div>
            ${order.captureId ? `
              <div>
                <div style="font-size: 12px; color: #475569;">Capture ID</div>
                <div style="font-size: 12px;"><code>${order.captureId.substring(0, 8)}...</code></div>
              </div>
            ` : ''}
          </div>
          
          <div class="action-buttons">
            ${order.captureId ? `
              <button class="btn-action btn-refund" data-id="${order.orderId}" data-capture="${order.captureId}">
                Refund
              </button>
            ` : ''}
            <button class="btn-action btn-cancel" data-id="${order.orderId}">Cancel</button>
            <button class="btn-action btn-delete" data-id="${order.orderId}">Delete</button>
          </div>
        </div>
      `;
    }).join('');
  }
  
  // Event Handlers
  function setupEventListeners() {
    // Search
    elements.searchInput.addEventListener('input', renderOrders);
    elements.clearSearch.addEventListener('click', () => {
      elements.searchInput.value = '';
      renderOrders();
    });
    
    // Filter
    elements.statusFilter.addEventListener('change', renderOrders);
    
    // Refresh
    elements.refreshBtn.addEventListener('click', loadOrders);
    
    // Modal
    elements.modalConfirm.addEventListener('click', () => {
      if (modalCallback) modalCallback(true);
      hideModal();
    });
    
    elements.modalCancel.addEventListener('click', () => {
      if (modalCallback) modalCallback(false);
      hideModal();
    });
    
    elements.modalClose.addEventListener('click', hideModal);
    
    // Close modal when clicking outside
    elements.modal.addEventListener('click', (e) => {
      if (e.target === elements.modal) {
        hideModal();
      }
    });
    
    // Click events for actions
    document.addEventListener('click', async (e) => {
      const btn = e.target.closest('[data-id]');
      if (!btn) return;
      
      const orderId = btn.dataset.id;
      const action = btn.classList[1]; // btn-refund, btn-cancel, or btn-delete
      
      if (action === 'btn-refund') {
        const captureId = btn.dataset.capture;
        showModal(
          'Refund Order',
          'Enter refund amount (leave empty for full refund):',
          `<input type="number" id="refundAmount" placeholder="Full amount" step="0.01" min="0" style="width: 100%; padding: 10px; border: 1px solid #E2E8F0; border-radius: 6px; font-size: 14px; margin-bottom: 8px;">
           <small class="text-muted">Order ID: ${orderId}</small>`,
          async (confirmed) => {
            if (confirmed) {
              const amount = document.getElementById('refundAmount').value;
              try {
                const response = await fetch(`/api/admin/orders/${orderId}/refund`, {
                  method: 'POST',
                  headers: { 'Content-Type': 'application/json' },
                  body: JSON.stringify(amount ? { amount: parseFloat(amount) } : {})
                });
                const data = await response.json();
                if (data.ok) {
                  showAlert('success', 'Refund processed successfully');
                  loadOrders();
                } else {
                  throw new Error(data.message);
                }
              } catch (error) {
                showAlert('error', error.message);
              }
            }
          }
        );
      }
      
      if (action === 'btn-cancel') {
        showModal(
          'Cancel Order',
          'Are you sure you want to cancel this order?',
          `<div class="text-muted">Order ID: ${orderId}</div>`,
          async (confirmed) => {
            if (confirmed) {
              try {
                const response = await fetch(`/api/admin/orders/${orderId}/cancel`, {
                  method: 'POST',
                  headers: { 'Content-Type': 'application/json' },
                  body: JSON.stringify({ reason: 'Admin cancelled' })
                });
                const data = await response.json();
                if (data.ok) {
                  showAlert('success', 'Order cancelled successfully');
                  loadOrders();
                } else {
                  throw new Error(data.message);
                }
              } catch (error) {
                showAlert('error', error.message);
              }
            }
          }
        );
      }
      
      if (action === 'btn-delete') {
        showModal(
          'Delete Order',
          'This will permanently delete the order. This action cannot be undone.',
          `<div class="text-muted">Order ID: ${orderId}</div>
           <div style="color: #EF4444; font-size: 12px; margin-top: 8px;">‚ö†Ô∏è This action is irreversible</div>`,
          async (confirmed) => {
            if (confirmed) {
              try {
                const response = await fetch(`/api/admin/orders/${orderId}`, {
                  method: 'DELETE'
                });
                const data = await response.json();
                if (data.ok) {
                  showAlert('success', 'Order deleted successfully');
                  loadOrders();
                } else {
                  throw new Error(data.message);
                }
              } catch (error) {
                showAlert('error', error.message);
              }
            }
          }
        );
      }
    });
  }
});
</script>