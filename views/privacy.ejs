const pageScripts = `
  document.addEventListener('DOMContentLoaded', function() {
    // Back to top button
    const backToTopBtn = document.createElement('a');
    backToTopBtn.href = '#top';
    backToTopBtn.className = 'back-to-top';
    backToTopBtn.innerHTML = 'â†‘';
    backToTopBtn.setAttribute('aria-label', 'Back to top');
    document.body.appendChild(backToTopBtn);
    
    // Show/hide back to top button
    window.addEventListener('scroll', function() {
      if (window.scrollY > 300) {
        backToTopBtn.classList.add('visible');
      } else {
        backToTopBtn.classList.remove('visible');
      }
    });
    
    // Smooth scroll to top
    backToTopBtn.addEventListener('click', function(e) {
      e.preventDefault();
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });
    
    // Add section IDs for better navigation
    const sections = document.querySelectorAll('.section h2');
    sections.forEach((section, index) => {
      const id = 'section-' + (index + 1);
      section.setAttribute('id', id);
      
      // Add anchor link
      const anchor = document.createElement('a');
      anchor.href = '#' + id;
      anchor.className = 'section-anchor';
      anchor.innerHTML = 'ğŸ”—';
      anchor.style.marginLeft = '0.5rem';
      anchor.style.fontSize = '0.75rem';
      anchor.style.opacity = '0.5';
      anchor.style.textDecoration = 'none';
      anchor.style.transition = 'opacity 0.2s ease';
      
      anchor.addEventListener('mouseenter', () => {
        anchor.style.opacity = '1';
      });
      
      anchor.addEventListener('mouseleave', () => {
        anchor.style.opacity = '0.5';
      });
      
      section.appendChild(anchor);
    });
    
    // Highlight current section in view
    const observerOptions = {
      root: null,
      rootMargin: '0px',
      threshold: 0.3
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.boxShadow = '0 0 0 2px var(--green)';
          setTimeout(() => {
            entry.target.style.boxShadow = '';
          }, 2000);
        }
      });
    }, observerOptions);
    
    document.querySelectorAll('.section').forEach(section => {
      observer.observe(section);
    });
    
    // Mobile menu for table of contents (optional enhancement)
    const createMobileTOC = () => {
      if (window.innerWidth <= 480) {
        const toc = document.createElement('div');
        toc.className = 'mobile-toc';
        toc.innerHTML = \`
          <select class="toc-select" aria-label="Jump to section">
            <option value="">Jump to section...</option>
            \${Array.from(sections).map(section => 
              \`<option value="\${section.id}">\${section.textContent.replace('ğŸ”—', '')}</option>\`
            ).join('')}
          </select>
        \`;
        
        document.querySelector('.privacy-header').appendChild(toc);
        
        const select = toc.querySelector('.toc-select');
        select.addEventListener('change', function() {
          if (this.value) {
            const target = document.getElementById(this.value);
            if (target) {
              target.scrollIntoView({ behavior: 'smooth' });
              this.value = '';
            }
          }
        });
      }
    };
    
    createMobileTOC();
    window.addEventListener('resize', createMobileTOC);
  });
`;
