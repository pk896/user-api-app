<script nonce="<%= typeof nonce !== 'undefined' ? nonce : '' %>">
  document.addEventListener("DOMContentLoaded", () => {
    console.log("âœ… Business signup loaded with CSP nonce");
    
    // Password strength indicator
    const passwordInput = document.getElementById('password');
    const strengthFill = document.getElementById('strengthFill');
    const strengthText = document.getElementById('strengthText');
    
    if (passwordInput && strengthFill && strengthText) {
      passwordInput.addEventListener('input', function() {
        const password = this.value;
        let strength = 0;
        
        if (password.length >= 8) strength++;
        if (password.length >= 12) strength++;
        if (/[a-z]/.test(password)) strength++;
        if (/[A-Z]/.test(password)) strength++;
        if (/[0-9]/.test(password)) strength++;
        if (/[^A-Za-z0-9]/.test(password)) strength++;
        
        const percentage = Math.min((strength / 6) * 100, 100);
        strengthFill.style.width = percentage + '%';
        
        let label = 'Weak';
        let color = '#EF4444';
        
        if (strength >= 5) {
          label = 'Strong';
          color = '#22C55E';
        } else if (strength >= 3) {
          label = 'Good';
          color = '#F59E0B';
        } else if (strength >= 2) {
          label = 'Fair';
          color = '#F59E0B';
        }
        
        strengthText.textContent = label;
        strengthFill.style.backgroundColor = color;
      });
    }
    
    // Toggle password visibility
    document.querySelectorAll('.toggle-password').forEach(button => {
      const targetId = button.getAttribute('data-target');
      const input = document.getElementById(targetId);
      if (!input) return;
      
      button.addEventListener('click', () => {
        const isPassword = input.type === 'password';
        input.type = isPassword ? 'text' : 'password';
      });
    });
    
    // Role selection highlighting
    document.querySelectorAll('.role-option input').forEach(radio => {
      radio.addEventListener('change', function() {
        document.querySelectorAll('.role-card').forEach(card => {
          card.style.borderColor = '';
          card.style.background = '';
        });
        
        if (this.checked) {
          const card = this.nextElementSibling;
          if (card) {
            card.style.borderColor = '#2563EB';
            card.style.background = 'rgba(37, 99, 235, 0.05)';
          }
        }
      });
    });
    
    // Form validation
    const form = document.getElementById('businessSignupForm');
    if (form) {
      form.addEventListener('submit', function(e) {
        let isValid = true;
        let firstErrorField = null;
        
        const requiredFields = this.querySelectorAll('[required]');
        requiredFields.forEach(field => {
          const isRadio = field.type === 'radio';
          const isCheckbox = field.type === 'checkbox';
          let valid = false;
          
          if (isRadio) {
            const group = this.querySelectorAll(`input[name="${field.name}"]`);
            valid = Array.from(group).some(r => r.checked);
          } else if (isCheckbox) {
            valid = field.checked;
          } else {
            valid = field.value && field.value.trim() !== '';
          }
          
          if (!valid) {
            isValid = false;
            if (!firstErrorField) firstErrorField = field;
            
            if (isRadio) {
              const card = field.closest('.role-option')?.querySelector('.role-card');
              if (card) {
                card.style.borderColor = '#EF4444';
              }
            } else {
              field.classList.add('field-error');
            }
          } else {
            if (!isRadio && !isCheckbox) {
              field.classList.remove('field-error');
            }
          }
        });
        
        if (!isValid) {
          e.preventDefault();
          
          if (firstErrorField) {
            (firstErrorField.closest('.role-card') || firstErrorField)
              .scrollIntoView({ behavior: 'smooth', block: 'center' });
          }
          
          const errorDiv = document.createElement('div');
          errorDiv.className = 'flash flash-error';
          errorDiv.innerHTML = `
            <svg class="flash-icon" viewBox="0 0 24 24" width="20" height="20">
              <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z" />
            </svg>
            <div class="flash-content">
              <strong>Please fill in all required fields</strong>
              <p>All fields marked with * are required</p>
            </div>
          `;
          
          const flashContainer = document.querySelector('.flash-container');
          if (flashContainer) {
            const existing = flashContainer.querySelector('.flash-error');
            if (existing) existing.remove();
            flashContainer.insertBefore(errorDiv, flashContainer.firstChild);
            setTimeout(() => errorDiv.remove(), 5000);
          }
        }
      });
    }
  });
</script>