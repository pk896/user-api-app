<div class="signup-page">
  <!-- Background Decoration -->
  <div class="background-decoration">
    <div class="decoration-circle circle-1"></div>
    <div class="decoration-circle circle-2"></div>
    <div class="decoration-circle circle-3"></div>
  </div>

  <!-- Main Content -->
  <div class="signup-container">
    <!-- Header/Brand Section - Always on top -->
    <div class="header-section">
      <div class="brand-header">
        <div class="brand-logo">
          <svg viewBox="0 0 24 24" width="26" height="26" aria-hidden="true">
            <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
          </svg>
        </div>
        <div>
          <p class="brand-mini">Business Suite</p>
          <h1 class="brand-name">Unicoporate</h1>
        </div>
      </div>
      <div class="page-header">
        <h2>Create Business Account</h2>
        <p class="page-subtitle">Join our network of verified businesses</p>
      </div>
    </div>

    <!-- Main Grid Container -->
    <div class="main-grid">
      <!-- Left Column - Benefits & Features -->
      <div class="benefits-column">
        <div class="benefits-card">
          <div class="sidebar-welcome">
            <h3>Join Our Business Network</h3>
            <p>Connect with thousands of verified businesses, expand your reach, and grow your enterprise with our platform.</p>
          </div>

          <div class="features-list">
            <div class="feature-item">
              <div class="feature-icon">
                <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
                  <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
                </svg>
              </div>
              <div class="feature-content">
                <h4>Verified Businesses</h4>
                <p>All businesses undergo verification for trust and security</p>
              </div>
            </div>
            <div class="feature-item">
              <div class="feature-icon">
                <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
                  <path fill="currentColor" d="M20 6h-4V4c0-1.11-.89-2-2-2h-4c-1.11 0-2 .89-2 2v2H4c-1.11 0-1.99.89-1.99 2L2 19c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V8c0-1.1-.89-2-2-2zm-6 0h-4V4h4v2z" />
                </svg>
              </div>
              <div class="feature-content">
                <h4>Product Management</h4>
                <p>Manage inventory, orders, and analytics in one place</p>
              </div>
            </div>
            <div class="feature-item">
              <div class="feature-icon">
                <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
                  <path fill="currentColor" d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                </svg>
              </div>
              <div class="feature-content">
                <h4>Global Network</h4>
                <p>Connect with businesses worldwide for growth opportunities</p>
              </div>
            </div>
          </div>

          <div class="stats-banner">
            <div class="stat">
              <div class="stat-number">10K+</div>
              <div class="stat-label">Businesses</div>
            </div>
            <div class="stat">
              <div class="stat-number">50+</div>
              <div class="stat-label">Countries</div>
            </div>
            <div class="stat">
              <div class="stat-number">99%</div>
              <div class="stat-label">Satisfaction</div>
            </div>
          </div>
        </div>

        <div class="login-prompt">
          <p>Already have an account?</p>
          <a href="/business/login" class="btn-login">
            <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
              <path fill="currentColor" d="M10 17v-3H3v-4h7V7l5 5-5 5z" />
            </svg>
            <span>Sign In</span>
          </a>
        </div>
      </div>

      <!-- Right Column - Signup Form -->
      <div class="form-column">
        <div class="signup-form-container <%= themeCss && themeCss.includes('dark') ? 'dark-theme' : 'light-theme' %>">
          <!-- Progress Indicator -->
          <div class="progress-steps">
            <div class="step active">
              <div class="step-number">1</div>
              <div class="step-label">Business Info</div>
            </div>
            <div class="step">
              <div class="step-number">2</div>
              <div class="step-label">Verification</div>
            </div>
            <div class="step">
              <div class="step-number">3</div>
              <div class="step-label">Complete</div>
            </div>
          </div>

          <!-- Flash Messages -->
          <div class="flash-container">
            <%- include('partials/massage', { success, error, info, warning, errors }) %>
          </div>

          <form id="businessSignupForm" action="/business/signup" method="POST" class="signup-form" autocomplete="on" novalidate>
            <!-- Form content remains the same as your original -->
            <!-- Business Details Section -->
            <div class="form-section">
              <div class="section-header">
                <svg class="section-icon" viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
                  <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 3c1.66 0 3 1.34 3 3s-1.34 3-3 3-3-1.34-3-3 1.34-3 3-3zm0 14.2c-2.5 0-4.71-1.28-6-3.22.03-1.99 4-3.08 6-3.08 1.99 0 5.97 1.09 6 3.08-1.29 1.94-3.5 3.22-6 3.22z" />
                </svg>
                <h3>Business Information</h3>
              </div>
              <div class="form-grid">
                <div class="form-group">
                  <label for="name" class="form-label">Business Name <span class="required">*</span></label>
                  <input id="name" type="text" name="name" placeholder="e.g., Global Enterprises Inc." autocomplete="organization" required class="form-input" />
                  <div class="form-hint">Your registered business name</div>
                </div>
                <div class="form-group">
                  <label for="email" class="form-label">Business Email <span class="required">*</span></label>
                  <input id="email" type="email" name="email" placeholder="admin@company.com" autocomplete="email" inputmode="email" required class="form-input" />
                  <div class="form-hint">Official business email address</div>
                </div>
              </div>
            </div>

            <!-- Account Security Section -->
            <div class="form-section">
              <div class="section-header">
                <svg class="section-icon" viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
                  <path fill="currentColor" d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z" />
                </svg>
                <h3>Account Security</h3>
              </div>
              <div class="form-grid">
                <div class="form-group">
                  <label for="password" class="form-label">Password <span class="required">*</span></label>
                  <div class="password-container">
                    <input id="password" type="password" name="password" placeholder="Create a strong password" autocomplete="new-password" minlength="8" required class="form-input" />
                    <button type="button" class="toggle-password" data-target="password" aria-label="Toggle password visibility">
                      <svg class="eye-icon" viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
                        <path fill="currentColor" d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z" />
                      </svg>
                    </button>
                  </div>
                  <div class="password-strength">
                    <div class="strength-bar">
                      <div class="strength-fill" id="strengthFill"></div>
                    </div>
                    <div class="strength-label">Strength: <span id="strengthText">Weak</span></div>
                  </div>
                </div>
                <div class="form-group">
                  <label class="form-label">Business Role <span class="required">*</span></label>
                  <div class="role-selector">
                    <div class="role-options">
                      <label class="role-option">
                        <input type="radio" name="role" value="seller" required />
                        <div class="role-card">
                          <svg class="role-icon" viewBox="0 0 24 24" width="22" height="22" aria-hidden="true">
                            <path fill="currentColor" d="M20 6h-4V4c0-1.11-.89-2-2-2h-4c-1.11 0-2 .89-2 2v2H4c-1.11 0-1.99.89-1.99 2L2 19c0 1.11.89 2 2 2h16c1.1 0 2-.89 2-2V8c0-1.11-.9-2-2-2zm-6 0h-4V4h4v2z" />
                          </svg>
                          <span class="role-title">Seller</span>
                          <span class="role-description">Sell products directly to customers</span>
                        </div>
                      </label>
                      <label class="role-option">
                        <input type="radio" name="role" value="supplier" required />
                        <div class="role-card">
                          <svg class="role-icon" viewBox="0 0 24 24" width="22" height="22" aria-hidden="true">
                            <path fill="currentColor" d="M20 8h-3V4H7v4H4v2h16V8zM4 14v2h16v-2H4z" />
                          </svg>
                          <span class="role-title">Supplier</span>
                          <span class="role-description">Supply products to other businesses</span>
                        </div>
                      </label>
                      <label class="role-option">
                        <input type="radio" name="role" value="buyer" required />
                        <div class="role-card">
                          <svg class="role-icon" viewBox="0 0 24 24" width="22" height="22" aria-hidden="true">
                            <path fill="currentColor" d="M7 18c-1.1 0-1.99.9-1.99 2S5.9 22 7 22s2-.9 2-2-.9-2-2-2zM1 2v2h2l3.6 7.59-1.35 2.45c-.16.28-.25.61-.25.96 0 1.1.9 2 2 2h12v-2H7.42c-.14 0-.25-.11-.25-.25l.03-.12.9-1.63h7.45c.75 0 1.41-.41 1.75-1.03l3.58-6.49c.08-.14.12-.31.12-.48 0-.55-.45-1-1-1H5.21l-.94-2H1zm16 16c-1.1 0-1.99.9-1.99 2s.89 2 1.99 2 2-.9 2-2-.9-2-2-2z" />
                          </svg>
                          <span class="role-title">Buyer</span>
                          <span class="role-description">Purchase products for business use</span>
                        </div>
                      </label>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Business Details Section -->
            <div class="form-section">
              <div class="section-header">
                <svg class="section-icon" viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
                  <path fill="currentColor" d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z" />
                </svg>
                <h3>Business Details</h3>
              </div>
              <div class="form-grid">
                <div class="form-group">
                  <label for="businessNumber" class="form-label">Business Number <span class="required">*</span></label>
                  <input id="businessNumber" type="text" name="businessNumber" placeholder="Registration/Tax ID" autocomplete="off" required class="form-input" />
                  <div class="form-hint">Official business registration number</div>
                </div>
                <div class="form-group">
                  <label for="phone" class="form-label">Business Phone <span class="required">*</span></label>
                  <div class="input-with-icon">
                    <svg class="input-icon" viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
                      <path fill="currentColor" d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z" />
                    </svg>
                    <input id="phone" type="tel" name="phone" placeholder="+1 (555) 123-4567" autocomplete="tel" required class="form-input" />
                  </div>
                </div>
                <div class="form-group">
                  <label for="country" class="form-label">Country <span class="required">*</span></label>
                  <input id="country" type="text" name="country" placeholder="Country" autocomplete="country-name" required class="form-input" />
                </div>
                <div class="form-group">
                  <label for="city" class="form-label">City <span class="required">*</span></label>
                  <input id="city" type="text" name="city" placeholder="City" autocomplete="address-level2" required class="form-input" />
                </div>
                <div class="form-group full-width">
                  <label for="address" class="form-label">Business Address <span class="required">*</span></label>
                  <input id="address" type="text" name="address" placeholder="Full business address" autocomplete="street-address" required class="form-input" />
                </div>
              </div>
            </div>

            <!-- Verification Section -->
            <div class="form-section">
              <div class="section-header">
                <svg class="section-icon" viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
                  <path fill="currentColor" d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm0 10.99h7c-.53 4.12-3.28 7.79-7 8.94V12H5V6.3l7-3.11v8.8z" />
                </svg>
                <h3>Verification</h3>
              </div>
              <div class="form-group">
                <label for="idOrPassport" class="form-label">ID or Passport Number <span class="required">*</span></label>
                <input id="idOrPassport" type="text" name="idOrPassport" placeholder="Government-issued ID number" autocomplete="off" required class="form-input" />
                <div class="form-hint">For identity verification purposes only</div>
              </div>
              <div class="terms-agreement">
                <label class="checkbox-label">
                  <input type="checkbox" id="terms" name="terms" required />
                  <span class="checkbox-custom"></span>
                  <span class="checkbox-text">I agree to the <a href="/terms" target="_blank">Terms of Service</a> and <a href="/privacy" target="_blank">Privacy Policy</a></span>
                </label>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="form-actions">
              <button type="submit" class="btn btn-primary">
                <svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
                  <path fill="currentColor" d="M9 16.17L4.83 12 3.41 13.41 9 19 21 7l-1.41-1.41z" />
                </svg>
                <span>Create Business Account</span>
              </button>
            </div>
            <div class="form-footer">
              <p>Already registered? <a href="/business/login">Sign in to your account</a></p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .signup-page {
    --blue: #2563EB;
    --purple: #7C3AED;
    --green: #22C55E;
    --black: #0F172A;
    min-height: 100vh;
    background: radial-gradient(circle at top left, #DBEAFE 0, #EEF2FF 32%, #F9FAFB 100%);
    position: relative;
    overflow-x: hidden;
    padding: 0 0 1.5rem;
  }

  .signup-page * {
    box-sizing: border-box;
  }

  /* Background blobs */
  .background-decoration {
    position: fixed;
    inset: 0;
    z-index: 0;
    pointer-events: none;
  }

  .decoration-circle {
    position: absolute;
    border-radius: 999px;
    filter: blur(60px);
    opacity: 0.38;
  }

  .circle-1 {
    width: 260px;
    height: 260px;
    background: var(--blue);
    top: -80px;
    right: -80px;
  }

  .circle-2 {
    width: 200px;
    height: 200px;
    background: var(--purple);
    bottom: -40px;
    left: -60px;
  }

  .circle-3 {
    width: 180px;
    height: 180px;
    background: var(--green);
    top: 42%;
    left: 14%;
  }

  /* Main container */
  .signup-container {
    position: relative;
    z-index: 1;
    max-width: 1200px;
    margin: 0 auto;
    padding: 1.25rem 1rem 0;
  }

  /* Header section */
  .header-section {
    margin-bottom: 2rem;
    text-align: center;
  }

  .brand-header {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.7rem;
    margin-bottom: 1rem;
  }

  .brand-logo {
    width: 38px;
    height: 38px;
    border-radius: 999px;
    background: rgba(15, 23, 42, 0.35);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .brand-mini {
    margin: 0;
    font-size: 0.72rem;
    opacity: 0.9;
    color: var(--black);
  }

  .brand-name {
    margin: 0.1rem 0 0;
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--black);
  }

  .page-header h2 {
    margin: 0 0 0.35rem;
    font-size: 1.5rem;
    color: var(--black);
  }

  .page-subtitle {
    margin: 0;
    font-size: 0.86rem;
    color: #64748B;
  }

  /* Main Grid Layout */
  .main-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  /* Benefits Column */
  .benefits-column {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .benefits-card {
    background: linear-gradient(135deg, var(--blue), var(--purple));
    color: #F9FAFB;
    border-radius: 1.25rem;
    padding: 1.5rem;
    box-shadow: 0 12px 30px rgba(15, 23, 42, 0.25);
  }

  .sidebar-welcome h3 {
    margin: 0 0 0.35rem;
    font-size: 1.2rem;
  }

  .sidebar-welcome p {
    margin: 0;
    font-size: 0.86rem;
    line-height: 1.5;
    opacity: 0.96;
  }

  /* Features */
  .features-list {
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.65rem;
  }

  .feature-item {
    display: flex;
    gap: 0.7rem;
    align-items: flex-start;
  }

  .feature-icon {
    width: 34px;
    height: 34px;
    border-radius: 0.9rem;
    background: rgba(15, 23, 42, 0.25);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .feature-content h4 {
    margin: 0 0 0.1rem;
    font-size: 0.9rem;
  }

  .feature-content p {
    margin: 0;
    font-size: 0.78rem;
    opacity: 0.9;
  }

  /* Stats */
  .stats-banner {
    margin-top: 1rem;
    border-radius: 1rem;
    padding: 0.9rem 0.8rem;
    background: rgba(15, 23, 42, 0.28);
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 0.75rem;
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    font-size: 1.2rem;
    font-weight: 700;
  }

  .stat-label {
    font-size: 0.75rem;
    opacity: 0.9;
  }

  /* Login prompt */
  .login-prompt {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.8rem;
    padding: 1rem;
    background: white;
    border-radius: 1rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .login-prompt p {
    margin: 0;
    font-size: 0.9rem;
    color: #64748B;
  }

  .btn-login {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.55rem 1.2rem;
    border-radius: 999px;
    background: linear-gradient(135deg, var(--blue), var(--purple));
    color: white;
    text-decoration: none;
    font-size: 0.8rem;
    font-weight: 600;
  }

  /* Form Column */
  .form-column {
    width: 100%;
  }

  /* Form Container */
  .signup-form-container {
    position: relative;
    background: radial-gradient(circle at top right, rgba(37,99,235,0.12) 0, rgba(124,58,237,0.08) 28%, #FFFFFF 70%);
    border-radius: 1.25rem;
    padding: 1.6rem 1.2rem 2rem;
    box-shadow: 0 12px 30px rgba(15, 23, 42, 0.18);
    border: 1px solid rgba(148, 163, 184, 0.4);
    border-top: 4px solid var(--green);
  }

  .signup-form-container::before {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: inherit;
    background: linear-gradient(135deg, rgba(37,99,235,0.12), rgba(124,58,237,0.06), rgba(34,197,94,0.05));
    opacity: 0.4;
    pointer-events: none;
  }

  .signup-form-container > * {
    position: relative;
    z-index: 1;
  }

  .dark-theme.signup-form-container {
    background: radial-gradient(circle at top right, rgba(37,99,235,0.22) 0, rgba(15,23,42,0.96) 45%, #020617 100%);
    color: #E5E7EB;
    border-color: #1E293B;
  }

  /* Progress steps */
  .progress-steps {
    display: flex;
    gap: 0.7rem;
    margin-bottom: 1.5rem;
    padding: 0.55rem;
    border-radius: 999px;
    background: linear-gradient(90deg, rgba(37,99,235,0.08), rgba(124,58,237,0.08), rgba(34,197,94,0.08));
  }

  .step {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.3rem;
    opacity: 0.6;
  }

  .step.active {
    opacity: 1;
  }

  .step-number {
    width: 26px;
    height: 26px;
    border-radius: 999px;
    background: #E5E7EB;
    color: #64748B;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.78rem;
    font-weight: 600;
  }

  .step.active .step-number {
    background: var(--blue);
    color: #F9FAFB;
    box-shadow: 0 0 0 3px rgba(37,99,235,0.25);
  }

  .step-label {
    font-size: 0.72rem;
    color: #0F172A;
    font-weight: 500;
  }

