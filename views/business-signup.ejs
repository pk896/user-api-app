<!-- views/business-signup.ejs -->
<h1>üìÑ Business Sign Up</h1>

<!-- ‚úÖ Flash Messages -->
<%- include('partials/massage', { success, error, info, warning, errors }) %>

<form 
  id="businessSignupForm"
  action="/business/signup" 
  method="POST" 
  class="auth-form <%= themeCss.includes('dark') ? 'dark-theme' : 'light-theme' %>"
  autocomplete="on"
  novalidate
>
  <div class="form-group">
    <label>Business Name <span class="required">*</span></label>
    <input 
      type="text" 
      name="name" 
      placeholder="Business Name"
      autocomplete="organization"
      required 
    />
  </div>

  <div class="form-group">
    <label>Email <span class="required">*</span></label>
    <input 
      type="email" 
      name="email" 
      placeholder="Email"
      autocomplete="email"
      required 
    />
  </div>

  <div class="form-group">
    <label>Password <span class="required">*</span></label>
    <input 
      type="password" 
      name="password" 
      placeholder="Password"
      autocomplete="new-password"
      required 
    />
  </div>

  <div class="form-group">
    <label>Role <span class="required">*</span></label>
    <select name="role" required>
      <option value="">Select a role</option>
      <option value="seller">Seller</option>
      <option value="supplier">Supplier</option>
      <option value="buyer">Buyer</option>
    </select>
  </div>

  <div class="form-group">
    <label>Business Number <span class="required">*</span></label>
    <input 
      type="text" 
      name="businessNumber" 
      placeholder="Business Registration Number"
      autocomplete="off"
      required 
    />
  </div>

  <div class="form-group">
    <label>Phone <span class="required">*</span></label>
    <input 
      type="tel" 
      name="phone" 
      placeholder="Phone Number"
      autocomplete="tel"
      required 
    />
  </div>

  <div class="form-group">
    <label>Country <span class="required">*</span></label>
    <input 
      type="text" 
      name="country" 
      placeholder="Country"
      autocomplete="country-name"
      required 
    />
  </div>

  <div class="form-group">
    <label>City <span class="required">*</span></label>
    <input 
      type="text" 
      name="city" 
      placeholder="City"
      autocomplete="address-level2"
      required 
    />
  </div>

  <div class="form-group">
    <label>Address <span class="required">*</span></label>
    <input 
      type="text" 
      name="address" 
      placeholder="Business Address"
      autocomplete="street-address"
      required 
    />
  </div>

  <div class="form-group">
    <label>ID or Passport <span class="required">*</span></label>
    <input 
      type="text" 
      name="idOrPassport" 
      placeholder="ID or Passport Number"
      autocomplete="off"
      required 
    />
  </div>

  <button type="submit" class="btn-submit">Sign Up</button>
</form>

<p class="redirect-text">
  Already have an account? 
  <a href="/business/login">Login here</a>
</p>

<!-- üåà Styles -->
<style>
  h1 {
    margin-bottom: 1rem;
    text-align: center;
    color: #111827;
  }
  .dark-theme h1 {
    color: #f9fafb;
  }

  .auth-form {
    max-width: 480px;
    margin: 1.5rem auto;
    padding: 1.5rem;
    border-radius: 10px;
    background: #ffffff;
    box-shadow: 0 3px 8px rgba(0,0,0,0.1);
    transition: background 0.3s ease, color 0.3s ease;
  }
  .dark-theme.auth-form {
    background: #1e1e1e;
    color: #f1f1f1;
    box-shadow: 0 3px 8px rgba(255,255,255,0.05);
  }

  .form-group {
    margin-bottom: 1rem;
  }
  .form-group label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.3rem;
  }

  input, select {
    width: 100%;
    padding: 0.7rem;
    border: 1px solid #ccc;
    border-radius: 6px;
    font-size: 1rem;
    transition: border 0.2s ease;
  }
  .dark-theme input, .dark-theme select {
    background: #2c2c2c;
    border: 1px solid #555;
    color: #eee;
  }
  input:focus, select:focus {
    border-color: #2563eb;
    outline: none;
  }

  .btn-submit {
    width: 100%;
    padding: 0.8rem;
    background: #111827;
    color: #fff;
    border: none;
    border-radius: 6px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s ease;
  }
  .btn-submit:hover {
    background: #1f2937;
  }

  .required {
    color: #e11d48;
  }

  .flash {
    text-align: center;
    padding: 0.6rem;
    margin-bottom: 0.7rem;
    border-radius: 5px;
    font-weight: 500;
  }
  .flash-success {
    background: #d1fae5;
    color: #065f46;
  }
  .flash-error {
    background: #fee2e2;
    color: #991b1b;
  }

  .redirect-text {
    text-align: center;
    margin-top: 1rem;
  }
  .redirect-text a {
    color: #2563eb;
    text-decoration: none;
    font-weight: 600;
  }
  .redirect-text a:hover {
    text-decoration: underline;
  }
</style>

<!-- üß© Secure Inline Script with Nonce -->
<script nonce="<%= nonce %>">
  document.addEventListener("DOMContentLoaded", () => {
    console.log("‚úÖ Layout loaded securely with CSP nonce");

    const form = document.getElementById("businessSignupForm");
    if (!form) return;

    form.addEventListener("submit", (e) => {
      const requiredFields = form.querySelectorAll("[required]");
      let valid = true;

      requiredFields.forEach((field) => {
        if (!field.value.trim()) {
          valid = false;
          field.style.borderColor = "#dc2626"; // red
        } else {
          field.style.borderColor = "#ccc";
        }
      });

      if (!valid) {
        e.preventDefault();
        alert("‚ö†Ô∏è Please fill in all required fields before submitting.");
      }
    });
  });
</script>
