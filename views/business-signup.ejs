<script nonce="<%= typeof nonce !== 'undefined' ? nonce : '' %>">
  document.addEventListener("DOMContentLoaded", () => {
    console.log("âœ… Business signup loaded with CSP nonce");

    // Password strength indicator
    const passwordInput = document.getElementById('password');
    const strengthFill = document.getElementById('strengthFill');
    const strengthText = document.getElementById('strengthText');

    if (passwordInput && strengthFill && strengthText) {
      passwordInput.addEventListener('input', function() {
        const password = this.value;
        let strength = 0;
        
        // Length check
        if (password.length >= 8) strength++;
        if (password.length >= 12) strength++;
        
        // Character type checks
        if (/[a-z]/.test(password)) strength++;
        if (/[A-Z]/.test(password)) strength++;
        if (/[0-9]/.test(password)) strength++;
        if (/[^A-Za-z0-9]/.test(password)) strength++;
        
        // Calculate percentage (max 6 checks)
        const percentage = Math.min((strength / 6) * 100, 100);
        strengthFill.style.width = percentage + '%';
        
        // Update text and color
        let label = 'Weak';
        let color = '#EF4444';
        
        if (strength >= 5) {
          label = 'Strong';
          color = '#22C55E';
        } else if (strength >= 3) {
          label = 'Good';
          color = '#F59E0B';
        } else if (strength >= 2) {
          label = 'Fair';
          color = '#F59E0B';
        }
        
        strengthText.textContent = label;
        strengthFill.style.backgroundColor = color;
      });
    }

    // Toggle password visibility
    document.querySelectorAll('.toggle-password').forEach(button => {
      const targetId = button.getAttribute('data-target');
      const input = document.getElementById(targetId);
      
      if (input) {
        button.addEventListener('click', () => {
          const isPassword = input.type === 'password';
          input.type = isPassword ? 'text' : 'password';
          
          // Update eye icon
          const eyeIcon = button.querySelector('.eye-icon');
          if (eyeIcon) {
            eyeIcon.innerHTML = isPassword ? 
              '<path fill="currentColor" d="M12 7c2.76 0 5 2.24 5 5 0 .65-.13 1.26-.36 1.83l2.92 2.92c1.51-1.26 2.7-2.89 3.43-4.75-1.73-4.39-6-7.5-11-7.5-1.4 0-2.74.25-3.98.7l2.16 2.16C10.74 7.13 11.35 7 12 7zM2 4.27l2.28 2.28.46.46C3.08 8.3 1.78 10.02 1 12c1.73 4.39 6 7.5 11 7.5 1.55 0 3.03-.3 4.38-.84l.42.42L19.73 22 21 20.73 3.27 3 2 4.27zM7.53 9.8l1.55 1.55c-.05.21-.08.43-.08.65 0 1.66 1.34 3 3 3 .22 0 .44-.03.65-.08l1.55 1.55c-.67.33-1.41.53-2.2.53-2.76 0-5-2.24-5-5 0-.79.2-1.53.53-2.2zm4.31-.78l3.15 3.15.02-.16c0-1.66-1.34-3-3-3l-.17.01z"/>' :
              '<path fill="currentColor" d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>';
          }
        });
      }
    });

    // Role selection highlighting
    document.querySelectorAll('.role-option input').forEach(radio => {
      radio.addEventListener('change', function() {
        document.querySelectorAll('.role-card').forEach(card => {
          card.style.borderColor = '#E2E8F0';
          card.style.background = 'transparent';
        });
        
        if (this.checked) {
          const card = this.nextElementSibling;
          card.style.borderColor = '#2563EB';
          card.style.background = 'rgba(37, 99, 235, 0.05)';
        }
      });
    });

    // Form validation
    const form = document.getElementById('businessSignupForm');
    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Check required fields
        const requiredFields = this.querySelectorAll('[required]');
        let isValid = true;
        let firstErrorField = null;
        
        requiredFields.forEach(field => {
          const value = field.value ? field.value.trim() : '';
          const isRadio = field.type === 'radio';
          const isCheckbox = field.type === 'checkbox';
          
          let fieldValid = false;
          
          if (isRadio) {
            const name = field.name;
            const radioGroup = document.querySelectorAll(`input[name="${name}"]`);
            fieldValid = Array.from(radioGroup).some(radio => radio.checked);
          } else if (isCheckbox) {
            fieldValid = field.checked;
          } else {
            fieldValid = value !== '';
          }
          
          if (!fieldValid) {
            isValid = false;
            
            if (!firstErrorField) {
              firstErrorField = isRadio ? 
                document.querySelector(`input[name="${field.name}"]`).closest('.role-option') :
                field;
            }
            
            // Highlight error
            if (isRadio) {
              const card = field.closest('.role-option')?.querySelector('.role-card');
              if (card) {
                card.style.borderColor = '#EF4444';
                card.style.animation = 'shake 0.5s ease';
                setTimeout(() => card.style.animation = '', 500);
              }
            } else {
              field.style.borderColor = '#EF4444';
              field.style.animation = 'shake 0.5s ease';
              setTimeout(() => field.style.animation = '', 500);
            }
          } else {
            // Remove error highlighting
            if (isRadio) {
              const card = field.closest('.role-option')?.querySelector('.role-card');
              if (card) {
                card.style.borderColor = '';
              }
            } else {
              field.style.borderColor = '';
            }
          }
        });
        
        if (!isValid) {
          // Scroll to first error
          if (firstErrorField) {
            firstErrorField.scrollIntoView({
              behavior: 'smooth',
              block: 'center'
            });
          }
          
          // Show error message
          const errorDiv = document.createElement('div');
          errorDiv.className = 'flash flash-error';
          errorDiv.innerHTML = `
            <svg class="flash-icon" viewBox="0 0 24 24" width="20" height="20">
              <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
            </svg>
            <div class="flash-content">
              <strong>Please fill in all required fields</strong>
              <p>All fields marked with * are required</p>
            </div>
          `;
          
          const flashContainer = document.querySelector('.flash-container');
          if (flashContainer) {
            flashContainer.insertBefore(errorDiv, flashContainer.firstChild);
            
            // Remove after 5 seconds
            setTimeout(() => {
              errorDiv.remove();
            }, 5000);
          }
          
          return;
        }
        
        // If all valid, submit form
        this.submit();
      });
    }

    // Add shake animation
    const style = document.createElement('style');
    style.textContent = `
      @keyframes shake {
        0%, 100% { transform: translateX(0); }
        10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
        20%, 40%, 60%, 80% { transform: translateX(5px); }
      }
    `;
    document.head.appendChild(style);
  });
</script>