<script nonce="<%= NONCE %>">
  (function(){
    // Small, safe animations (no external deps)
    const cards = document.querySelectorAll('.card');

    const on = (el, ev, fn) => el && el.addEventListener(ev, fn);

    // Intersection fade-in
    const obs = ('IntersectionObserver' in window)
      ? new IntersectionObserver((entries) => {
          entries.forEach(e => {
            if (e.isIntersecting) {
              e.target.classList.add('in');
              obs.unobserve(e.target);
            }
          });
        }, { threshold: 0.12 })
      : null;

    cards.forEach((c, idx) => {
      c.style.opacity = '0';
      c.style.transform = 'translateY(12px)';
      c.style.transition = 'opacity .45s ease, transform .45s ease';
      if (obs) obs.observe(c);
      else {
        // fallback
        setTimeout(() => {
          c.style.opacity = '1';
          c.style.transform = 'translateY(0)';
        }, 80 + idx * 60);
      }
    });

    // When "in" is added by observer
    const styleIn = () => {
      document.querySelectorAll('.card.in').forEach(c => {
        c.style.opacity = '1';
        c.style.transform = 'translateY(0)';
      });
    };
    on(document, 'scroll', styleIn);
    styleIn();
  })();
</script>
