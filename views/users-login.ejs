<!-- views/users-login.ejs -->
<section class="auth-form <%= themeCss.includes('dark') ? 'dark-theme' : 'light-theme' %>">
  <h1>üîë Log In</h1>

  <!-- Flash messages -->
  <%- include('partials/massage', { success, error, info, warning, errors }) %>

  <form id="userLoginForm" action="/users/login" method="POST" class="form-fields" novalidate>
    <!-- Email -->
    <label for="email">Email <span class="required">*</span></label>
    <input 
      type="email" 
      id="email" 
      name="email" 
      value="<%= oldInput && oldInput.email ? oldInput.email : '' %>" 
      required 
    />

    <!-- Password -->
    <label for="password">Password <span class="required">*</span></label>
    <input 
      type="password" 
      id="password" 
      name="password" 
      required 
    />

    <!-- Submit -->
    <button type="submit" class="btn-submit">üöÄ Log In</button>
  </form>

  <p class="extra-links">
    Don‚Äôt have an account? 
    <a href="/users/signup">Sign Up here</a>
  </p>

  <div class="oauth">
    <p>Or log in with:</p>
    <a href="/auth/google" class="btn-google">üîê Google</a>
  </div>
</section>

<!-- Styles -->
<style>
  .auth-form {
    max-width: 450px;
    margin: 2rem auto;
    padding: 2rem;
    border-radius: 10px;
    background: #f9f9f9;
    box-shadow: 0 3px 8px rgba(0,0,0,0.1);
  }
  .dark-theme.auth-form {
    background: #1e1e1e;
    color: #f1f1f1;
  }
  .auth-form h1 {
    text-align: center;
    margin-bottom: 1.5rem;
  }
  .form-fields {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .form-fields label {
    font-weight: bold;
  }
  .form-fields input {
    padding: 0.6rem;
    border: 1px solid #ccc;
    border-radius: 6px;
    font-size: 1rem;
  }
  .dark-theme .form-fields input {
    background: #333;
    border: 1px solid #555;
    color: #eee;
  }
  .required {
    color: red;
  }
  .btn-submit {
    margin-top: 1rem;
    padding: 0.8rem;
    background: #007bff;
    color: #fff;
    border: none;
    border-radius: 6px;
    font-size: 1rem;
    cursor: pointer;
    transition: background 0.2s ease;
  }
  .btn-submit:hover {
    background: #0056b3;
  }
  .extra-links {
    margin-top: 1.2rem;
    text-align: center;
  }
  .extra-links a {
    color: #007bff;
    text-decoration: none;
  }
  .extra-links a:hover {
    text-decoration: underline;
  }
  .oauth {
    margin-top: 1.5rem;
    text-align: center;
  }
  .btn-google {
    display: inline-block;
    margin-top: 0.5rem;
    padding: 0.6rem 1.2rem;
    background: #db4437;
    color: #fff;
    border-radius: 6px;
    text-decoration: none;
    font-size: 1rem;
    transition: background 0.2s ease;
  }
  .btn-google:hover {
    background: #b23121;
  }
</style>

<!-- üß© Secure Inline Script with Nonce -->
<script nonce="<%= nonce %>">
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("userLoginForm");
    if (!form) return;

    form.addEventListener("submit", (e) => {
      const email = form.querySelector("#email").value.trim();
      const password = form.querySelector("#password").value.trim();

      if (!email || !password) {
        e.preventDefault();
        alert("‚ö†Ô∏è Please fill in both email and password before submitting.");
        form.querySelectorAll("input[required]").forEach((input) => {
          if (!input.value.trim()) {
            input.style.borderColor = "#dc2626"; // red highlight
          } else {
            input.style.borderColor = "#ccc";
          }
        });
      }
    });
  });
</script>
