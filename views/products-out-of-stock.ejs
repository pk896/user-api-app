<section class="out-stock-page">
  <h1 class="page-title">üì¶ Out of Stock Products</h1>
  <p class="subtitle">
    These products currently have <strong>no stock</strong>. Update the stock
    quantity below to make them available again.
  </p>

  <!-- Flash messages -->
  <% (success || []).forEach(msg => { %>
    <div class="flash flash-success">‚úÖ <%= msg %></div>
  <% }) %>
  <% (error || []).forEach(msg => { %>
    <div class="flash flash-error">‚ùå <%= msg %></div>
  <% }) %>

  <% if (!products || products.length === 0) { %>
    <div class="empty-state">
      <div class="empty-icon">üéâ</div>
      <p>Great news! You have no products that are completely out of stock.</p>
    </div>
  <% } else { %>
    <div class="out-stock-grid">
      <% products.forEach(function (p) { %>
        <article class="product-card">
          <div class="product-main">
            <div class="product-image">
              <% if (p.imageUrl) { %>
                <img src="<%= p.imageUrl %>" alt="<%= p.name %>" />
              <% } else { %>
                <div class="image-placeholder">üì¶</div>
              <% } %>
            </div>

            <div class="product-info">
              <h2 class="product-name"><%= p.name || 'Unnamed product' %></h2>
              <div class="product-meta">
                <div class="meta-line">
                  <span class="meta-label">Product ID:</span>
                  <span class="meta-value"><%= p.customId %></span>
                </div>
                <div class="meta-line">
                  <span class="meta-label">Category:</span>
                  <span class="meta-value"><%= p.category || '‚Äî' %></span>
                </div>
                <div class="meta-line">
                  <span class="meta-label">Price:</span>
                  <span class="meta-value">
                    <%= (p.price != null ? Number(p.price).toFixed(2) : '0.00') %> ZAR
                  </span>
                </div>
                <div class="meta-line">
                  <span class="meta-label">Current stock:</span>
                  <span class="meta-value stock-zero">0</span>
                </div>
              </div>
            </div>
          </div>

          <!-- Inline stock update form -->
          <form
            class="stock-form"
            method="post"
            action="/products/edit/<%= p.customId %>"
          >
            <div class="stock-input-group">
              <label for="stock-<%= p.customId %>">New stock</label>
              <input
                id="stock-<%= p.customId %>"
                type="number"
                name="stock"
                min="0"
                step="1"
                required
                placeholder="e.g. 10"
                value="10"
              />
            </div>

            <button type="submit" class="btn btn-primary">
              üíæ Save Stock
            </button>

            <!-- Optional: hidden field so you know from which page update came -->
            <input type="hidden" name="source" value="out-of-stock-page" />
          </form>
        </article>
      <% }) %>
    </div>
  <% } %>
</section>

