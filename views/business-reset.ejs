<section class="auth-page mini">
  <h1 class="page-title">üîë Set a new password</h1>

  <% (success || []).forEach(msg => { %>
    <div class="flash flash-success">‚úÖ <%= msg %></div>
  <% }) %>
  <% (error || []).forEach(msg => { %>
    <div class="flash flash-error">‚ùå <%= msg %></div>
  <% }) %>

  <form
    action="/business/password/reset/<%= token %>"
    method="post"
    class="auth-form card"
  >
    <label>New password
      <input
        type="password"
        name="password"
        minlength="6"
        required
        autocomplete="new-password"
        placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
      />
    </label>

    <label>Confirm password
      <input
        type="password"
        name="confirm"
        minlength="6"
        required
        autocomplete="new-password"
        placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
      />
    </label>

    <button type="submit" class="btn xs primary wfull">Update password</button>
  </form>

  <p class="auth-switch">
    <a href="/business/login">Back to login</a>
  </p>
</section>

<style nonce="<%= nonce %>">
  .auth-page.mini{max-width:360px;margin:.9rem auto;padding:.8rem .7rem;}
  .page-title{text-align:center;font-size:1.02rem;font-weight:800;margin:0 0 .4rem;}
  .card{border-radius:10px;border:1px solid #dbeafe;padding:.7rem;}
  .auth-form{display:grid;gap:.65rem;}
  label{display:grid;gap:.35rem;font-size:.85rem;font-weight:700;}
  input{border-radius:10px;border:1px solid #bfdbfe;padding:.5rem .55rem;font-size:.86rem;}
  .btn{border-radius:8px;border:1px solid #2563eb;background:#2563eb;color:#fff;font-size:.75rem;font-weight:700;padding:.4rem .6rem;text-align:center;}
  .btn.wfull{width:100%;}
  .btn.xs{padding:.36rem .5rem;font-size:.72rem;}
  .auth-switch{text-align:center;font-size:.8rem;margin-top:.7rem;}
  .flash{margin:.35rem 0;padding:.5rem .6rem;border-radius:.6rem;font-size:.8rem;}
  .flash-success{background:#ecfdf5;border:1px solid #a7f3d0;color:#065f46;}
  .flash-error{background:#fef2f2;border:1px solid #fecaca;color:#991b1b;}
</style>
