<!-- views/users-signup.ejs -->
<section class="auth-page u-signup-page">
  <!-- Brand header -->
  <div class="u-brand-header">
    <div class="u-logo-preview">
      <div class="u-logo-color u-blue"></div>
      <div class="u-logo-color u-purple"></div>
      <div class="u-logo-color u-green"></div>
      <div class="u-logo-color u-black"></div>
    </div>
    <h1 class="u-page-title">üöÄ Join Our Platform</h1>
    <p class="u-page-subtitle">
      Use your real email so we can verify your account and send important updates.
    </p>
  </div>

  <!-- Flash messages (layout still has its own global flash, this is page-local) -->
  <% (success || []).forEach(msg => { %>
    <div class="u-flash u-flash-success">
      <svg class="u-flash-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="20 6 9 17 4 12"></polyline>
      </svg>
      <span><%= msg %></span>
    </div>
  <% }) %>

  <% (error || []).forEach(msg => { %>
    <div class="u-flash u-flash-error">
      <svg class="u-flash-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="10"></circle>
        <line x1="15" y1="9" x2="9" y2="15"></line>
        <line x1="9" y1="9" x2="15" y2="15"></line>
      </svg>
      <span><%= msg %></span>
    </div>
  <% }) %>

  <!-- Main card -->
  <div class="u-signup-card">
    <form
      action="/users/signup"
      method="post"
      class="u-signup-form"
      autocomplete="off"
      novalidate
      id="signupForm"
    >
      <!-- Section 1: Basic info -->
      <div class="u-form-section" data-step="1">
        <h3 class="u-section-title">
          <span class="u-section-number">1</span>
          Basic Information
        </h3>

        <label class="u-floating-label">
          <input
            type="email"
            name="email"
            id="email"
            required
            autocomplete="email"
            placeholder=" "
            inputmode="email"
          />
          <span class="u-label-text">Contact Email (Gmail/Outlook)</span>
          <small class="u-field-hint">
            We'll send a verification link to this address.
          </small>
          <div class="u-input-icon">‚úâÔ∏è</div>
        </label>

        <div class="u-input-group">
          <label class="u-floating-label">
            <input
              type="text"
              name="username"
              id="username"
              minlength="3"
              maxlength="30"
              required
              autocomplete="username"
              placeholder=" "
            />
            <span class="u-label-text">Username</span>
            <div class="u-input-icon">üë§</div>
          </label>
          <div class="u-char-counter" data-for="username">0/30</div>
        </div>

        <label class="u-floating-label">
          <input
            type="text"
            name="name"
            id="name"
            minlength="2"
            maxlength="80"
            required
            autocomplete="name"
            placeholder=" "
          />
          <span class="u-label-text">Full Name</span>
          <div class="u-input-icon">üìù</div>
        </label>

        <div class="u-input-group u-age-group">
          <label class="u-floating-label">
            <input
              type="number"
              name="age"
              id="age"
              min="16"
              max="120"
              step="1"
              required
              autocomplete="off"
              placeholder=" "
            />
            <span class="u-label-text">
              Age <span class="u-age-note">(must be 16+)</span>
            </span>
            <div class="u-input-icon">üéÇ</div>
          </label>
        </div>
      </div>

      <!-- Section 2: Security -->
      <div class="u-form-section" data-step="2">
        <h3 class="u-section-title">
          <span class="u-section-number">2</span>
          Security
        </h3>

        <div class="u-input-group">
          <label class="u-floating-label">
            <input
              type="password"
              name="password"
              id="password"
              required
              minlength="6"
              autocomplete="new-password"
            />
            <span class="u-label-text">Password</span>
            <div class="u-input-icon">üîí</div>
            <button
              type="button"
              class="u-toggle-password"
              data-target="password"
              aria-label="Show password"
            >
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                <circle cx="12" cy="12" r="3"></circle>
              </svg>
            </button>
          </label>

          <div class="u-password-strength">
            <div class="u-strength-bar"></div>
            <div class="u-strength-bar"></div>
            <div class="u-strength-bar"></div>
            <div class="u-strength-bar"></div>
            <span class="u-strength-text">Password strength</span>
          </div>
        </div>

        <label class="u-floating-label">
          <input
            type="password"
            name="confirm"
            id="confirm"
            required
            minlength="6"
            autocomplete="new-password"
          />
          <span class="u-label-text">Confirm Password</span>
          <div class="u-input-icon">‚úì</div>
          <button
            type="button"
            class="u-toggle-password"
            data-target="confirm"
            aria-label="Show confirm password"
          >
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
              <circle cx="12" cy="12" r="3"></circle>
            </svg>
          </button>
        </label>

        <div class="u-password-requirements">
          <p class="u-req-title">Password must include:</p>
          <ul class="u-req-list">
            <li class="u-req-item" data-check="length">At least 6 characters</li>
            <li class="u-req-item" data-check="number">One number</li>
            <li class="u-req-item" data-check="letter">One letter</li>
          </ul>
        </div>
      </div>

      <!-- Section 3: Terms -->
      <div class="u-form-section" data-step="3">
        <h3 class="u-section-title">
          <span class="u-section-number">3</span>
          Terms &amp; Conditions
        </h3>

        <label class="u-checkbox-container">
          <input type="checkbox" name="confirm16" value="1" required id="ageConfirm" />
          <span class="u-checkmark"></span>
          <span class="u-checkbox-text">
            I confirm I am 16 years or older and agree to the
            <a href="/terms" class="u-link">Terms of Service</a> and
            <a href="/privacy" class="u-link">Privacy Policy</a>.
          </span>
        </label>

        <label class="u-checkbox-container">
          <input type="checkbox" name="newsletter" value="1" id="newsletter" checked />
          <span class="u-checkmark"></span>
          <span class="u-checkbox-text">
            Send me occasional product updates and tips (optional).
          </span>
        </label>
      </div>

      <!-- Submit -->
      <button type="submit" class="u-btn u-btn-primary u-btn-full" id="submitBtn">
        <span class="u-btn-text">Create Account</span>
        <div class="u-spinner u-hidden">
          <div class="u-spinner-dot"></div>
          <div class="u-spinner-dot"></div>
          <div class="u-spinner-dot"></div>
        </div>
      </button>

      <!-- Social -->
      <div class="u-divider">
        <span class="u-divider-line"></span>
        <span class="u-divider-text">or continue with</span>
        <span class="u-divider-line"></span>
      </div>

      <div class="u-social-buttons">
        <a href="/auth/google" class="u-social-btn u-google-btn" data-nav="true" rel="noopener">
          <svg class="u-social-icon" width="18" height="18" viewBox="0 0 24 24">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          <span>Continue with Google</span>
        </a>
        <p class="u-social-note">
          We'll use your Google email and profile information.
        </p>
      </div>
    </form>

    <!-- Switch to login -->
    <p class="u-auth-switch">
      Already have an account?
      <a href="/users/login" data-nav="true" rel="noopener" class="u-login-link">
        Log in here
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </a>
    </p>

    <!-- Progress indicator -->
    <div class="u-progress-indicator">
      <div class="u-progress-bar">
        <div class="u-progress-fill"></div>
      </div>
      <div class="u-progress-steps">
        <div class="u-step u-active" data-step="1">Info</div>
        <div class="u-step" data-step="2">Security</div>
        <div class="u-step" data-step="3">Terms</div>
      </div>
    </div>
  </div>
</section>

