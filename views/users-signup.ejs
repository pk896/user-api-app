<script nonce="<%= typeof nonce !== 'undefined' ? nonce : '' %>">
  (function () {
    'use strict';

    // Simple helper for scoped query
    const root = document.querySelector('.u-signup-page');
    if (!root) return;

    const $  = (sel) => root.querySelector(sel);
    const $$ = (sel) => Array.from(root.querySelectorAll(sel));

    /* Navigation links (still normal full-page navigation) */
    $$('.u-signup-page a[data-nav="true"]').forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        window.location.href = link.href;
      });
    });

    /* Character counter for username */
    (function initCharCounter() {
      const input = $('#username');
      const counter = root.querySelector('.u-char-counter[data-for="username"]');
      if (!input || !counter) return;

      const update = () => {
        const len = input.value.length;
        counter.textContent = len + '/30';
        if (len > 25) counter.style.color = '#ef4444';
        else if (len > 20) counter.style.color = '#f59e0b';
        else counter.style.color = 'var(--text-secondary)';
      };
      input.addEventListener('input', update);
      update();
    })();

    /* Password visibility toggle */
    (function initPasswordToggle() {
      $$('.u-toggle-password').forEach(btn => {
        btn.addEventListener('click', () => {
          const targetId = btn.getAttribute('data-target');
          const field = root.querySelector('#' + targetId);
          if (!field) return;
          const isPassword = field.type === 'password';
          field.type = isPassword ? 'text' : 'password';

          const svg = btn.querySelector('svg');
          if (!svg) return;
          if (isPassword) {
            svg.innerHTML = '<path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path><line x1="1" y1="1" x2="23" y2="23"></line>';
          } else {
            svg.innerHTML = '<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle>';
          }
        });
      });
    })();

    /* Password strength + requirements */
    (function initPasswordStrength() {
      const pwdInput = $('#password');
      const bars = $$('.u-strength-bar');
      const text = $('.u-strength-text');
      const reqItems = $$('.u-req-item');

      if (!pwdInput) return;

      const updateReqs = (pwd) => {
        reqItems.forEach(item => {
          const check = item.getAttribute('data-check');
          let ok = false;
          if (check === 'length') ok = pwd.length >= 6;
          if (check === 'number') ok = /[0-9]/.test(pwd);
          if (check === 'letter') ok = /[a-zA-Z]/.test(pwd);
          item.classList.toggle('u-valid', ok);
        });
      };

      const updateStrength = () => {
        const pwd = pwdInput.value || '';
        updateReqs(pwd);

        let score = 0;
        if (pwd.length >= 6) score++;
        if (pwd.length >= 10) score++;
        if (/[A-Z]/.test(pwd) && /[a-z]/.test(pwd)) score++;
        if (/[0-9]/.test(pwd)) score++;
        if (/[^A-Za-z0-9]/.test(pwd)) score++;

        score = Math.min(score, 4);

        bars.forEach((bar, i) => {
          bar.className = 'u-strength-bar';
          if (i < score) {
            bar.classList.add('u-active');
            if (score <= 1) bar.classList.add('u-weak');
            else if (score <= 3) bar.classList.add('u-medium');
            else bar.classList.add('u-strong');
          }
        });

        if (text) {
          const labels = ['Very weak', 'Weak', 'Fair', 'Strong', 'Very strong'];
          text.textContent = labels[score] || 'Password strength';
        }
      };

      pwdInput.addEventListener('input', updateStrength);
      updateStrength();
    })();

    /* Progress indicator (changes when entering each section) */
    (function initProgress() {
      const sections = $$('.u-form-section');
      const fill = $('.u-progress-fill');
      const steps = $$('.u-step');
      if (!sections.length || !fill) return;

      const setStep = (idx) => {
        const total = sections.length;
        const percent = ((idx + 1) / total) * 100;
        fill.style.width = percent + '%';
        steps.forEach((s, i) => s.classList.toggle('u-active', i === idx));
      };

      sections.forEach((section, idx) => {
        const firstInput = section.querySelector('input');
        if (!firstInput) return;
        firstInput.addEventListener('focus', () => setStep(idx));
      });

      setStep(0);
    })();

    /* Form validation ‚Äì keep normal POST submit to server */
    (function initFormValidation() {
      const form = $('#signupForm');
      const submitBtn = $('#submitBtn');
      const btnText = submitBtn && submitBtn.querySelector('.u-btn-text');
      const spinner = submitBtn && submitBtn.querySelector('.u-spinner');

      if (!form) return;

      form.addEventListener('submit', (e) => {
        const email = ($('#email')?.value || '').trim();
        const username = ($('#username')?.value || '').trim();
        const pwd = ($('#password')?.value || '').trim();
        const confirm = ($('#confirm')?.value || '').trim();
        const ageVal = ($('#age')?.value || '').trim();
        const age = parseInt(ageVal, 10);
        const ageConfirm = $('#ageConfirm')?.checked;

        let ok = true;
        const errors = [];

        if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
          ok = false;
          errors.push('Enter a valid email address.');
        }

        if (!/^[a-zA-Z0-9._-]{3,30}$/.test(username)) {
          ok = false;
          errors.push('Username must be 3‚Äì30 characters (letters, numbers, . _ -).');
        }

        if (pwd.length < 6) {
          ok = false;
          errors.push('Password must be at least 6 characters.');
        }

        if (pwd !== confirm) {
          ok = false;
          errors.push('Passwords do not match.');
        }

        if (Number.isNaN(age) || age < 16 || age > 120) {
          ok = false;
          errors.push('Age must be between 16 and 120.');
        }

        if (!ageConfirm) {
          ok = false;
          errors.push('You must confirm that you are 16+ and agree to the terms.');
        }

        if (!ok) {
          e.preventDefault();
          alert(errors.join('\n'));
          return;
        }

        // Show loading state but allow normal form submit
        if (submitBtn && btnText && spinner) {
          submitBtn.disabled = true;
          btnText.style.opacity = '0';
          spinner.classList.remove('u-hidden');
        }
      });
    })();

    // Subtle entrance animation
    const form = root.querySelector('.u-signup-card');
    if (form) {
      form.style.opacity = '0';
      form.style.transform = 'translateY(8px)';
      setTimeout(() => {
        form.style.transition = 'opacity 0.28s ease, transform 0.28s ease';
        form.style.opacity = '1';
        form.style.transform = 'translateY(0)';
      }, 80);
    }

    // Autofocus email or username on small screens
    setTimeout(() => {
      const email = $('#email');
      if (email && !email.value) email.focus();
    }, 250);
  })();
</script>
