<!-- views/users-signup.ejs -->
<section class="auth-form <%= themeCss.includes('dark') ? 'dark-theme' : 'light-theme' %>">
  <h1>üìù Sign Up</h1>

  <!-- Flash messages -->
  <%- include('partials/massage', { success, error, info, warning, errors }) %>

  <form id="userSignupForm" action="/users/submit-form" method="POST" class="form-fields" novalidate>
    <!-- Name -->
    <label for="name">Name <span class="required">*</span></label>
    <input 
      type="text" 
      id="name" 
      name="name" 
      value="<%= oldInput && oldInput.name ? oldInput.name : '' %>" 
      required 
    />

    <!-- Email -->
    <label for="email">Email <span class="required">*</span></label>
    <input 
      type="email" 
      id="email" 
      name="email" 
      value="<%= oldInput && oldInput.email ? oldInput.email : '' %>" 
      required 
    />

    <!-- Age -->
    <label for="age">Age</label>
    <input 
      type="number" 
      id="age" 
      name="age" 
      value="<%= oldInput && oldInput.age ? oldInput.age : '' %>" 
      min="0" 
    />

    <!-- Password -->
    <label for="password">Password <span class="required">*</span></label>
    <input 
      type="password" 
      id="password" 
      name="password" 
      required 
    />

    <!-- Submit -->
    <button type="submit" class="btn-submit">‚úÖ Create Account</button>
  </form>

  <p class="extra-links">
    Already have an account? 
    <a href="/users/login">Log In here</a>
  </p>

  <div class="oauth">
    <p>Or sign up with:</p>
    <a href="/auth/google" class="btn-google">üîë Google</a>
  </div>
</section>

<!-- Styles -->
<style>
  .auth-form {
    max-width: 450px;
    margin: 2rem auto;
    padding: 2rem;
    border-radius: 10px;
    background: #f9f9f9;
    box-shadow: 0 3px 8px rgba(0,0,0,0.1);
  }
  .dark-theme.auth-form {
    background: #1e1e1e;
    color: #f1f1f1;
  }
  .auth-form h1 {
    text-align: center;
    margin-bottom: 1.5rem;
  }
  .form-fields {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .form-fields label {
    font-weight: bold;
  }
  .form-fields input {
    padding: 0.6rem;
    border: 1px solid #ccc;
    border-radius: 6px;
    font-size: 1rem;
  }
  .dark-theme .form-fields input {
    background: #333;
    border: 1px solid #555;
    color: #eee;
  }
  .required {
    color: red;
  }
  .btn-submit {
    margin-top: 1rem;
    padding: 0.8rem;
    background: #28a745;
    color: #fff;
    border: none;
    border-radius: 6px;
    font-size: 1rem;
    cursor: pointer;
    transition: background 0.2s ease;
  }
  .btn-submit:hover {
    background: #218838;
  }
  .extra-links {
    margin-top: 1.2rem;
    text-align: center;
  }
  .extra-links a {
    color: #007bff;
    text-decoration: none;
  }
  .extra-links a:hover {
    text-decoration: underline;
  }
  .oauth {
    margin-top: 1.5rem;
    text-align: center;
  }
  .btn-google {
    display: inline-block;
    margin-top: 0.5rem;
    padding: 0.6rem 1.2rem;
    background: #db4437;
    color: #fff;
    border-radius: 6px;
    text-decoration: none;
    font-size: 1rem;
    transition: background 0.2s ease;
  }
  .btn-google:hover {
    background: #b23121;
  }
</style>

<!-- üß© Secure Inline Script with Nonce -->
<script nonce="<%= nonce %>">
  document.addEventListener("DOMContentLoaded", () => {
    const form = document.getElementById("userSignupForm");
    if (!form) return;

    form.addEventListener("submit", (e) => {
      const name = form.querySelector("#name").value.trim();
      const email = form.querySelector("#email").value.trim();
      const password = form.querySelector("#password").value.trim();

      let valid = true;
      form.querySelectorAll("input[required]").forEach((input) => {
        if (!input.value.trim()) {
          valid = false;
          input.style.borderColor = "#dc2626"; // red border
        } else {
          input.style.borderColor = "#ccc";
        }
      });

      if (!valid) {
        e.preventDefault();
        alert("‚ö†Ô∏è Please fill in all required fields before submitting.");
        return;
      }

      // Basic password length check
      if (password.length < 6) {
        e.preventDefault();
        alert("üîí Password must be at least 6 characters long.");
        form.querySelector("#password").style.borderColor = "#dc2626";
      }
    });
  });
</script>
