const pageScripts = `
  document.addEventListener('DOMContentLoaded', function() {
    // Back to top button
    const backToTopBtn = document.createElement('a');
    backToTopBtn.href = '#top';
    backToTopBtn.className = 'back-to-top';
    backToTopBtn.innerHTML = '‚Üë';
    backToTopBtn.setAttribute('aria-label', 'Back to top');
    document.body.appendChild(backToTopBtn);
    
    // Show/hide back to top button
    window.addEventListener('scroll', function() {
      if (window.scrollY > 300) {
        backToTopBtn.classList.add('visible');
      } else {
        backToTopBtn.classList.remove('visible');
      }
    });
    
    // Smooth scroll to top
    backToTopBtn.addEventListener('click', function(e) {
      e.preventDefault();
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });
    
    // Add term IDs for better navigation
    const termItems = document.querySelectorAll('.term-item');
    termItems.forEach((item, index) => {
      const termId = 'term-' + (index + 1);
      item.setAttribute('id', termId);
      
      // Add anchor link to title
      const title = item.querySelector('.term-title');
      if (title) {
        const anchor = document.createElement('a');
        anchor.href = '#' + termId;
        anchor.className = 'term-anchor';
        anchor.innerHTML = 'üîó';
        anchor.style.marginLeft = '0.5rem';
        anchor.style.fontSize = '0.75rem';
        anchor.style.opacity = '0.5';
        anchor.style.textDecoration = 'none';
        anchor.style.transition = 'opacity 0.2s ease';
        
        anchor.addEventListener('mouseenter', () => {
          anchor.style.opacity = '1';
        });
        
        anchor.addEventListener('mouseleave', () => {
          anchor.style.opacity = '0.5';
        });
        
        title.appendChild(anchor);
      }
    });
    
    // Highlight current term in view
    const observerOptions = {
      root: null,
      rootMargin: '0px',
      threshold: 0.3
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.transform = 'translateY(-4px)';
          entry.target.style.boxShadow = 'var(--shadow-lg)';
          setTimeout(() => {
            entry.target.style.transform = '';
            entry.target.style.boxShadow = '';
          }, 2000);
        }
      });
    }, observerOptions);
    
    termItems.forEach(item => {
      observer.observe(item);
    });
    
    // Accept terms checkbox (for user acknowledgment)
    const acceptCheckbox = document.getElementById('acceptTerms');
    if (acceptCheckbox) {
      acceptCheckbox.addEventListener('change', function() {
        if (this.checked) {
          // Could save to localStorage or show confirmation
          console.log('Terms accepted on', new Date().toLocaleDateString());
        }
      });
    }
    
    // Mobile menu for table of contents
    const createMobileTOC = () => {
      if (window.innerWidth <= 480) {
        const toc = document.createElement('div');
        toc.className = 'mobile-toc';
        toc.innerHTML = \`
          <select class="toc-select" aria-label="Jump to term">
            <option value="">Jump to section...</option>
            \${Array.from(termItems).map(item => {
              const title = item.querySelector('.term-title')?.textContent.replace('üîó', '') || '';
              const num = item.querySelector('.term-number')?.textContent || '';
              return \`<option value="\${item.id}">\${num}. \${title}</option>\`;
            }).join('')}
          </select>
        \`;
        
        const header = document.querySelector('.terms-header');
        if (header) {
          header.appendChild(toc);
        }
        
        const select = toc.querySelector('.toc-select');
        select.addEventListener('change', function() {
          if (this.value) {
            const target = document.getElementById(this.value);
            if (target) {
              target.scrollIntoView({ behavior: 'smooth' });
              this.value = '';
            }
          }
        });
      }
    };
    
    createMobileTOC();
    window.addEventListener('resize', createMobileTOC);
  });
`;
