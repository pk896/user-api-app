<!-- views/business-change-password.ejs (or whatever filename you use) -->
<section class="auth-page mini">
  <h1 class="page-title">ğŸ”’ Change password</h1>

  <% (success || []).forEach(msg => { %>
    <div class="flash flash-success">âœ… <%= msg %></div>
  <% }) %>
  <% (error || []).forEach(msg => { %>
    <div class="flash flash-error">âŒ <%= msg %></div>
  <% }) %>

  <form action="/business/change-password" method="post" class="auth-form card">
    <label>Current password
      <div class="password-row">
        <input
          id="bp-current"
          type="password"
          name="current"
          required
          autocomplete="current-password"
          placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
        />
        <button
          type="button"
          class="toggle-password"
          data-target="bp-current"
          aria-label="Show current password"
        >ğŸ‘</button>
      </div>
    </label>

    <label>New password
      <div class="password-row">
        <input
          id="bp-next"
          type="password"
          name="next"
          required
          minlength="6"
          autocomplete="new-password"
          placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
        />
        <button
          type="button"
          class="toggle-password"
          data-target="bp-next"
          aria-label="Show new password"
        >ğŸ‘</button>
      </div>
    </label>

    <label>Confirm new password
      <div class="password-row">
        <input
          id="bp-confirm"
          type="password"
          name="confirm"
          required
          minlength="6"
          autocomplete="new-password"
          placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
        />
        <button
          type="button"
          class="toggle-password"
          data-target="bp-confirm"
          aria-label="Show confirmation password"
        >ğŸ‘</button>
      </div>
    </label>

    <button type="submit" class="btn xs primary wfull">Update password</button>
  </form>

  <p class="auth-switch">
    <a href="/business/profile">Back to profile</a>
  </p>
</section>

<style nonce="<%= nonce %>">
  .auth-page.mini {
    max-width: 360px;
    margin: .9rem auto;
    padding: .8rem .7rem;
  }

  .page-title {
    text-align: center;
    font-size: 1.02rem;
    font-weight: 800;
    margin: 0 0 .4rem;
  }

  .card {
    border-radius: 10px;
    border: 1px solid #dbeafe;
    padding: .7rem;
    background: #eff6ff; /* soft blue like login */
  }

  .auth-form {
    display: grid;
    gap: .65rem;
  }

  label {
    display: grid;
    gap: .35rem;
    font-size: .85rem;
    font-weight: 700;
  }

  .password-row {
    position: relative;
    display: flex;
    align-items: center;
  }

  input {
    border-radius: 10px;
    border: 1px solid #bfdbfe;
    padding: .5rem .55rem;
    font-size: .86rem;
    width: 100%;
  }

  input:focus {
    outline: none;
    border-color: #2563eb;
    box-shadow: 0 0 0 1px rgba(37,99,235,.35);
  }

  .toggle-password {
    position: absolute;
    right: .4rem;
    top: 50%;
    transform: translateY(-50%);
    border: none;
    background: transparent;
    cursor: pointer;
    font-size: .9rem;
    padding: 0;
    line-height: 1;
  }

  .btn {
    border-radius: 8px;
    border: 1px solid #2563eb;
    background: #2563eb;
    color: #fff;
    font-size: .75rem;
    font-weight: 700;
    padding: .4rem .6rem;
    text-align: center;
  }
  .btn.wfull { width: 100%; }
  .btn.xs { padding: .36rem .5rem; font-size: .72rem; }

  .auth-switch {
    text-align: center;
    font-size: .8rem;
    margin-top: .7rem;
  }

  .flash {
    margin: .35rem 0;
    padding: .5rem .6rem;
    border-radius: .6rem;
    font-size: .8rem;
  }
  .flash-success {
    background: #ecfdf5;
    border: 1px solid #a7f3d0;
    color: #065f46;
  }
  .flash-error {
    background: #fef2f2;
    border: 1px solid #fecaca;
    color: #991b1b;
  }
</style>

<script nonce="<%= nonce %>">
  document.addEventListener("DOMContentLoaded", () => {
    // ğŸ‘ Toggle buttons for all three fields
    document.querySelectorAll(".toggle-password").forEach((btn) => {
      const targetId = btn.getAttribute("data-target");
      const input = document.getElementById(targetId);
      if (!input) return;

      btn.addEventListener("click", () => {
        const isPwd = input.type === "password";
        input.type = isPwd ? "text" : "password";
        btn.textContent = isPwd ? "ğŸ™ˆ" : "ğŸ‘";
      });
    });
  });
</script>
