    --shadow-md: 0 4px 6px -1px rgba(34, 197, 94, 0.08);
    --shadow-lg: 0 10px 15px -3px rgba(34, 197, 94, 0.08);
    --shadow-xl: 0 20px 25px -5px rgba(34, 197, 94, 0.1);
    
