<!-- views/users-reset.ejs -->
<section class="reset-page">
  <div class="reset-container">
    <!-- Brand header -->
    <div class="reset-brand-header">
      <div class="reset-color-strip">
        <div class="reset-color-dot reset-color-blue"></div>
        <div class="reset-color-dot reset-color-purple"></div>
        <div class="reset-color-dot reset-color-green"></div>
        <div class="reset-color-dot reset-color-black"></div>
      </div>
      <div class="reset-icon-wrapper">
        <svg class="reset-main-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
          <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
          <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
          <path d="M12 15v-2" stroke-linecap="round"/>
        </svg>
      </div>
      <h1 class="reset-title">Set New Password</h1>
      <p class="reset-subtitle">
        Create a strong, secure password for your account.
      </p>
    </div>

    <!-- Flash messages -->
    <% if (success && success.length > 0) { %>
      <div class="reset-alert reset-alert-success">
        <svg class="reset-alert-icon" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <div class="reset-alert-content">
          <strong>Success:</strong> <%= success[0] %>
        </div>
      </div>
    <% } %>

    <% if (error && error.length > 0) { %>
      <div class="reset-alert reset-alert-error">
        <svg class="reset-alert-icon" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
        <div class="reset-alert-content">
          <strong>Error:</strong> <%= error[0] %>
        </div>
      </div>
    <% } %>

    <!-- Security status -->
    <div class="reset-security-status">
      <div class="reset-status-item">
        <svg class="reset-status-icon" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"/>
        </svg>
        <div class="reset-status-content">
          <strong>Secure reset process</strong>
          <p>Your reset link is valid and active.</p>
        </div>
      </div>
    </div>

    <!-- Password reset form -->
    <form action="/users/password/reset/<%= token %>" method="POST" class="reset-form">
      <div class="reset-form-card">
        <!-- New Password -->
        <div class="reset-form-group">
          <label for="reset-password" class="reset-label">
            <svg class="reset-label-icon" viewBox="0 0 20 20" fill="currentColor">
              <path d="M10 2a5 5 0 00-5 5v2a2 2 0 00-2 2v5a2 2 0 002 2h10a2 2 0 002-2v-5a2 2 0 00-2-2H7V7a3 3 0 015.905-.75 1 1 0 001.937-.5A5.002 5.002 0 0010 2z"/>
            </svg>
            New Password
          </label>
          <div class="reset-input-wrapper">
            <input
              type="password"
              id="reset-password"
              name="password"
              class="reset-input"
              placeholder="Enter your new password"
              required
              minlength="8"
              autocomplete="new-password"
            />
            <button type="button" class="reset-toggle-password" data-target="reset-password">
              Show
            </button>
          </div>
        </div>

        <!-- Confirm Password -->
        <div class="reset-form-group">
          <label for="reset-confirm" class="reset-label">
            <svg class="reset-label-icon" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
            </svg>
            Confirm Password
          </label>
          <div class="reset-input-wrapper">
            <input
              type="password"
              id="reset-confirm"
              name="confirm"
              class="reset-input"
              placeholder="Confirm your new password"
              required
              minlength="8"
              autocomplete="new-password"
            />
            <button type="button" class="reset-toggle-password" data-target="reset-confirm">
              Show
            </button>
          </div>
        </div>

        <!-- Requirements -->
        <div class="reset-requirements">
          <h3 class="reset-requirements-title">
            <svg class="reset-requirements-icon" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
            Password Requirements
          </h3>
          <div class="reset-requirements-list">
            <div class="reset-requirement">✓ At least 8 characters</div>
            <div class="reset-requirement">✓ Mix of letters and numbers</div>
            <div class="reset-requirement">✓ Make it unique</div>
          </div>
        </div>

        <!-- Submit button -->
        <button type="submit" class="reset-submit-btn">
          Set New Password
        </button>
      </div>
    </form>

    <!-- Navigation -->
    <div class="reset-navigation">
      <a href="/users/login" class="reset-nav-link">
        ← Back to Sign In
      </a>
      <span class="reset-nav-separator">•</span>
      <a href="/users/signup" class="reset-nav-link">
        Create New Account →
      </a>
    </div>
  </div>
</section>

<style nonce="<%= typeof nonce !== 'undefined' ? nonce : '' %>">
/* Page background */
.reset-page {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 1rem;
  background: linear-gradient(135deg, #0F172A 0%, #1E293B 100%);
}

.reset-container {
  width: 100%;
  max-width: 440px;
}

/* Brand header */
.reset-brand-header {
  text-align: center;
  margin-bottom: 1.75rem;
}

.reset-color-strip {
  display: flex;
  justify-content: center;
  gap: 0.375rem;
  margin-bottom: 1rem;
}

.reset-color-dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
}

.reset-color-blue   { background: #2563EB; }
.reset-color-purple { background: #7C3AED; }
.reset-color-green  { background: #22C55E; }
.reset-color-black  { background: #0F172A; border: 1px solid #475569; }

.reset-icon-wrapper {
  width: 80px;
  height: 80px;
  margin: 0 auto 1.25rem;
  background: linear-gradient(135deg, #2563EB, #7C3AED);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  box-shadow: 0 15px 40px rgba(37, 99, 235, 0.3);
}

.reset-main-icon {
  width: 36px;
  height: 36px;
}

.reset-title {
  font-size: 1.875rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  background: linear-gradient(135deg, #2563EB 0%, #7C3AED 50%, #22C55E 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.reset-subtitle {
  color: #94A3B8;
  font-size: 0.9375rem;
  line-height: 1.5;
  max-width: 300px;
  margin: 0 auto;
}

/* Alerts */
.reset-alert {
  display: flex;
  align-items: flex-start;
  gap: 0.75rem;
  padding: 0.875rem 1rem;
  border-radius: 10px;
  margin-bottom: 1.25rem;
  font-size: 0.875rem;
  line-height: 1.5;
}

.reset-alert-icon {
  width: 20px;
  height: 20px;
  flex-shrink: 0;
  margin-top: 0.125rem;
}

.reset-alert-success {
  background: rgba(34, 197, 94, 0.1);
  border: 1px solid rgba(34, 197, 94, 0.3);
  color: #BBF7D0;
}

.reset-alert-success .reset-alert-icon {
  color: #4ADE80;
}

.reset-alert-error {
  background: rgba(239, 68, 68, 0.1);
  border: 1px solid rgba(239, 68, 68, 0.3);
  color: #FECACA;
}

.reset-alert-error .reset-alert-icon {
  color: #F87171;
}

.reset-alert-content strong {
  margin-right: 0.375rem;
  font-weight: 600;
}

/* Security status */
.reset-security-status {
  margin-bottom: 1.5rem;
}

.reset-status-item {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.875rem 1rem;
  background: rgba(15, 23, 42, 0.7);
  border: 1px solid rgba(37, 99, 235, 0.2);
  border-radius: 10px;
}

.reset-status-icon {
  width: 20px;
  height: 20px;
  color: #22C55E;
  flex-shrink: 0;
}

.reset-status-content strong {
  display: block;
  font-size: 0.875rem;
  color: #F1F5F9;
  margin-bottom: 0.125rem;
}

.reset-status-content p {
  font-size: 0.75rem;
  color: #94A3B8;
}

/* Form card */
.reset-form-card {
  background: rgba(15, 23, 42, 0.9);
  border: 1px solid rgba(37, 99, 235, 0.15);
  border-radius: 16px;
  padding: 1.5rem;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.25);
  margin-bottom: 1.5rem;
}

/* Form */
.reset-form-group {
  margin-bottom: 1.25rem;
}

.reset-label {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.875rem;
  font-weight: 500;
  color: #F1F5F9;
  margin-bottom: 0.5rem;
}

.reset-label-icon {
  width: 16px;
  height: 16px;
  color: #7C3AED;
}

.reset-input-wrapper {
  display: flex;
  gap: 0.5rem;
}

/* INPUTS – this is the important part */
.reset-input,
.reset-page input[type="password"] {
  flex: 1;
  padding: 0.875rem 1rem;
  background-color: #020617 !important;  /* dark */
  border: 1px solid #1F2937 !important;
  border-radius: 10px;
  color: #F9FAFB !important;
  font-size: 0.9375rem;
  caret-color: #F9FAFB;
  transition: all 0.2s ease;
}

.reset-input::placeholder {
  color: #64748B !important;
}

.reset-input:focus,
.reset-page input[type="password"]:focus {
  outline: none !important;
  background-color: #020617 !important;
  border-color: #2563EB !important;
  box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.4) !important;
}

/* Autofill fix for Chrome/Edge */
.reset-input:-webkit-autofill,
.reset-input:-webkit-autofill:hover,
.reset-input:-webkit-autofill:focus {
  -webkit-text-fill-color: #F9FAFB !important;
  box-shadow: 0 0 0px 1000px #020617 inset !important;
  border: 1px solid #1F2937 !important;
}

/* Toggle button */
.reset-toggle-password {
  background: rgba(37, 99, 235, 0.2);
  border: 1px solid rgba(37, 99, 235, 0.3);
  border-radius: 8px;
  color: #60A5FA;
  padding: 0.875rem 1rem;
  font-size: 0.875rem;
  cursor: pointer;
  white-space: nowrap;
  min-width: 70px;
}

.reset-toggle-password:hover {
  background: rgba(37, 99, 235, 0.3);
}

/* Requirements */
.reset-requirements {
  background: rgba(15, 23, 42, 0.7);
  border: 1px solid rgba(124, 58, 237, 0.2);
  border-radius: 10px;
  padding: 1rem;
  margin-bottom: 1.5rem;
}

.reset-requirements-title {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.875rem;
  font-weight: 600;
  color: #F1F5F9;
  margin-bottom: 0.75rem;
}

.reset-requirements-icon {
  width: 16px;
  height: 16px;
  color: #7C3AED;
}

.reset-requirements-list {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.reset-requirement {
  font-size: 0.875rem;
  color: #94A3B8;
  padding-left: 1.5rem;
  position: relative;
}

.reset-requirement:before {
  content: "✓";
  position: absolute;
  left: 0;
  color: #22C55E;
}

/* Submit button */
.reset-submit-btn {
  width: 100%;
  padding: 0.875rem 1rem;
  background: linear-gradient(135deg, #2563EB, #7C3AED);
  border: none;
  border-radius: 10px;
  color: #fff;
  font-size: 0.9375rem;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
}

.reset-submit-btn:hover {
  transform: translateY(-1px);
  box-shadow: 0 12px 30px rgba(37, 99, 235, 0.3);
}

/* Navigation */
.reset-navigation {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.75rem;
  font-size: 0.875rem;
}

.reset-nav-link {
  display: inline-flex;
  align-items: center;
  gap: 0.375rem;
  color: #60A5FA;
  text-decoration: none;
  transition: color 0.2s ease;
}

.reset-nav-link:hover {
  color: #93C5FD;
  text-decoration: underline;
}

.reset-nav-separator {
  color: #475569;
  opacity: 0.6;
}

/* Small screens */
@media (max-width: 360px) {
  .reset-page {
    padding: 0.75rem;
    align-items: flex-start;
  }

  .reset-container {
    max-width: 100%;
  }

  .reset-form-card {
    padding: 1.25rem;
    border-radius: 14px;
  }

  .reset-icon-wrapper {
    width: 70px;
    height: 70px;
    margin-bottom: 1rem;
  }

  .reset-main-icon {
    width: 32px;
    height: 32px;
  }

  .reset-title {
    font-size: 1.625rem;
  }

  .reset-input-wrapper {
    flex-direction: column;
    gap: 0.75rem;
  }

  .reset-toggle-password {
    width: 100%;
    text-align: center;
  }

  .reset-submit-btn {
    padding: 0.75rem 1rem;
    font-size: 0.875rem;
  }

  .reset-navigation {
    flex-direction: column;
    gap: 0.5rem;
  }

  .reset-nav-separator {
    display: none;
  }
}
</style>

<script nonce="<%= typeof nonce !== 'undefined' ? nonce : '' %>">
// Simple password show / hide
document.addEventListener('DOMContentLoaded', function () {
  const toggleButtons = document.querySelectorAll('.reset-toggle-password');

  toggleButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      const targetId = btn.getAttribute('data-target');
      const input = document.getElementById(targetId);
      if (!input) return;

      if (input.type === 'password') {
        input.type = 'text';
        btn.textContent = 'Hide';
      } else {
        input.type = 'password';
        btn.textContent = 'Show';
      }
    });
  });
});
</script>
