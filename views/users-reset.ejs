<!-- views/users-reset.ejs -->
<section class="auth-page mini">
  <h1 class="page-title">üîë Set a new password</h1>

  <% (success || []).forEach(msg => { %>
    <div class="flash flash-success">‚úÖ <%= msg %></div>
  <% }) %>

  <% (error || []).forEach(msg => { %>
    <div class="flash flash-error">‚ùå <%= msg %></div>
  <% }) %>

  <form action="/users/password/reset/<%= token %>" method="POST" class="auth-form card">
    <div class="form-group">
      <label for="password">New password</label>
      <div class="password-row">
        <input
          id="password"
          name="password"
          type="password"
          minlength="8"
          required
          placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
          class="input"
          autocomplete="new-password"
        />
        <button
          type="button"
          class="toggle-password"
          data-target="password"
          aria-label="Show new password"
        >üëÅ</button>
      </div>
    </div>

    <div class="form-group">
      <label for="confirm">Confirm password</label>
      <div class="password-row">
        <input
          id="confirm"
          name="confirm"
          type="password"
          minlength="8"
          required
          placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
          class="input"
          autocomplete="new-password"
        />
        <button
          type="button"
          class="toggle-password"
          data-target="confirm"
          aria-label="Show confirm password"
        >üëÅ</button>
      </div>
    </div>

    <button type="submit" class="btn xs primary wfull">Update password</button>
  </form>

  <p class="muted back-link">
    <a href="/users/signin">Go to sign in</a>
  </p>
</section>

<style nonce="<%= typeof nonce !== 'undefined' ? nonce : '' %>">
  .auth-page.mini {
    max-width: 360px;
    margin: .8rem auto 1.1rem;
    padding: .7rem .65rem 1rem;
    border-radius: 14px;
    background: linear-gradient(135deg, #e0f2ff, #eff6ff);
  }

  .page-title {
    text-align: center;
    font-size: 1.02rem;
    font-weight: 800;
    margin: .1rem 0 .25rem;
  }

  .card {
    background: #ffffff;
    border: 1px solid #dbeafe;
    border-radius: 10px;
    padding: .7rem .7rem;
    box-shadow: 0 1px 4px rgba(15, 23, 42, .12);
  }

  .auth-form {
    display: grid;
    gap: .65rem;
  }

  .form-group {
    margin: 0;
    display: grid;
    gap: .3rem;
  }

  label {
    font-size: .85rem;
    font-weight: 700;
  }

  .password-row {
    position: relative;
    display: flex;
    align-items: center;
  }

  .input {
    width: 100%;
    padding: .5rem .55rem;
    border: 1px solid #bfdbfe;
    border-radius: 10px;
    font-size: .86rem;
    background: #eff6ff;
  }

  .input:focus {
    outline: none;
    border-color: #2563eb;
    box-shadow: 0 0 0 1px rgba(37, 99, 235, .35);
  }

  .toggle-password {
    position: absolute;
    right: .4rem;
    top: 50%;
    transform: translateY(-50%);
    border: none;
    background: transparent;
    cursor: pointer;
    font-size: .9rem;
    padding: 0;
    line-height: 1;
  }

  .btn {
    border: 1px solid #2563eb;
    padding: .4rem .6rem;
    border-radius: 8px;
    font-size: .75rem;
    font-weight: 700;
    text-align: center;
    background: #2563eb;
    color: #fff;
  }

  .btn.wfull { width: 100%; }
  .btn.xs { padding: .36rem .5rem; font-size: .72rem; }

  .flash {
    margin: .35rem 0;
    padding: .5rem .6rem;
    border-radius: .6rem;
    font-size: .8rem;
  }
  .flash-success {
    background: #ecfdf5;
    border: 1px solid #a7f3d0;
    color: #065f46;
  }
  .flash-error {
    background: #fef2f2;
    border: 1px solid #fecaca;
    color: #991b1b;
  }

  .muted {
    color: #555;
    margin-top: .6rem;
    font-size: .8rem;
    text-align: center;
  }

  .back-link a {
    color: #2563eb;
    text-decoration: none;
    font-weight: 600;
  }
  .back-link a:hover {
    text-decoration: underline;
  }

  @media (max-width: 360px) {
    .auth-page.mini {
      max-width: 100%;
      margin: .5rem .3rem .9rem;
      padding: .6rem .45rem .9rem;
    }
    .page-title { font-size: .98rem; }
    .input {
      font-size: .82rem;
      padding: .46rem .5rem;
    }
    .btn.xs {
      font-size: .68rem;
      padding: .32rem .44rem;
    }
  }
</style>

<script nonce="<%= typeof nonce !== 'undefined' ? nonce : '' %>">
  (function () {
    // üëÅ show/hide new + confirm password
    document.querySelectorAll('.toggle-password').forEach(btn => {
      const targetId = btn.getAttribute('data-target');
      const input = document.getElementById(targetId);
      if (!input) return;

      btn.addEventListener('click', () => {
        const isPwd = input.type === 'password';
        input.type = isPwd ? 'text' : 'password';
        btn.textContent = isPwd ? 'üôà' : 'üëÅ';
      });
    });
  })();
</script>
