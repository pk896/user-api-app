  background: var(--card);
  border-radius: var(--r16);
  padding: 14px;
  margin-bottom: 12px;
  border: 1px solid var(--line);
  box-shadow: 0 1px 3px rgba(15, 23, 42, 0.04);
  position: relative;
  overflow: hidden;
}

.dashboard-header::before {
  content: "";
  position: absolute;
  inset: 0;
  background:
    linear-gradient(90deg, rgba(124, 58, 237, 0.12), rgba(37, 99, 235, 0.08), rgba(34, 197, 94, 0.08));
