/* =========================================================
   PHK ADMIN DASHBOARD (Mobile-first, Purple dominant)
   Brand: Blue #2563EB | Purple #7C3AED | Green #22C55E | Black #0F172A
========================================================= */

:root {
  --phk-blue: #2563EB;
  --phk-purple: #7C3AED; /* dominant */
  --phk-green: #22C55E;
  --phk-black: #0F172A;

  --ink: #0F172A;
  --muted: #64748B;
  --muted2: #94A3B8;
  --line: #E2E8F0;
  --bg: #F8FAFC;

