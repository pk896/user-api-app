</style>

<script nonce="<%= PAGE_NONCE %>">
document.addEventListener('DOMContentLoaded', function() {
  // -------------------------
  // Pending count (NO route changes)
  // -------------------------
  function updatePendingCount() {
    const businessPending = parseInt('<%= pendingBusinessVerifications || 0 %>', 10) || 0;
    const ordersPending = parseInt('<%= pendingOrders || 0 %>', 10) || 0;
    const totalPending = businessPending + ordersPending;

    const pendingCountEl = document.getElementById('pendingCount');
    if (pendingCountEl) {
      pendingCountEl.textContent = String(totalPending);
      if (totalPending > 0) {
        pendingCountEl.style.color = '#7C3AED';
        pendingCountEl.style.fontWeight = '900';
      }
    }
  }

  // -------------------------
  // CSP-safe Quick Actions nav (replaces inline onclick)
  // Keeps the EXACT same paths you already had.
  // -------------------------
  document.querySelectorAll('.quick-action-btn[data-href]').forEach((btn) => {
    btn.addEventListener('click', () => {
      const href = btn.getAttribute('data-href');
      if (href) window.location.assign(href);
    });
  });

  // -------------------------
  // Card micro-hover (CSS already handles, JS not required; keep minimal)
  // -------------------------
  const alerts = document.querySelectorAll('.alert-message');
  alerts.forEach(alert => {
    setTimeout(() => {
      alert.style.opacity = '0';
      alert.style.transform = 'translateY(-6px)';
      alert.style.transition = 'opacity .25s ease, transform .25s ease';
      setTimeout(() => { alert.style.display = 'none'; }, 250);
    }, 5000);
  });

  updatePendingCount();
});
</script>
