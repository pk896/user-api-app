<h1 class="page-title">üí¨ My Conversations</h1>

<!-- ‚úÖ Flash Messages -->
<% if (success && success.length > 0) { %>
  <div class="flash flash-success"><%= success %></div>
<% } %>
<% if (error && error.length > 0) { %>
  <div class="flash flash-error"><%= error %></div>
<% } %>

<!-- üßæ Messages List -->
<div class="message-list">
  <% if (messages && messages.length > 0) { %>
    <% messages.forEach(msg => { %>
      <div class="message-item">
        <h3>üóìÔ∏è <%= new Date(msg.createdAt).toLocaleString() %></h3>

        <div class="thread">
          <% msg.thread.forEach(t => { %>
            <div class="bubble <%= t.sender === 'admin' ? 'admin' : 'business' %>">
              <p><%= t.message %></p>
              <small><%= new Date(t.timestamp).toLocaleString() %></small>
            </div>
          <% }) %>
        </div>

        <!-- ‚úèÔ∏è Reply -->
        <form
          action="/contact/business/reply/<%= msg._id %>"
          method="POST"
          class="reply-form"
        >
          <textarea name="reply" rows="2" placeholder="Write a reply..." required></textarea>
          <button type="submit" class="btn reply-btn">üì® Send Reply</button>
        </form>
      </div>
    <% }) %>
  <% } else { %>
    <p class="no-msg">No messages found.</p>
  <% } %>
</div>

<!-- üîô Back -->
<div class="back-btn">
  <a href="/business/dashboard" class="btn secondary">‚¨Ö Back to Dashboard</a>
</div>

<style>
  .page-title {
    text-align: center;
    margin: 1.2rem 0;
    font-size: 1.6rem;
    font-weight: 700;
  }
  .flash {
    max-width: 800px;
    margin: 0.5rem auto;
    padding: 0.8rem 1rem;
    border-radius: 6px;
    text-align: center;
    font-weight: 500;
  }
  .flash-success { background: #dcfce7; color: #166534; }
  .flash-error { background: #fee2e2; color: #991b1b; }

  .message-list {
    max-width: 800px;
    margin: 1rem auto;
  }
  .message-item {
    background: #fff;
    border-radius: 10px;
    padding: 1rem;
    margin-bottom: 1rem;
    box-shadow: 0 1px 6px rgba(0,0,0,0.1);
  }
  .thread {
    margin-bottom: 1rem;
  }
  .bubble {
    max-width: 80%;
    padding: 0.6rem 0.9rem;
    border-radius: 10px;
    margin-bottom: 0.4rem;
    word-wrap: break-word;
  }
  .bubble.business {
    background: #16a34a;
    color: #fff;
    align-self: flex-start;
    border-bottom-left-radius: 0;
  }
  .bubble.admin {
    background: #2563eb;
    color: #fff;
    align-self: flex-end;
    border-bottom-right-radius: 0;
  }
  .reply-form textarea {
    width: 100%;
    padding: 0.6rem;
    border-radius: 6px;
    border: 1px solid #ccc;
  }
  .btn.reply-btn {
    background: #2563eb;
    color: #fff;
    border: none;
    padding: 0.6rem 1.2rem;
    border-radius: 6px;
    margin-top: 0.4rem;
    cursor: pointer;
  }
  .btn.reply-btn:hover { background: #1d4ed8; }
  .btn.secondary {
    background: #9ca3af;
    color: #fff;
    padding: 0.6rem 1.2rem;
    border-radius: 8px;
    text-decoration: none;
  }
  .btn.secondary:hover { background: #6b7280; }
</style>
