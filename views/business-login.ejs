<!-- views/business-login.ejs -->
<section class="business-login-page">
  <!-- soft background blobs -->
  <div class="b-bg">
    <span class="b-blob b-blob-blue"></span>
    <span class="b-blob b-blob-purple"></span>
    <span class="b-blob b-blob-green"></span>
  </div>

  <div class="b-shell">
    <!-- Left / Top: brand hero -->
    <div class="b-hero">
      <div class="b-brand-row">
        <div class="b-brand-logo">
          <svg viewBox="0 0 24 24" width="26" height="26" aria-hidden="true">
            <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10
              10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5
              1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" />
          </svg>
        </div>
        <div>
          <p class="b-mini-label">Business Suite</p>
          <h1 class="b-brand-name">Unicoporate</h1>
        </div>
      </div>

      <div class="b-hero-copy">
        <h2>Business Login</h2>
        <p>
          Sign in to manage products, track sales, and connect with
          other verified businesses worldwide.
        </p>
      </div>

      <div class="b-hero-pills">
        <div class="b-pill">
          <span class="b-pill-dot b-dot-blue"></span>
          <div>
            <p class="b-pill-title">Product Management</p>
            <p class="b-pill-text">Update inventory and pricing in seconds.</p>
          </div>
        </div>
        <div class="b-pill">
          <span class="b-pill-dot b-dot-purple"></span>
          <div>
            <p class="b-pill-title">Analytics Dashboard</p>
            <p class="b-pill-text">See sales and growth at a glance.</p>
          </div>
        </div>
        <div class="b-pill">
          <span class="b-pill-dot b-dot-green"></span>
          <div>
            <p class="b-pill-title">Business Network</p>
            <p class="b-pill-text">Work with trusted partners globally.</p>
          </div>
        </div>
      </div>

      <div class="b-hero-footer">
        <p class="b-hero-small">New to Unicoporate?</p>
        <a href="/business/signup" class="b-hero-cta">
          <span class="b-hero-cta-icon">
            <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
              <path fill="currentColor"
                    d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" />
            </svg>
          </span>
          <span>Create business account</span>
        </a>
      </div>
    </div>

    <!-- Right / Bottom: login card -->
    <div class="b-card <%= themeCss && themeCss.includes('dark') ? 'theme-dark' : 'theme-light' %>">
      <header class="b-card-header">
        <h2>Sign in to your business</h2>
        <p>Use your registered business email and password.</p>
      </header>

      <!-- Flash from server -->
      <div class="b-flash-container">
        <%- include('partials/massage', { success, error, info, warning, errors }) %>
      </div>

      <form
        id="businessLoginForm"
        class="b-form"
        action="/business/login"
        method="POST"
        autocomplete="on"
        novalidate
      >
        <!-- Email -->
        <div class="b-field">
          <label for="email" class="b-label">
            Business Email <span class="b-required">*</span>
          </label>
          <div class="b-input-wrap">
            <span class="b-input-icon">
              <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
                <path fill="currentColor"
                      d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2
                         2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 14H4V8l8
                         5 8-5v10zm-8-7L4 6h16l-8 5z" />
              </svg>
            </span>
            <input
              id="email"
              type="email"
              name="email"
              class="b-input"
              placeholder="admin@company.com"
              autocomplete="username"
              inputmode="email"
              required
            />
          </div>
          <p class="b-hint">Enter your registered business email.</p>
        </div>

        <!-- Password -->
        <div class="b-field">
          <label for="password" class="b-label">
            Password <span class="b-required">*</span>
          </label>
          <div class="b-input-wrap b-input-wrap-password">
            <span class="b-input-icon">
              <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
                <path fill="currentColor"
                      d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7
                         6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2
                         2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6
                         9c-1.1 0-2-.9-2-2s.9-2 2-2
                         2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71
                         1.39-3.1 3.1-3.1 1.71 0 3.1 1.39
                         3.1 3.1v2z" />
              </svg>
            </span>
            <input
              id="password"
              type="password"
              name="password"
              class="b-input"
              placeholder="Enter your password"
              autocomplete="current-password"
              required
            />
            <button
              id="togglePassword"
              type="button"
              class="b-toggle-password"
              aria-label="Toggle password visibility"
            >
              <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
                <path fill="currentColor"
                      d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73
                         4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12
                         17c-2.76 0-5-2.24-5-5s2.24-5
                         5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3
                         1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z" />
              </svg>
            </button>
          </div>

          <div class="b-row-between b-row-small">
            <label class="b-checkbox">
              <input type="checkbox" id="remember" name="remember" />
              <span class="b-checkbox-box"></span>
              <span class="b-checkbox-label">Remember me</span>
            </label>

            <a href="/business/password/forgot" class="b-link">
              Forgot password?
            </a>
          </div>
        </div>

        <!-- Submit -->
        <button type="submit" class="b-btn b-btn-primary">
          <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
            <path fill="currentColor"
                  d="M10 17v-3H3v-4h7V7l5 5-5 5z" />
          </svg>
          <span>Sign In</span>
        </button>

        <!-- Social -->
        <div class="b-social">
          <div class="b-divider">
            <span>Or continue with</span>
          </div>
          <div class="b-social-grid">
            <button type="button" class="b-social-btn">
              <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
                <path fill="#EA4335"
                      d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92
                         c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57
                         c2.08-1.92 3.28-4.74 3.28-8.09z" />
                <path fill="#34A853"
                      d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23
                         1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99
                         20.53 7.7 23 12 23z" />
                <path fill="#FBBC05"
                      d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43
                         8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
                <path fill="#4285F4"
                      d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97
                         1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84C6.71 7.31
                         9.14 5.38 12 5.38z" />
              </svg>
              <span>Google</span>
            </button>

            <button type="button" class="b-social-btn">
              <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
                <path fill="#0A66C2"
                      d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2
                         2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14zm-9.35
                         6.63H6.88v8.37h2.77V9.63zm.18-2.75a1.68 1.68 0 0 0-1.68-1.69
                         1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69
                         1.68a1.68 1.68 0 0 0 1.68-1.68zM18.5 13.2c0-2.66-1.42-3.9-3.32-3.9a2.86
                         2.86 0 0 0-2.6 1.43h-.04v-1.22h-2.63v8.37h2.74v-4.42c0-1.17.56-1.93
                         1.66-1.93 1 0 1.45.71 1.45 1.93v4.42h2.74v-4.68z" />
              </svg>
              <span>LinkedIn</span>
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>

<style>
.business-login-page {
  --blue:   #2563EB;
  --purple: #7C3AED;
  --green:  #22C55E;
  --black:  #0F172A;

  position: relative;
  min-height: 100vh;
  padding: 0 0 1.5rem;
  background: #F1F5F9;
  overflow-x: hidden;
  box-sizing: border-box;
}

/* background blobs */
.b-bg {
  position: fixed;
  inset: 0;
  pointer-events: none;
  z-index: 0;
}
.b-blob {
  position: absolute;
  border-radius: 999px;
  filter: blur(60px);
  opacity: 0.35;
}
.b-blob-blue   { width: 260px; height: 260px; background: var(--blue);   top: -80px; right: -80px; }
.b-blob-purple { width: 200px; height: 200px; background: var(--purple); bottom: -40px; left: -60px; }
.b-blob-green  { width: 180px; height: 180px; background: var(--green);  top: 40%; left: 15%; }

/* main shell */
.b-shell {
  position: relative;
  z-index: 1;
  max-width: 960px;
  margin: 0 auto;
  padding: 1.25rem 1rem 2rem;
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.b-hero,
.b-card {
  border-radius: 1.25rem;
  box-shadow: 0 12px 30px rgba(15, 23, 42, 0.12);
}

/* hero */
.b-hero {
  background: linear-gradient(135deg, var(--blue), var(--purple));
  color: #F9FAFB;
  padding: 1.6rem 1.4rem;
}

.b-brand-row {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  margin-bottom: 1.2rem;
}
.b-brand-logo {
  width: 40px;
  height: 40px;
  border-radius: 999px;
  background: rgba(15, 23, 42, 0.26);
  display: flex;
  align-items: center;
  justify-content: center;
}
.b-mini-label {
  margin: 0;
  font-size: 0.75rem;
  opacity: 0.9;
}
.b-brand-name {
  margin: 0.1rem 0 0;
  font-size: 1.1rem;
  font-weight: 700;
}

.b-hero-copy h2 {
  margin: 0 0 0.35rem;
  font-size: 1.35rem;
}
.b-hero-copy p {
  margin: 0;
  font-size: 0.9rem;
  line-height: 1.5;
  opacity: 0.95;
}

.b-hero-pills {
  margin-top: 1.2rem;
  display: flex;
  flex-direction: column;
  gap: 0.65rem;
}
.b-pill {
  display: flex;
  gap: 0.6rem;
  padding: 0.55rem 0.7rem;
  border-radius: 0.9rem;
  background: rgba(15, 23, 42, 0.18);
}
.b-pill-title {
  margin: 0;
  font-size: 0.9rem;
  font-weight: 600;
}
.b-pill-text {
  margin: 0.1rem 0 0;
  font-size: 0.78rem;
  opacity: 0.9;
}
.b-pill-dot {
  width: 12px;
  height: 12px;
  border-radius: 999px;
  margin-top: 0.12rem;
}
.b-dot-blue   { background: var(--blue); }
.b-dot-purple { background: var(--purple); }
.b-dot-green  { background: var(--green); }

.b-hero-footer {
  margin-top: 1.1rem;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 0.6rem;
  justify-content: space-between;
}
.b-hero-small {
  margin: 0;
  font-size: 0.8rem;
  opacity: 0.9;
}
.b-hero-cta {
  display: inline-flex;
  align-items: center;
  gap: 0.45rem;
  padding: 0.55rem 0.9rem;
  border-radius: 999px;
  background: #F9FAFB;
  color: var(--black);
  text-decoration: none;
  font-size: 0.8rem;
  font-weight: 600;
}
.b-hero-cta-icon {
  width: 20px;
  height: 20px;
  border-radius: 999px;
  background: rgba(37, 99, 235, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* card */
.b-card {
  background: #FFFFFF;
  padding: 1.6rem 1.4rem 1.8rem;
}
.theme-dark.b-card {
  background: rgba(15, 23, 42, 0.95);
  color: #E5E7EB;
}
.b-card-header h2 {
  margin: 0 0 0.3rem;
  font-size: 1.3rem;
  color: var(--black);
}
.theme-dark .b-card-header h2 { color: #F9FAFB; }
.b-card-header p {
  margin: 0;
  font-size: 0.85rem;
  color: #64748B;
}
.theme-dark .b-card-header p { color: #CBD5F5; }

.b-flash-container {
  margin-top: 0.9rem;
}

/* form */
.b-form {
  margin-top: 1.1rem;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}
.b-field { width: 100%; }

.b-label {
  display: block;
  font-size: 0.86rem;
  font-weight: 600;
  color: var(--black);
  margin-bottom: 0.45rem;
}
.theme-dark .b-label { color: #E5E7EB; }

.b-required {
  color: #EF4444;
}

.b-input-wrap {
  position: relative;
  width: 100%;
}
.b-input-icon {
  position: absolute;
  top: 50%;
  left: 0.75rem;
  transform: translateY(-50%);
  color: #9CA3AF;
  pointer-events: none;
}
.b-input {
  width: 100%;
  box-sizing: border-box;
  padding: 0.7rem 0.85rem 0.7rem 2.4rem;
  border-radius: 0.75rem;
  border: 1.6px solid #E2E8F0;
  background: #FFFFFF;
  font-size: 0.9rem;
  color: var(--black);
  outline: none;
  transition: border 0.16s ease, box-shadow 0.16s ease;
}
.theme-dark .b-input {
  background: #020617;
  border-color: #1E293B;
  color: #E5E7EB;
}
.b-input:focus {
  border-color: var(--blue);
  box-shadow: 0 0 0 1px rgba(37, 99, 235, 0.25);
}

.b-input-wrap-password { display: flex; align-items: stretch; }
.b-toggle-password {
  position: absolute;
  right: 0.55rem;
  top: 50%;
  transform: translateY(-50%);
  border: none;
  background: transparent;
  padding: 0.15rem;
  color: #94A3B8;
  cursor: pointer;
}

/* hints / row */
.b-hint {
  margin: 0.35rem 0 0;
  font-size: 0.78rem;
  color: #6B7280;
}
.theme-dark .b-hint { color: #9CA3AF; }

.b-row-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.b-row-small { margin-top: 0.45rem; }

/* checkbox */
.b-checkbox {
  display: inline-flex;
  align-items: center;
  gap: 0.4rem;
  font-size: 0.8rem;
  cursor: pointer;
}
.b-checkbox input {
  display: none;
}
.b-checkbox-box {
  width: 16px;
  height: 16px;
  border-radius: 4px;
  border: 1.5px solid #CBD5F5;
  display: inline-block;
  box-sizing: border-box;
  background: #FFFFFF;
}
.b-checkbox input:checked + .b-checkbox-box {
  background: var(--blue);
  border-color: var(--blue);
  box-shadow: 0 0 0 1px rgba(37, 99, 235, 0.2);
}
.b-checkbox-label {
  color: #64748B;
}
.theme-dark .b-checkbox-label { color: #CBD5F5; }

/* link */
.b-link {
  font-size: 0.8rem;
  color: var(--blue);
  text-decoration: none;
  font-weight: 600;
}
.b-link:hover {
  text-decoration: underline;
}

/* button */
.b-btn {
  margin-top: 0.2rem;
  width: 100%;
  border: none;
  border-radius: 999px;
  padding: 0.75rem 1.1rem;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  gap: 0.45rem;
  font-size: 0.9rem;
  font-weight: 600;
  cursor: pointer;
  transition: transform 0.12s ease, box-shadow 0.12s ease, filter 0.12s ease;
}
.b-btn-primary {
  background: linear-gradient(135deg, var(--green), #16A34A);
  color: #F9FAFB;
  box-shadow: 0 8px 20px rgba(34, 197, 94, 0.35);
}
.b-btn-primary:hover {
  transform: translateY(-1px);
  filter: brightness(1.03);
}

/* social */
.b-social {
  margin-top: 1.1rem;
}
.b-divider {
  display: flex;
  align-items: center;
  gap: 0.7rem;
  font-size: 0.78rem;
  color: #9CA3AF;
}
.b-divider::before,
.b-divider::after {
  content: "";
  flex: 1;
  height: 1px;
  background: #E5E7EB;
}
.theme-dark .b-divider::before,
.theme-dark .b-divider::after {
  background: #1E293B;
}
.b-social-grid {
  margin-top: 0.8rem;
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 0.7rem;
}
.b-social-btn {
  border-radius: 0.85rem;
  border: 1.5px solid #E2E8F0;
  background: #FFFFFF;
  font-size: 0.8rem;
  padding: 0.55rem 0.6rem;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.35rem;
  cursor: pointer;
}
.theme-dark .b-social-btn {
  background: #020617;
  border-color: #1E293B;
  color: #E5E7EB;
}

/* field error */
.b-input.field-error {
  border-color: #EF4444 !important;
  box-shadow: 0 0 0 1px rgba(239, 68, 68, 0.2);
}

/* larger screens: side-by-side */
@media (min-width: 900px) {
  .b-shell {
    padding: 2.2rem 1.5rem 3rem;
    display: grid;
    grid-template-columns: minmax(0, 1.1fr) minmax(0, 1fr);
    align-items: center;
    gap: 1.8rem;
  }
}

/* tiny screens */
@media (max-width: 380px) {
  .b-hero,
  .b-card {
    border-radius: 1rem;
    padding: 1.3rem 1rem;
  }
  .b-brand-name {
    font-size: 1rem;
  }
  .b-hero-copy h2 {
    font-size: 1.2rem;
  }
}
</style>

<script nonce="<%= nonce %>">
document.addEventListener('DOMContentLoaded', function () {
  console.log('✅ Business login page loaded');

  const form = document.getElementById('businessLoginForm');
  const emailInput = document.getElementById('email');
  const passwordInput = document.getElementById('password');
  const togglePassword = document.getElementById('togglePassword');
  const rememberCheckbox = document.getElementById('remember');

  // toggle password
  if (togglePassword && passwordInput) {
    togglePassword.addEventListener('click', function () {
      const isPassword = passwordInput.type === 'password';
      passwordInput.type = isPassword ? 'text' : 'password';
    });
  }

  // basic client validation (just highlight, server still validates)
  if (form && emailInput && passwordInput) {
    form.addEventListener('submit', function (e) {
      let ok = true;

      emailInput.classList.remove('field-error');
      passwordInput.classList.remove('field-error');

      if (!emailInput.value.trim() ||
          !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(emailInput.value)) {
        ok = false;
        emailInput.classList.add('field-error');
      }

      if (!passwordInput.value.trim()) {
        ok = false;
        passwordInput.classList.add('field-error');
      }

      if (!ok) {
        e.preventDefault();
      }
    });
  }

  // remember me – save email in localStorage
  if (emailInput && rememberCheckbox) {
    const savedFlag = localStorage.getItem('businessRemember') === '1';
    const savedEmail = localStorage.getItem('businessEmail') || '';

    if (savedFlag && savedEmail) {
      emailInput.value = savedEmail;
      rememberCheckbox.checked = true;
    }

    if (form) {
      form.addEventListener('submit', function () {
        if (rememberCheckbox.checked && emailInput.value) {
          localStorage.setItem('businessRemember', '1');
          localStorage.setItem('businessEmail', emailInput.value);
        } else {
          localStorage.removeItem('businessRemember');
          localStorage.removeItem('businessEmail');
        }
      });
    }
  }
});
</script>


