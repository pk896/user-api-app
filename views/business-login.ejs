<!-- views/business-login.ejs -->
<h1>üîë Business Login</h1>

<!-- ‚úÖ Flash Messages -->
<%- include('partials/massage', { success, error, info, warning, errors }) %>

<form 
  id="businessLoginForm"
  action="/business/login" 
  method="POST" 
  class="auth-form <%= themeCss.includes('dark') ? 'dark-theme' : 'light-theme' %>"
  autocomplete="on"
  novalidate
>
  <div class="form-group">
    <label>Email <span class="required">*</span></label>
    <input 
      type="email" 
      name="email" 
      placeholder="Business Email"
      autocomplete="username"
      required 
    />
  </div>

  <div class="form-group">
    <label>Password <span class="required">*</span></label>
    <input 
      type="password" 
      name="password" 
      placeholder="Password"
      autocomplete="current-password"
      required 
    />
  </div>

  <button type="submit" class="btn-submit">Login</button>
</form>

<p class="redirect-text">
  Don‚Äôt have an account? 
  <a href="/business/signup">Sign up here</a>
</p>

<!-- üåà Styles -->
<style>
  h1 {
    margin-bottom: 1rem;
    text-align: center;
    color: #111827;
  }
  .dark-theme h1 {
    color: #f9fafb;
  }

  .auth-form {
    max-width: 420px;
    margin: 1.5rem auto;
    padding: 1.5rem;
    border-radius: 10px;
    background: #ffffff;
    box-shadow: 0 3px 8px rgba(0,0,0,0.1);
    transition: background 0.3s ease, color 0.3s ease;
  }
  .dark-theme.auth-form {
    background: #1e1e1e;
    color: #f1f1f1;
    box-shadow: 0 3px 8px rgba(255,255,255,0.05);
  }

  .form-group {
    margin-bottom: 1rem;
  }
  .form-group label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.3rem;
  }

  input {
    width: 100%;
    padding: 0.7rem;
    border: 1px solid #ccc;
    border-radius: 6px;
    font-size: 1rem;
    transition: border 0.2s ease;
  }
  .dark-theme input {
    background: #2c2c2c;
    border: 1px solid #555;
    color: #eee;
  }
  input:focus {
    border-color: #2563eb;
    outline: none;
  }

  .btn-submit {
    width: 100%;
    padding: 0.8rem;
    background: #111827;
    color: #fff;
    border: none;
    border-radius: 6px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s ease;
  }
  .btn-submit:hover {
    background: #1f2937;
  }

  .required {
    color: #e11d48;
  }

  .flash {
    text-align: center;
    padding: 0.6rem;
    margin-bottom: 0.7rem;
    border-radius: 5px;
    font-weight: 500;
  }
  .flash-success {
    background: #d1fae5;
    color: #065f46;
  }
  .flash-error {
    background: #fee2e2;
    color: #991b1b;
  }

  .redirect-text {
    text-align: center;
    margin-top: 1rem;
  }
  .redirect-text a {
    color: #2563eb;
    text-decoration: none;
    font-weight: 600;
  }
  .redirect-text a:hover {
    text-decoration: underline;
  }
</style>

<!-- üß© Secure Inline Script with Nonce -->
<script nonce="<%= nonce %>">
  document.addEventListener("DOMContentLoaded", () => {
    console.log("‚úÖ Layout loaded securely with CSP nonce");

    const form = document.getElementById("businessLoginForm");
    if (!form) return;

    form.addEventListener("submit", (e) => {
      const email = form.querySelector("input[name='email']").value.trim();
      const password = form.querySelector("input[name='password']").value.trim();

      if (!email || !password) {
        e.preventDefault();
        alert("‚ö†Ô∏è Please fill in both email and password before submitting.");
      }
    });
  });
</script>
