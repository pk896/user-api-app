<!-- views/business-login.ejs -->
<section class="auth-page mini">
  <h1 class="page-title">üîë Business Login</h1>
  <p class="page-subtitle">
    Sign in to manage your products, shipments and dashboards.
  </p>

  <!-- ‚úÖ Flash Messages -->
  <%- include('partials/massage', { success, error, info, warning, errors }) %>

  <form
    id="businessLoginForm"
    action="/business/login"
    method="POST"
    class="auth-form card <%= themeCss && themeCss.includes('dark') ? 'dark-theme' : 'light-theme' %>"
    autocomplete="on"
    novalidate
  >
    <label>Business email <span class="required">*</span>
      <input
        type="email"
        name="email"
        placeholder="you@company.com"
        autocomplete="username"
        inputmode="email"
        required
      />
    </label>

    <label>Password <span class="required">*</span>
      <div class="password-row">
        <input
          id="businessPassword"
          type="password"
          name="password"
          placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
          autocomplete="current-password"
          required
        />
        <button
          type="button"
          class="toggle-password"
          data-target="businessPassword"
          aria-label="Show password"
        >
          üëÅ
        </button>
      </div>
      <div class="field-meta">
        <a href="/business/password/forgot" class="tiny-link">Forgot?</a>
      </div>
    </label>

    <button type="submit" class="btn xs primary wfull">Log in</button>
  </form>

  <p class="auth-switch">
    Don‚Äôt have an account?
    <a href="/business/signup">Sign up here</a>
  </p>
</section>

<style nonce="<%= nonce %>">
  .auth-page.mini {
    max-width: 380px;
    margin: .9rem auto 1.2rem;
    padding: 0 .7rem;
  }

  .page-title {
    text-align: center;
    font-size: 1.05rem;
    font-weight: 800;
    margin: .2rem 0 .25rem;
    color: #0f172a;
  }
  .page-subtitle {
    text-align: center;
    font-size: .78rem;
    color: #4b5563;
    margin: 0 0 .7rem;
  }

  .card {
    background: #eff6ff;              /* soft blue background */
    border: 1px solid #bfdbfe;        /* blue border */
    border-radius: 10px;
    padding: .8rem .8rem;
    box-shadow: 0 1px 3px rgba(15,23,42,.12);
  }
  .dark-theme.card {
    background: #0b1220;
    border-color: #1d4ed8;
    color: #e5e7eb;
  }

  .auth-form {
    display: grid;
    gap: .7rem;
  }

  label {
    display: grid;
    gap: .35rem;
    font-weight: 700;
    font-size: .85rem;
  }

  .password-row {
    position: relative;
    display: flex;
    align-items: center;
  }

  input {
    border: 1px solid #93c5fd;
    border-radius: 10px;
    padding: .55rem .65rem;
    background: #ffffff;
    font-size: .9rem;
    width: 100%;
  }
  input:focus {
    outline: none;
    border-color: #2563eb;
    box-shadow: 0 0 0 1px rgba(37,99,235,.35);
  }
  .dark-theme input {
    background: #020617;
    border-color: #1e3a8a;
    color: #e5e7eb;
  }

  .toggle-password {
    position: absolute;
    right: .45rem;
    top: 50%;
    transform: translateY(-50%);
    border: none;
    background: transparent;
    cursor: pointer;
    font-size: .9rem;
    padding: 0;
    line-height: 1;
  }
  .dark-theme .toggle-password {
    color: #e5e7eb;
  }

  .btn {
    display: inline-block;
    text-align: center;
    text-decoration: none;
    border-radius: 8px;
    padding: .42rem .6rem;
    font-size: .78rem;
    font-weight: 700;
    border: 1px solid transparent;
  }
  .btn.xs { padding: .36rem .5rem; font-size: .72rem; }
  .btn.wfull { width: 100%; }
  .btn.primary {
    background: #2563eb;
    border-color: #2563eb;
    color: #ffffff;
  }
  .btn.primary:hover {
    filter: brightness(0.95);
  }

  .required { color: #e11d48; }

  .flash {
    margin: .4rem 0;
    padding: .55rem .7rem;
    border-radius: .6rem;
    font-size: .85rem;
  }
  .flash-success {
    background: #ecfdf5;
    color: #065f46;
    border: 1px solid #a7f3d0;
  }
  .flash-error {
    background: #fef2f2;
    color: #991b1b;
    border: 1px solid #fecaca;
  }

  .auth-switch {
    margin-top: .7rem;
    text-align: center;
    font-size: .85rem;
  }
  .auth-switch a {
    color: #2563eb;
    text-decoration: none;
    font-weight: 600;
  }
  .auth-switch a:hover { text-decoration: underline; }

  .field-meta {
    margin-top: .2rem;
    text-align: right;
  }
  .tiny-link {
    font-size: .78rem;
    color: #2563eb;
    text-decoration: none;
  }
  .tiny-link:hover { text-decoration: underline; }

  @media (max-width: 360px) {
    .auth-page.mini { padding: 0 .5rem; }
    .page-title { font-size: 1rem; }
    .page-subtitle { font-size: .75rem; }
    input { font-size: .85rem; padding: .5rem .6rem; }
    .btn.xs { font-size: .68rem; padding: .32rem .45rem; }
  }
</style>

<script nonce="<%= nonce %>">
  document.addEventListener("DOMContentLoaded", () => {
    console.log("‚úÖ Business login loaded with CSP nonce");

    const form = document.getElementById("businessLoginForm");
    if (form) {
      form.addEventListener("submit", (e) => {
        const email = form.querySelector("input[name='email']").value.trim();
        const password = form.querySelector("input[name='password']").value.trim();

        if (!email || !password) {
          e.preventDefault();
          alert("‚ö†Ô∏è Please fill in both email and password before submitting.");
        }
      });
    }

    // üëÅ Password visibility toggle
    document.querySelectorAll(".toggle-password").forEach((btn) => {
      const targetId = btn.getAttribute("data-target");
      const input = document.getElementById(targetId);
      if (!input) return;

      btn.addEventListener("click", () => {
        const isPwd = input.type === "password";
        input.type = isPwd ? "text" : "password";
        btn.textContent = isPwd ? "üôà" : "üëÅ";
      });
    });
  });
</script>
