<div class="login-page">
  <!-- Background Decoration -->
  <div class="background-decoration">
    <div class="decoration-circle circle-1"></div>
    <div class="decoration-circle circle-2"></div>
    <div class="decoration-circle circle-3"></div>
  </div>

  <!-- Main Content -->
  <div class="login-container">
    <!-- Left Side - Brand & Features -->
    <div class="login-hero">
      <div class="hero-content">
        <div class="brand-header">
          <div class="brand-logo">
            <svg viewBox="0 0 24 24" width="32" height="32">
              <path fill="currentColor" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
          </div>
          <h1 class="brand-name">Unicoporate</h1>
        </div>
        
        <div class="hero-welcome">
          <h2>Welcome Back</h2>
          <p>Access your business dashboard, manage products, and connect with your network.</p>
        </div>

        <div class="hero-features">
          <div class="feature-item">
            <div class="feature-icon">
              <svg viewBox="0 0 24 24" width="24" height="24">
                <path fill="currentColor" d="M20 6h-4V4c0-1.11-.89-2-2-2h-4c-1.11 0-2 .89-2 2v2H4c-1.11 0-1.99.89-1.99 2L2 19c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V8c0-1.11-.89-2-2-2zm-6 0h-4V4h4v2z"/>
              </svg>
            </div>
            <div class="feature-content">
              <h4>Product Management</h4>
              <p>Manage inventory, track sales, and update products</p>
            </div>
          </div>

          <div class="feature-item">
            <div class="feature-icon">
              <svg viewBox="0 0 24 24" width="24" height="24">
                <path fill="currentColor" d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
              </svg>
            </div>
            <div class="feature-content">
              <h4>Analytics Dashboard</h4>
              <p>Track performance with real-time insights</p>
            </div>
          </div>

          <div class="feature-item">
            <div class="feature-icon">
              <svg viewBox="0 0 24 24" width="24" height="24">
                <path fill="currentColor" d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
              </svg>
            </div>
            <div class="feature-content">
              <h4>Business Network</h4>
              <p>Connect with verified businesses worldwide</p>
            </div>
          </div>
        </div>

        <div class="hero-stats">
          <div class="stat-item">
            <div class="stat-number">10K+</div>
            <div class="stat-label">Active Businesses</div>
          </div>
          <div class="stat-item">
            <div class="stat-number">99.9%</div>
            <div class="stat-label">Uptime</div>
          </div>
        </div>

        <div class="hero-footer">
          <p>Don't have an account?</p>
          <a href="/business/signup" class="btn-signup">
            <svg viewBox="0 0 24 24" width="18" height="18">
              <path fill="currentColor" d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
            </svg>
            Create Account
          </a>
        </div>
      </div>
    </div>

    <!-- Right Side - Login Form -->
    <div class="login-form-container <%= themeCss && themeCss.includes('dark') ? 'dark-theme' : 'light-theme' %>">
      <div class="form-header">
        <h2>Business Login</h2>
        <p class="form-subtitle">Sign in to manage your business account</p>
      </div>

      <!-- Flash Messages -->
      <div class="flash-container">
        <%- include('partials/massage', { success, error, info, warning, errors }) %>
      </div>

      <form
        id="businessLoginForm"
        action="/business/login"
        method="POST"
        class="login-form"
        autocomplete="on"
        novalidate
      >
        <!-- Email Field -->
        <div class="form-group">
          <label for="email" class="form-label">
            Business Email
            <span class="required">*</span>
          </label>
          <div class="input-with-icon">
            <svg class="input-icon" viewBox="0 0 24 24" width="20" height="20">
              <path fill="currentColor" d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 14H4V8l8 5 8-5v10zm-8-7L4 6h16l-8 5z"/>
            </svg>
            <input
              id="email"
              type="email"
              name="email"
              placeholder="admin@company.com"
              autocomplete="username"
              inputmode="email"
              required
              class="form-input"
            />
          </div>
          <div class="form-hint">Enter your registered business email</div>
        </div>

        <!-- Password Field -->
        <div class="form-group">
          <label for="password" class="form-label">
            Password
            <span class="required">*</span>
          </label>
          <div class="password-container">
            <div class="input-with-icon">
              <svg class="input-icon" viewBox="0 0 24 24" width="20" height="20">
                <path fill="currentColor" d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z"/>
              </svg>
              <input
                id="password"
                type="password"
                name="password"
                placeholder="Enter your password"
                autocomplete="current-password"
                required
                class="form-input"
              />
            </div>
            <button
              type="button"
              class="toggle-password"
              data-target="password"
              aria-label="Toggle password visibility"
            >
              <svg class="eye-icon" viewBox="0 0 24 24" width="20" height="20">
                <path fill="currentColor" d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"/>
              </svg>
            </button>
          </div>
          <div class="form-actions-row">
            <label class="checkbox-label remember-me">
              <input type="checkbox" id="remember" name="remember" />
              <span class="checkbox-custom"></span>
              <span class="checkbox-text">Remember me</span>
            </label>
            <a href="/business/password/forgot" class="forgot-password">
              Forgot password?
            </a>
          </div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">
          <svg viewBox="0 0 24 24" width="20" height="20">
            <path fill="currentColor" d="M10 17v-3H3v-4h7V7l5 5-5 5z"/>
          </svg>
          Sign In
        </button>

        <!-- Social Login Options -->
        <div class="social-login">
          <div class="divider">
            <span>Or continue with</span>
          </div>
          
          <div class="social-buttons">
            <button type="button" class="social-btn google">
              <svg viewBox="0 0 24 24" width="20" height="20">
                <path fill="currentColor" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path fill="currentColor" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path fill="currentColor" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path fill="currentColor" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
              </svg>
              Google
            </button>
            <button type="button" class="social-btn linkedin">
              <svg viewBox="0 0 24 24" width="20" height="20">
                <path fill="currentColor" d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14zm-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79zM6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68zm1.39 9.94v-8.37H5.5v8.37h2.77z"/>
              </svg>
              LinkedIn
            </button>
          </div>
        </div>

        <!-- Alternative Signup -->
        <div class="form-footer">
          <p>New to Unicoporate? <a href="/business/signup">Create business account</a></p>
        </div>
      </form>
    </div>
  </div>
</div>

