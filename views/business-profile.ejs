<!-- views/business-profile.ejs -->
<h1>üè¢ My Business Profile</h1>

<!-- Flash messages -->
<% if (success && success.length > 0) { %>
  <div class="flash flash-success"><%= success %></div>
<% } %>
<% if (error && error.length > 0) { %>
  <div class="flash flash-error"><%= error %></div>
<% } %>

<div class="business-profile <%= themeCss.includes('dark') ? 'dark-theme' : 'light-theme' %>">
  <div class="profile-info">
    <p><strong>Business Name:</strong> <%= business.name %></p>
    <p><strong>Email:</strong> <%= business.email %></p>
    <p><strong>Role:</strong> <%= business.role %></p>
    <p><strong>Business Number:</strong> <%= business.businessNumber %></p>
    <p><strong>Phone:</strong> <%= business.phone %></p>
    <p><strong>Country:</strong> <%= business.country %></p>
    <p><strong>City:</strong> <%= business.city %></p>
    <p><strong>Address:</strong> <%= business.address %></p>
    <p><strong>ID / Passport:</strong> <%= business.idOrPassport %></p>
  </div>

  <div class="profile-actions">
    <!-- Edit profile -->
    <a href="/business/profile/edit" class="btn-edit">‚úèÔ∏è Edit Profile</a>

    <!-- Delete account -->
    <form 
      action="/business/profile/delete" 
      method="POST" 
      onsubmit="return confirm('‚ö†Ô∏è Are you sure you want to delete your business account? This cannot be undone.');"
      style="display:inline;"
    >
      <button type="submit" class="btn-delete">üóë Delete Business</button>
    </form>
  </div>
</div>

<style>
  .business-profile {
    margin-top: 1.5rem;
    padding: 1.5rem;
    border-radius: 10px;
    background: #f9f9f9;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  }
  .dark-theme .business-profile {
    background: #222;
    color: #eee;
  }
  .profile-info p {
    margin: 0.6rem 0;
    font-size: 1.05rem;
    line-height: 1.4;
  }
  .profile-actions {
    margin-top: 2rem;
    display: flex;
    gap: 1rem;
  }
  .btn-edit, .btn-delete {
    padding: 0.7rem 1.4rem;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-size: 1rem;
    text-decoration: none;
  }
  .btn-edit {
    background: #ffc107;
    color: #000;
  }
  .btn-edit:hover {
    background: #e0a800;
  }
  .btn-delete {
    background: #dc3545;
    color: #fff;
  }
  .btn-delete:hover {
    background: #b02a37;
  }
</style>
