  /* Meter */
  .bp-meter{
    margin-top: 12px;
    padding: 12px;
    border-radius: 16px;
    border: 1px solid rgba(124,58,237,.18);
    background: rgba(124,58,237,.07);
  }
  .meter-top{
    display:flex;
    align-items:flex-start;
    justify-content:space-between;
    gap: 10px;
  }
  .meter-title{
    display:flex;
    gap:10px;
    align-items:center;
    min-width:0;
