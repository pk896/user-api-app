<% const NONCE = (typeof nonce !== 'undefined' ? nonce : '') %>

<% const b = business || {} %>
<% const ver = (b.verification || {}) %>
<% const bank = (b.bankDetails || {}) %>

<% const payouts = (b.payouts || {}) %>
<% const ppEnabled = payouts.enabled === true %>
<% const ppEmail = String(payouts.paypalEmailMasked || payouts.paypalEmail || '').trim() %>

<% const emailVerified = !!b.isVerified %>
<% const numStatus = ((ver.status || 'pending') + '').toLowerCase() %>

<%
  // Profile completeness (simple, useful on mobile)
  const hasName = !!String(b.name || '').trim();
  const hasPhone = !!String(b.phone || '').trim();
  const hasLocation = !!String(b.city || b.country || '').trim();
  const hasAddress = !!String(b.address || '').trim();
  const hasOfficial = !!String(b.officialNumber || '').trim();
  const hasBankBasics = !!(bank.bankName || bank.accountHolderName || bank.accountNumberMasked || bank.branchCode);
  const hasPaypal = !!ppEmail;

  const checks = [
    { ok: hasName, label: 'Business name' },
    { ok: !!String(b.email || '').trim(), label: 'Business email' },
    { ok: hasPhone, label: 'Phone number' },
    { ok: hasLocation, label: 'City/Country' },
    { ok: hasAddress, label: 'Address' },
    { ok: hasOfficial, label: 'Official number' },
    { ok: (hasPaypal || hasBankBasics), label: 'Payout method' }
  ];

  const total = checks.length;
  const done = checks.filter(x => x.ok).length;
  const pct = Math.round((done / total) * 100);
  const pctSafe = Math.max(0, Math.min(100, pct));

  const businessIdText = b.internalBusinessId || String(b._id || '‚Äî');
%>

<section class="biz-profile-page">
  <div class="bp-wrap">

    <!-- Header -->
    <header class="bp-header">
      <div class="bp-header-top">

        <div class="bp-brand">
          <div class="bp-swatches" aria-label="Company colors">
            <span class="sw blue" title="Blue"></span>
            <span class="sw purple" title="Purple"></span>
            <span class="sw green" title="Green"></span>
            <span class="sw black" title="Black"></span>
          </div>

          <div class="bp-title">
            <h1>Business Profile</h1>
            <p>Manage your details, payouts and verification status</p>
          </div>
        </div>

        <div class="bp-actions">
          <a href="/business/dashboard" class="btn btn-ghost">
            <span aria-hidden="true">‚Üê</span>
            <span>Dashboard</span>
          </a>

          <% if (!emailVerified) { %>
            <a href="/business/verify-pending" class="btn btn-primary">Verify Email</a>
          <% } else { %>
            <span class="badge ok">
              <span class="dot"></span>
              Email Verified
            </span>
          <% } %>
        </div>
      </div>

      <!-- Status pills -->
      <div class="bp-pills" role="list" aria-label="Status">
        <span class="pill pill-purple" role="listitem"><%= (b.role || 'business').toUpperCase() %></span>

        <span class="pill pill-blue" role="listitem" title="Internal ID">
          ID: <span class="wrap-inline"><%= businessIdText %></span>
        </span>

        <% if (emailVerified) { %>
          <span class="pill pill-green" role="listitem">Email: Verified</span>
        <% } else { %>
          <span class="pill pill-amber" role="listitem">Email: Unverified</span>
        <% } %>

        <% if (numStatus === 'verified') { %>
          <span class="pill pill-green" role="listitem">Official No.: Verified</span>
        <% } else if (numStatus === 'rejected') { %>
          <span class="pill pill-red" role="listitem">Official No.: Rejected</span>
        <% } else { %>
          <span class="pill pill-amber" role="listitem">Official No.: Pending</span>
        <% } %>
      </div>

      <!-- Quick actions (mobile-friendly) -->
      <nav class="bp-quick" aria-label="Quick actions">
        <a class="qa qa-purple" href="/business/profile/edit-details">
          <span class="qa-ic" aria-hidden="true">‚úèÔ∏è</span>
          <span class="qa-txt">Edit Details</span>
          <span class="qa-go" aria-hidden="true">‚Ä∫</span>
        </a>
        <a class="qa qa-green" href="/business/profile/edit-bank">
          <span class="qa-ic" aria-hidden="true">üí≥</span>
          <span class="qa-txt">Bank Details</span>
          <span class="qa-go" aria-hidden="true">‚Ä∫</span>
        </a>
        <a class="qa qa-black" href="/business/change-password">
          <span class="qa-ic" aria-hidden="true">üîí</span>
          <span class="qa-txt">Password</span>
          <span class="qa-go" aria-hidden="true">‚Ä∫</span>
        </a>
      </nav>

      <!-- Profile completeness -->
      <section class="bp-meter" aria-label="Profile completeness">
        <div class="meter-top">
          <div class="meter-title">
            <span class="meter-ic" aria-hidden="true">üìå</span>
            <div>
              <strong>Profile completeness</strong>
              <div class="meter-sub"><%= done %>/<%= total %> completed</div>
            </div>
          </div>
          <div class="meter-pct"><%= pctSafe %>%</div>
        </div>

        <div class="meter-bar" role="progressbar" aria-valuenow="<%= pctSafe %>" aria-valuemin="0" aria-valuemax="100">
          <div class="meter-fill" style="width:<%= pctSafe %>%"></div>
        </div>

        <div class="meter-checks" role="list" aria-label="Checklist">
          <% checks.forEach(function(c){ %>
            <span class="mchip <%= c.ok ? 'mchip-ok' : 'mchip-warn' %>" role="listitem">
              <span class="mchip-dot" aria-hidden="true"></span>
              <%= c.label %>
            </span>
          <% }) %>
        </div>

        <% if (pctSafe < 60) { %>
          <div class="meter-hint">
            Tip: complete your profile to unlock smoother payouts & faster verification.
          </div>
        <% } %>
      </section>
    </header>

    <!-- Grid -->
    <div class="bp-grid">

      <!-- Overview -->
      <article class="card card-purple">
        <div class="card-head">
          <div class="card-head-left">
            <div class="ic ic-purple" aria-hidden="true">üè¢</div>
            <div>
              <h2>Business Overview</h2>
              <p class="muted">Your public and contact details</p>
            </div>
          </div>
          <span class="tag tag-purple">Details</span>
        </div>

        <div class="card-body">
          <div class="row">
            <span class="k">Name</span>
            <span class="v wrap"><%= b.name || '‚Äî' %></span>
          </div>
          <div class="row">
            <span class="k">Email</span>
            <span class="v wrap"><%= b.email || '‚Äî' %></span>
          </div>
          <div class="row">
            <span class="k">Phone</span>
            <span class="v wrap"><%= b.phone || '‚Äî' %></span>
          </div>
          <div class="row">
            <span class="k">Location</span>
            <span class="v wrap"><%= [b.city, b.country].filter(Boolean).join(', ') || '‚Äî' %></span>
          </div>
          <div class="row">
            <span class="k">Address</span>
            <span class="v wrap"><%= b.address || '‚Äî' %></span>
          </div>
          <div class="row">
            <span class="k">Member Since</span>
            <span class="v">
              <%= b.createdAt ? new Date(b.createdAt).toLocaleDateString('en-ZA', { year:'numeric', month:'short', day:'numeric' }) : '‚Äî' %>
            </span>
          </div>
        </div>

        <div class="card-foot">
          <a href="/business/profile/edit-details" class="btn btn-outline">Edit Business Details</a>
          <% if (!hasPhone || !hasAddress) { %>
            <p class="note">
              Missing info: <%= !hasPhone ? 'phone' : '' %><%= (!hasPhone && !hasAddress) ? ' and ' : '' %><%= !hasAddress ? 'address' : '' %>.
              Add them to look more professional to buyers.
            </p>
          <% } %>
        </div>
      </article>

      <!-- Verification -->
      <article class="card card-blue">
        <div class="card-head">
          <div class="card-head-left">
            <div class="ic ic-blue" aria-hidden="true">‚úÖ</div>
            <div>
              <h2>Verification Status</h2>
              <p class="muted">Email + official number checks</p>
            </div>
          </div>

          <% if (emailVerified && numStatus === 'verified') { %>
            <span class="tag tag-green">Complete</span>
          <% } else { %>
            <span class="tag tag-amber">Action</span>
          <% } %>
        </div>

        <div class="card-body">
          <div class="row">
            <span class="k">Email Status</span>
            <span class="v">
              <% if (emailVerified) { %>
                <span class="chip chip-green">Verified</span>
              <% } else { %>
                <span class="chip chip-amber">Pending</span>
              <% } %>
            </span>
          </div>

          <div class="row">
            <span class="k">Official Number</span>
            <span class="v wrap"><%= b.officialNumber || '‚Äî' %></span>
          </div>

          <div class="row">
            <span class="k">Number Type</span>
            <span class="v wrap"><%= b.officialNumberType || 'OTHER' %></span>
          </div>

          <div class="row">
            <span class="k">Verification</span>
            <span class="v">
              <% if (numStatus === 'verified') { %>
                <span class="chip chip-green">Verified</span>
              <% } else if (numStatus === 'rejected') { %>
                <span class="chip chip-red">Rejected</span>
              <% } else { %>
                <span class="chip chip-amber">Pending Review</span>
              <% } %>
            </span>
          </div>
        </div>

        <div class="card-foot">
          <% if (!emailVerified) { %>
            <a href="/business/verify-pending" class="btn btn-primary">Verify Email Address</a>
            <p class="note">Tip: Check your spam/junk folder too.</p>
          <% } else if (numStatus === 'rejected') { %>
            <div class="msg msg-red">
              Your official number was rejected. Update your details and wait for admin review.
            </div>
            <a href="/business/profile/edit-details" class="btn btn-outline">Update Official Number</a>
          <% } else if (numStatus !== 'verified') { %>
            <div class="msg msg-amber">
              Official number is pending admin review. This usually takes 1‚Äì2 business days.
            </div>
          <% } else { %>
            <div class="msg msg-green">
              All verifications are complete ‚úÖ
            </div>
          <% } %>
        </div>
      </article>

      <!-- Bank / Payouts -->
      <article class="card card-green">
        <div class="card-head">
          <div class="card-head-left">
            <div class="ic ic-green" aria-hidden="true">üè¶</div>
            <div>
              <h2>Payouts &amp; Bank</h2>
              <p class="muted">Secure preview (masked)</p>
            </div>
          </div>
          <span class="tag tag-green">Payouts</span>
        </div>

        <div class="card-body">
          <div class="row">
            <span class="k">Payout Method</span>
            <span class="v"><%= String(bank.payoutMethod || 'bank').toUpperCase() %></span>
          </div>

          <div class="row">
            <span class="k">PayPal Payouts</span>
            <span class="v">
              <% if (ppEnabled && ppEmail) { %>
                <span class="chip chip-green">Enabled</span>
              <% } else if (!ppEnabled && ppEmail) { %>
                <span class="chip chip-amber">Saved (Disabled)</span>
              <% } else { %>
                <span class="chip chip-red">Not Set</span>
              <% } %>
            </span>
          </div>

          <div class="row">
            <span class="k">PayPal Email</span>
            <span class="v wrap"><%= ppEmail ? ppEmail : '‚Äî' %></span>
          </div>

          <% if (!ppEmail) { %>
            <div class="hint hint-purple">
              Add your PayPal email in <a href="/business/profile/edit-details">Edit Business Details</a> to receive seller payouts.
            </div>
          <% } else if (!ppEnabled) { %>
            <div class="hint hint-amber">
              Your PayPal email is saved but payouts are disabled. Enable payouts in <a href="/business/profile/edit-details">Edit Business Details</a>.
            </div>
          <% } else { %>
            <div class="hint hint-green">
              Payouts are enabled ‚Äî we‚Äôll use this PayPal email for seller payouts.
            </div>
          <% } %>

          <div class="row">
            <span class="k">Bank Name</span>
            <span class="v wrap"><%= bank.bankName || '‚Äî' %></span>
          </div>

          <div class="row">
            <span class="k">Account Holder</span>
            <span class="v wrap"><%= bank.accountHolderName || '‚Äî' %></span>
          </div>

          <div class="row">
            <span class="k">Account</span>
            <span class="v"><%= bank.accountNumberMasked || '‚Äî' %></span>
          </div>

          <div class="row">
            <span class="k">Branch Code</span>
            <span class="v wrap"><%= bank.branchCode || '‚Äî' %></span>
          </div>

          <div class="row">
            <span class="k">Account Type</span>
            <span class="v wrap"><%= bank.accountType || '‚Äî' %></span>
          </div>

          <div class="row">
            <span class="k">Currency</span>
            <span class="v"><%= bank.currency || '‚Äî' %></span>
          </div>

          <div class="snapshot">
            <div class="snap-title">Latest Bank Snapshot</div>
            <div class="snap-grid">
              <div class="snap-item">
                <span class="k">SWIFT</span>
                <span class="v wrap"><%= bank.swiftCode || '‚Äî' %></span>
              </div>
              <div class="snap-item">
                <span class="k">IBAN</span>
                <span class="v wrap">
                  <% const iban = String(bank.iban || ''); %>
                  <%= iban ? ('‚Ä¢‚Ä¢‚Ä¢‚Ä¢ ' + iban.slice(-6)) : '‚Äî' %>
                </span>
              </div>
              <div class="snap-item">
                <span class="k">Last Updated</span>
                <span class="v wrap">
                  <%= bank.updatedAt ? new Date(bank.updatedAt).toLocaleString('en-ZA') : '‚Äî' %>
                </span>
              </div>
            </div>
          </div>
        </div>

        <div class="card-foot">
          <a href="/business/profile/edit-bank" class="btn btn-outline">Edit Bank Details</a>
          <p class="note">Only masked values are displayed on this page.</p>
        </div>
      </article>
    </div>

    <!-- Privacy & Security -->
    <section class="sec">
      <div class="sec-head">
        <h2>Privacy &amp; Security</h2>
        <p>Use the links below to manage your account safely.</p>
      </div>

      <div class="sec-grid">
        <a href="/business/profile/edit-details" class="sec-item sec-purple">
          <div class="sec-ic">‚úèÔ∏è</div>
          <div class="sec-txt">
            <h3>Edit Business Details</h3>
            <p>Update name, email, address, and official number</p>
          </div>
          <div class="sec-go">‚Ä∫</div>
        </a>

        <a href="/business/profile/edit-bank" class="sec-item sec-green">
          <div class="sec-ic">üí≥</div>
          <div class="sec-txt">
            <h3>Bank Details</h3>
            <p>Update bank, holder, and payout method</p>
          </div>
          <div class="sec-go">‚Ä∫</div>
        </a>

        <a href="/business/change-password" class="sec-item sec-black">
          <div class="sec-ic">üîí</div>
          <div class="sec-txt">
            <h3>Change Password</h3>
            <p>Update your password securely</p>
          </div>
          <div class="sec-go">‚Ä∫</div>
        </a>

        <a href="/business/profile/edit" class="sec-item sec-blue">
          <div class="sec-ic">‚öôÔ∏è</div>
          <div class="sec-txt">
            <h3>Full Profile Editor</h3>
            <p>Advanced editor for all profile fields</p>
          </div>
          <div class="sec-go">‚Ä∫</div>
        </a>
      </div>

      <!-- Danger zone -->
      <div class="danger">
        <div class="danger-head">
          <h3>Danger Zone</h3>
          <p>Permanent actions that cannot be undone.</p>
        </div>

        <div class="danger-actions">
          <a href="/business/profile/edit" class="btn btn-danger">Manage Account Settings</a>
          <p class="note">Deleting your business account is permanent and cannot be recovered.</p>
        </div>
      </div>
    </section>

  </div>
</section>

<style nonce="<%= NONCE %>">
