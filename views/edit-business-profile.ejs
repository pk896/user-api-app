<h1>‚úèÔ∏è Edit Business Profile</h1>

<!-- Flash messages -->
<% if (success && success.length > 0) { %>
  <div class="flash flash-success"><%= success %></div>
<% } %>
<% if (error && error.length > 0) { %>
  <div class="flash flash-error"><%= error %></div>
<% } %>

<form 
  action="/business/profile/edit" 
  method="POST" 
  class="business-form <%= themeCss.includes('dark') ? 'dark-theme' : 'light-theme' %>"
>
  <label for="name">Business Name <span class="required">*</span></label>
  <input type="text" id="name" name="name" value="<%= business.name %>" required />

  <label for="phone">Phone <span class="required">*</span></label>
  <input type="text" id="phone" name="phone" value="<%= business.phone %>" required />

  <label for="country">Country <span class="required">*</span></label>
  <input type="text" id="country" name="country" value="<%= business.country %>" required />

  <label for="city">City <span class="required">*</span></label>
  <input type="text" id="city" name="city" value="<%= business.city %>" required />

  <label for="address">Address <span class="required">*</span></label>
  <input type="text" id="address" name="address" value="<%= business.address %>" required />

  <label for="password">New Password <small>(leave blank to keep current)</small></label>
  <input type="password" id="password" name="password" placeholder="Enter new password" />

  <button type="submit" class="btn-save">üíæ Save Changes</button>
  <a href="/business/profile" class="btn-cancel">‚ùå Cancel</a>
</form>

<style>
  .business-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1.5rem;
    padding: 1rem;
    border-radius: 8px;
    background: #f9f9f9;
  }
  .dark-theme .business-form {
    background: #222;
    color: #eee;
  }
  .business-form label {
    font-weight: bold;
    margin-bottom: 0.3rem;
  }
  .business-form input {
    padding: 0.6rem;
    border: 1px solid #ccc;
    border-radius: 6px;
    font-size: 1rem;
    width: 100%;
  }
  .dark-theme .business-form input {
    background: #333;
    border: 1px solid #555;
    color: #eee;
  }
  .business-form .required {
    color: red;
  }
  .btn-save, .btn-cancel {
    padding: 0.7rem 1.3rem;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    font-size: 1rem;
    text-decoration: none;
    text-align: center;
  }
  .btn-save {
    background: #28a745;
    color: #fff;
  }
  .btn-save:hover {
    background: #218838;
  }
  .btn-cancel {
    background: #6c757d;
    color: #fff;
  }
  .btn-cancel:hover {
    background: #5a6268;
  }
</style>
