{
  "editor.formatOnSave": true,

  // Run ESLint fixes only when you save a file that explicitly supports it
  // (prevents slow/duplicate actions). Use "always" if you want it on every save.
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Let Prettier handle formatting
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Apply to JS/JSX (add TS/TSX if you use them)
  "eslint.validate": ["javascript", "javascriptreact"],

  // Optional: per-language default formatter
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" }
}
